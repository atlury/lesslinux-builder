<llpackages>
	<package 
		name="cross-linux-headers"
		version="3.14.28"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="fc777520e5976caf0d5513502b8156f73748e379">linux-3.14.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="aebbe1abb9df54277f8069522dad3eb8bb6aceec">patch-3.14.28.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20150109" interval="30" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.14.29." />
					<atext linktext="patch-3.14.30." />
					<atext linktext="patch-3.14.31." />
					<atext linktext="patch-3.14.32." />
					<atext linktext="patch-3.14.33." />
					<atext linktext="patch-3.14.34." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>which</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.14.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd linux-3.14
			unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv -v linux-3.14 linux-${PKGVERSION}
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			
			cd linux-${PKGVERSION}
			make mrproper
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			
			cd linux-${PKGVERSION}
			make INSTALL_HDR_PATH=dest headers_install
			find dest/include \( -name .install -o -name ..install.cmd \) -delete
			
			for tgt in crosstools/i486-linux-uclibc crosstools-amd64/amd64-linux-uclibc \
				crosstools-ia32-musl/i386-linux-musl crosstools-amd64-musl/x86_64-linux-musl ; do
				mkdir -p ${TGTDIR}/usr/local/${tgt}/include
				cp -rv dest/include/* ${TGTDIR}/usr/local/${tgt}/include
				ln -s . ${TGTDIR}/usr/local/${tgt}/usr
			done
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
