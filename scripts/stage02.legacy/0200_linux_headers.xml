<llpackages>
	<package 
		name="linux_headers"
		version="3.14.28"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="fc777520e5976caf0d5513502b8156f73748e379">linux-3.14.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="aebbe1abb9df54277f8069522dad3eb8bb6aceec">patch-3.14.28.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20150109" interval="30" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.14.29." />
					<atext linktext="patch-3.14.30." />
					<atext linktext="patch-3.14.31." />
					<atext linktext="patch-3.14.32." />
					<atext linktext="patch-3.14.33." />
					<atext linktext="patch-3.14.34." />
				</page>
			</check>
		</sources>
		<builddeps>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.14.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd linux-3.14
			[ -f ${SRCDIR}/patch-${PKGVERSION}.xz ] && unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv -v linux-3.14 linux-${PKGVERSION}
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			
			cd linux-${PKGVERSION}
			make mrproper
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			
			cd linux-${PKGVERSION}
			make INSTALL_HDR_PATH=dest headers_install
			find dest/include \( -name .install -o -name ..install.cmd \) -delete
			mkdir -p ${TGTDIR}/usr/include
			cp -rv dest/include/* ${TGTDIR}/usr/include
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
