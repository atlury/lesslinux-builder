<llpackages>
	<package 
		name="ptlib"
		version="2.10.10"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="aee340c07b8f2afa62b8e7b5e2d45746b073502e">ptlib-2.10.10.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/ptlib/2.10/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="b62e6e524c0cf64aacdd1b0d62c21c6fb464f09b">ptlib-2.10.10-bison_fixes-1.patch</pkg>
				<mirror>http://www.linuxfromscratch.org/patches/blfs/svn/</mirror>
			</file>
			<!-- <check>
				<page html="http://xorg.freedesktop.org/archive/individual/app/">
					<atext linktext="xset-1.2.3." />
					<atext linktext="xset-1.2.4." />
					<atext linktext="xset-1.2.5." />
					<atext linktext="xset-1.2.6." />
					<atext linktext="xset-1.3." />
					<atext linktext="xset-1.4." />
					<atext linktext="xset-2." />
				</page>
			</check> -->
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>SDL</dep>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison2</dep>
                        <dep>coreutils</dep>
			<dep>compositeproto</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>flex</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>subversion</dep>
                        <dep>which</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-bison_fixes-1.patch | patch -p1
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			PATH=/usr/compat.old/bin:/usr/compat/old/sbin:$PATH
			export PATH
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc  gcc'
				export CXX='distcc  g++'
				./configure --sysconfdir=/etc --prefix=/usr 
				pump make -j $jobcount 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
