<llpackages>
	<package 
		name="cross-linux-headers"
		version="3.15.6"
		class="devel"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="f21a27b36ad7169596b0b809707f1442e6d2bb89">linux-3.15.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="3d5673d60a32d9c4af35647b3405bdfd8080898a">patch-3.15.6.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20140719" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.15.8." />
					<atext linktext="patch-3.15.9." />
					<atext linktext="patch-3.15.7." />
					<atext linktext="patch-3.16." />
					<atext linktext="patch-3.17." />
					<atext linktext="patch-3.18." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>which</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.15.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd linux-3.15
			unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv -v linux-3.15 linux-${PKGVERSION}
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			
			cd linux-${PKGVERSION}
			make mrproper && make headers_check
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			
			cd linux-${PKGVERSION}
			make INSTALL_HDR_PATH=dest headers_install
			find dest/include \( -name .install -o -name ..install.cmd \) -delete
			mkdir -p ${TGTDIR}/usr/local/crosstools/i486-linux-uclibc/include
			mkdir -p ${TGTDIR}/usr/local/crosstools-amd64/amd64-linux-uclibc/include
			cp -rv dest/include/* ${TGTDIR}/usr/local/crosstools/i486-linux-uclibc/include
			cp -rv dest/include/* ${TGTDIR}/usr/local/crosstools-amd64/amd64-linux-uclibc/include
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
