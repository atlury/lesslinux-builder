<llpackages>
	<package 
		name="libssh"
		version="0.7.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="112fdd5c10dd508a10e3c494fc79156a5ff24751">libssh-0.7.1.tar.xz</pkg>
				<mirror>https://red.libssh.org/attachments/download/154/</mirror>
			</file>
			<manualcheck date="20150823" interval="120" page="http://www.libssh.org/" />
			<check>
				<page html="https://red.libssh.org/projects/libssh/files">
					<atext linktext="libssh-0.7.1." />
					<atext linktext="libssh-0.7.2." />
					<atext linktext="libssh-0.7.3." />
					<atext linktext="libssh-0.7.4." />
					<atext linktext="libssh-0.7.5." />
					<atext linktext="libssh-0.8." />
					<atext linktext="libssh-0.9." />
					<atext linktext="libssh-1." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			export SHELL=/bin/bash
			env
			mkdir -pv libssh.build
			cd libssh.build
			cmake -DCMAKE_INSTALL_PREFIX=/usr  ../${PKGNAME}-${PKGVERSION}
			find . -name 'build.make' -exec sed -i 's%/usr/lib/libcrypto.so%%g' {} \;
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd libssh.build
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf libssh.build
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
