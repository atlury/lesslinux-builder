		<builddeps>
			<dep>GConf</dep>
			<dep>GConf2</dep>
                        <dep>ORBit2</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gamin</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnome-mime-data</dep>
                        <dep>grep</dep>
                        <!-- <dep>hal</dep> -->
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libsmbios</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
