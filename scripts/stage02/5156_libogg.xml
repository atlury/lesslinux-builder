<llpackages>
	<package 
		name="libogg"
		version="1.3.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                        
				<pkg sha1="a4242415a7a9fd71f3092af9ff0b9fa630e4d7bd">libogg-1.3.1.tar.xz</pkg>
				<mirror>http://downloads.xiph.org/releases/ogg/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://downloads.xiph.org/releases/ogg/" />
			<check>
				<page html="http://downloads.xiph.org/releases/ogg/">
					<atext linktext="libogg-1.3.3." />
					<atext linktext="libogg-1.3.2." />
					<atext linktext="libogg-1.4." />
					<atext linktext="libogg-1.5." />
					<atext linktext="libogg-1.6." />
					<atext linktext="libogg-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
