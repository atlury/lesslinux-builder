<llpackages>
	<package 
		name="audacious"
		version="3.8"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="2593357d768b126601e9da69bb5e4caa429fb2fb">audacious-3.8-gtk3.tar.bz2</pkg>
				<mirror>http://distfiles.audacious-media-player.org/</mirror>
			</file>
			<manualcheck date="20150922" interval="120" page="http://distfiles.audacious-media-player.org/" />
			<check>
				<page html="http://distfiles.audacious-media-player.org/"> 
					<atext linktext="audacious-3.8.2." />
					<atext linktext="audacious-3.8.3." />
					<atext linktext="audacious-3.8.4." />
					<atext linktext="audacious-3.8.5." />
					<atext linktext="audacious-3.8.1." />
					<atext linktext="audacious-3.9." />
					<atext linktext="audacious-3.10." />
					<atext linktext="audacious-4." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk3</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ms-sys</dep>
                        <dep>ncurses</dep>
                        <dep>pango</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}-gtk3.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}-gtk3
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}-gtk3
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}-gtk3
			]]>
		</clean>
	</package>
</llpackages>
