<llpackages>
	<package 
		name="openvas-libraries"
		version="7.0.4"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="379ac546efaa95cededaf48a9181584fa646cc90">openvas-libraries-7.0.4.tar.gz</pkg>
				<mirror>http://wald.intevation.org/frs/download.php/1722/</mirror>
			</file>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnutls3</dep>
                        <dep>gpgme</dep>
                        <dep>grep</dep>
                        <dep>libgcrypt15</dep>
                        <dep>libgpg-error</dep>
                        <dep>libpcap</dep>
                        <dep>libssh</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>subversion</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			mkdir -p ${TGTDIR}/usr/var/lib/openvas
			mkdir -p ${TGTDIR}/usr/var/log/openvas
			touch ${TGTDIR}/usr/var/lib/openvas/.keep_this_directory
			touch ${TGTDIR}/usr/var/log/openvas/.keep_this_directory
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
