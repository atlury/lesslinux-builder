<llpackages>
	<package 
		name="alsa-lib"
		version="1.0.29"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                              
				<pkg sha1="9b81d20417170db2a91452bfe537d0893ef4df89">alsa-lib-1.0.29.tar.bz2</pkg>
				<mirror>ftp://ftp.alsa-project.org/pub/lib/</mirror>
			</file>
			<!-- <file>                                           
				<pkg sha1="ebda37d18379466ca9d843e7a80d10bb706a6b04">alsa-driver-1.0.25.tar.bz2</pkg>
				<mirror>ftp://ftp.alsa-project.org/pub/driver/</mirror>
			</file> -->
			<manualcheck date="20150530" interval="180" page="ftp://ftp.alsa-project.org/pub/lib/" />
			<check>
				<page html="http://ftp.silug.org/pub/alsa/lib/">
					<atext linktext="alsa-lib-1.0.29.1." />
					<atext linktext="alsa-lib-1.0.29.2." />
					<atext linktext="alsa-lib-1.0.30." />
					<atext linktext="alsa-lib-1.1." />
					<atext linktext="alsa-lib-1.2." />
					<atext linktext="alsa-lib-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			# tar xjf ${SRCDIR}/alsa-driver-1.0.25.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
