		<sources>            
			<file>                                                                                               
				<pkg sha1="a0e6e655d04009178d4b7c15d935a46a691a617c">nasm-2.12.02.tar.xz</pkg>
				<mirror>http://www.nasm.us/pub/nasm/releasebuilds/2.12.02/</mirror>
			</file>
			<manualcheck date="20150823" interval="90" page="http://www.nasm.us/pub/nasm/releasebuilds/" />
			<check>
				<page html="http://www.nasm.us/pub/nasm/releasebuilds/">
					<atext linktext="2.12.06" />
					<atext linktext="2.12.03" />
					<atext linktext="2.12.04" />
					<atext linktext="2.12.05" />
					<atext linktext="2.13." />
					<atext linktext="2.14." />
					<atext linktext="2.15." />
					<atext linktext="2.16." />
				</page>
			</check> 
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount -C libiptc CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr
				make -C libiptc 
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
