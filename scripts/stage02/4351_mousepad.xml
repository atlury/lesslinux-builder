		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --sysconfdir=/etc --disable-dbus --enable-gtk3 CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --sysconfdir=/etc --disable-dbus --enable-gtk3 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			# paxctl -m ${TGTDIR}/usr/bin/mousepad 
			mv ${TGTDIR}/usr/bin/mousepad  ${TGTDIR}/usr/bin/mousepad.broken
			echo '#!/bin/bash' >  ${TGTDIR}/usr/bin/mousepad
			echo 'exec /usr/bin/SciTE "$@"' >> ${TGTDIR}/usr/bin/mousepad
			chmod 0755 ${TGTDIR}/usr/bin/mousepad
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
