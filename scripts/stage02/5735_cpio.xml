<llpackages>
	<package 
		name="cpio"
		version="2.11"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                          
				<pkg sha1="6f1934b0079dc1e85ddff89cabdf01adb3a74abb">cpio-2.11.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/cpio/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="ftp://ftp.gnu.org/gnu/cpio/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/cpio/">
					<atext linktext="cpio-2.11.1." />
					<atext linktext="cpio-2.11.2." />
					<atext linktext="cpio-2.12." />
					<atext linktext="cpio-2.13." />
					<atext linktext="cpio-2.14." />
					<atext linktext="cpio-2.15." />
					<atext linktext="cpio-3." />
				</page>
			</check>
		</sources> 
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			sed -i -e '/gets is a/d' gnu/stdio.in.h
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
