<llpackages>
	<package 
		name="opal"
		version="3.10.10"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="51cddcee0bdfe61dd0025ff6548d18e6aa0c255e">opal-3.10.10.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/opal/3.10/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="23313998d19600c3959f2163e2d5a1df0cad34bd">opal-3.10.10-ffmpeg2-1.patch</pkg>
				<mirror>http://www.linuxfromscratch.org/patches/blfs/svn/</mirror>
			</file>
			<!-- <check>
				<page html="http://xorg.freedesktop.org/archive/individual/app/">
					<atext linktext="xset-1.2.3." />
					<atext linktext="xset-1.2.4." />
					<atext linktext="xset-1.2.5." />
					<atext linktext="xset-1.2.6." />
					<atext linktext="xset-1.3." />
					<atext linktext="xset-1.4." />
					<atext linktext="xset-2." />
				</page>
			</check> -->
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>compositeproto</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>distcc</dep>
                        <dep>ffmpeg</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>procps</dep>
                        <dep>ptlib</dep>
                        <dep>pygobject</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>speex</dep>
                        <dep>subversion</dep>
                        <dep>swig</dep>
                        <dep>which</dep>
                        <dep>x264</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-ffmpeg2-1.patch | patch -p1
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			PATH=/usr/compat.old/bin:/usr/compat/old/sbin:$PATH
			export PATH
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				./configure --sysconfdir=/etc --prefix=/usr 
				pump make -j $jobcount 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
