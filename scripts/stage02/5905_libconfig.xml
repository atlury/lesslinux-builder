<llpackages>
	<package 
		name="libconfig"
		version="1.4.9"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                           
				<pkg sha1="b7a3c307dfb388e57d9a35c7f13f6232116930ec">libconfig-1.4.9.tar.gz</pkg>
				<mirror>http://www.hyperrealm.com/libconfig/</mirror>
			</file>
			<manualcheck date="20130717" interval="120" page="http://www.hyperrealm.com/libconfig/" />
			<check>
				<page html="http://www.hyperrealm.com/libconfig/">
					<atext linktext="libconfig-1.4.10." />
					<atext linktext="libconfig-1.4.11." />
					<atext linktext="libconfig-1.4.12." />
					<atext linktext="libconfig-1.4.13." />
					<atext linktext="libconfig-1.4.14." />
					<atext linktext="libconfig-1.5." />
					<atext linktext="libconfig-1.6." />
					<atext linktext="libconfig-1.2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>texinfo</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
