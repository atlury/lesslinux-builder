			<manualcheck date="20131227" interval="60" page="http://xorg.freedesktop.org/archive/individual/app/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="libXinerama-1.1.4." />
