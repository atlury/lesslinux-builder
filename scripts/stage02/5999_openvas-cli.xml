<llpackages>
	<package 
		name="openvas-cli"
		version="1.4.3"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="25159c8bef3e3b704569fcf217aa16a548eabf99">openvas-cli-1.4.3.tar.gz</pkg>
				<mirror>http://wald.intevation.org/frs/download.php/1803/</mirror>
			</file>
			<manualcheck date="20160412" interval="90" page="http://www.openvas.org/install-source.html" />
			<check>
				<page html="http://www.openvas.org/install-source.html">
					<atext href="openvas-cli-1.4.5." />
					<atext href="openvas-cli-1.4.6." />
					<atext href="openvas-cli-1.4.7." />
					<atext href="openvas-cli-1.4.4." />
					<atext href="openvas-cli-1.5." />
					<atext href="openvas-cli-1.6." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnutls3</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>openvas-libraries</dep>
                        <dep>pkg-config</dep>
                        <dep>subversion</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
