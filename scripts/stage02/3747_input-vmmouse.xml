<llpackages>
	<package 
		name="xf86-input-vmmouse"
		version="13.0.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                             
				<pkg sha1="0fa67d2ca9b2b26d32b93cc030fc3ea28964fe81">xf86-input-vmmouse-13.0.0.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/driver/</mirror>
			</file>
			<manualcheck date="20130430" interval="180" page="http://xorg.freedesktop.org/archive/individual/driver/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/driver/">
					<atext linktext="xf86-input-vmmouse-13.0.1." />
					<atext linktext="xf86-input-vmmouse-13.0.2." />
					<atext linktext="xf86-input-vmmouse-13.1." />
					<atext linktext="xf86-input-vmmouse-13.2." />
					<atext linktext="xf86-input-vmmouse-13.3." />
					<atext linktext="xf86-input-vmmouse-14." />
					<atext linktext="xf86-input-vmmouse-15." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libpciaccess</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xorg-server</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
