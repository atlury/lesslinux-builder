<llpackages>
	<package 
		name="libpciaccess"
		version="0.13.5"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                   
				<pkg sha1="ea98c13623e218359ca6d9af9ab9aa4780201a5b">libpciaccess-0.13.5.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/lib/</mirror>
			</file>
			<manualcheck date="20170610" interval="180" page="http://xorg.freedesktop.org/archive/individual/lib/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="libpciaccess-0.13.7." />
					<atext linktext="libpciaccess-0.13.6." />
					<atext linktext="libpciaccess-0.14." />
					<atext linktext="libpciaccess-0.15." />
					<atext linktext="libpciaccess-0.2" />
					<atext linktext="libpciaccess-1." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr 
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
