<llpackages>
	<package 
		name="expat"
		version="2.1.0"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>  
				<pkg sha1="b08197d146930a5543a7b99e871cba3da614f6f0">expat-2.1.0.tar.gz</pkg>
				<mirror>http://downloads.sourceforge.net/project/expat/expat/2.1.0/</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://sourceforge.net/projects/expat/files/" />
			<check>
				<page html="http://sourceforge.net/projects/expat/files/">
					<atext linktext="expat-2.1.1." />
					<atext linktext="expat-2.1.2." />
					<atext linktext="expat-2.1.3." />
					<atext linktext="expat-2.2." />
					<atext linktext="expat-2.3." />
					<atext linktext="expat-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<!-- <dep>distcc</dep> -->
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] && which pump ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
