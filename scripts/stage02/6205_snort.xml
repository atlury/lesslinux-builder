<llpackages>
    <package name='snort' version='2.9.11' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='548b3cc10b6d0f6143c978aae587375d7c98c25a'>
                    snort-2.9.11.tar.gz
                </pkg>
                <mirror>
                    https://www.snort.org/downloads/snort/
                </mirror>
            </file>
	    
	    <file>
                <pkg sha1=' 65fc12e61e924da0340ef3f965127780ec7cfe2a'>
                    lesslinux-snort-20171103-00.tar.bz2
                </pkg>
                <mirror>
                    https://distfiles.lesslinux.org/
                </mirror>
            </file>
            <manualcheck date='20171019' interval='60' mirror='https://www.snort.org/downloads/snort/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>daq</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libdnet</dep>
                        <dep>libpcap</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pcre</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xz</dep>
                        <dep>zlib</dep>
                </builddeps>
        <unpack>
            <![CDATA[
	    tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
	tar xf ${SRCDIR}/lesslinux-snort-20171103-00.tar.bz2
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
make install DESTDIR=${TGTDIR}
[ -x ${TGTDIR}/usr/bin/snort ] || exit 1 
mkdir -p ${TGTDIR}/usr/share/applications
mkdir -p ${TGTDIR}/usr/share/icons
mkdir -p ${TGTDIR}/usr/share/lesslinux/snort 
cd ../snort
install -m 0644 snort-wrapper.rb ${TGTDIR}/usr/share/lesslinux/snort 
install -m 0755 snort-wrapper.sh ${TGTDIR}/usr/share/lesslinux/snort 
install -m 0755 pulledpork.sh ${TGTDIR}/usr/share/lesslinux/snort 
install -m 0644 snort.png ${TGTDIR}/usr/share/icons

cat >> ${TGTDIR}/usr/share/applications/snort.desktop << SNICON

[Desktop Entry]
Version=1.0
Encoding=UTF-8
Type=Application
Name=SNORT
Comment=
Categories=CB-Other;
Exec=sudo /usr/share/lesslinux/snort/snort-wrapper.sh
Icon=/usr/share/icons/snort.png
Terminal=false
StartupNotify=true

SNICON

]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>