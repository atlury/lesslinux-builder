<llpackages>
	<package 
		name="apr"
		version="1.5.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="6d757fcf7c687fc300c1066076f2e8380ff8cbc0">apr-1.5.2.tar.bz2</pkg>
				<mirror>http://apache.easy-webs.de/apr/</mirror>
			</file>
			<manualcheck date="20150601" interval="180" page="https://apr.apache.org/" />
			<check>
				<page html="http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/apr/">
					<atext linktext="apr-1.5.7." />
					<atext linktext="apr-1.5.3." />
					<atext linktext="apr-1.5.4." />
					<atext linktext="apr-1.5.5." />
					<atext linktext="apr-1.5.6." />
					<atext linktext="apr-1.6." />
					<atext linktext="apr-1.7." />
					<atext linktext="apr-1.8." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
