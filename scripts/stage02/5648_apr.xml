<llpackages>
	<package 
		name="apr"
		version="1.5.1"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="f94e4e0b678282e0704e573b5b2fe6d48bd1c309">apr-1.5.1.tar.bz2</pkg>
				<mirror>http://apache.easy-webs.de/apr/</mirror>
			</file>
			<!--<check>
				<page html="http://sourceforge.net/projects/grsync/files/">
					<atext linktext="grsync-1.1.2." />
					<atext linktext="grsync-1.2." />
					<atext linktext="grsync-2." />
				</page>
			</check>-->
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
