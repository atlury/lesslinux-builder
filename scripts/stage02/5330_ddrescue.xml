<llpackages>
	<package 
		name="ddrescue"
		version="1.20"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                          
				<pkg sha1="7e64aea5744a195094f11f9d24486853141a7d49">ddrescue-1.20.tar.lz</pkg>
				<mirror>http://ftp.gnu.org/gnu/ddrescue/</mirror>
			</file>
			<manualcheck date="20151128" interval="180" page="http://ftp.gnu.org/gnu/ddrescue/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/ddrescue/">
					<atext linktext="ddrescue-1.22." />
					<atext linktext="ddrescue-1.23." />
					<atext linktext="ddrescue-1.21." />
					<atext linktext="ddrescue-1.20.1." />
					<atext linktext="ddrescue-1.20.2." />
					<atext linktext="ddrescue-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			lunzip -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.lz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --sysconfdir=/etc --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
