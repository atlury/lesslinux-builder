<llpackages>
	<package 
		name="ddrescue"
		version="1.17"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                          
				<pkg sha1="a69367924ec1437b7b1634df8f55c54bc1e6b853">ddrescue-1.17.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/ddrescue/</mirror>
			</file>
			<manualcheck date="20130716" interval="180" page="http://ftp.gnu.org/gnu/ddrescue/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/ddrescue/">
					<atext linktext="ddrescue-1.19." />
					<atext linktext="ddrescue-1.20." />
					<atext linktext="ddrescue-1.18." />
					<atext linktext="ddrescue-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --sysconfdir=/etc --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
