<llpackages>
	<package 
		name="xorriso"
		version="1.4.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                          
				<pkg sha1="9b8e47ad568d4079a63a0112901bec2e9dd4ceed">xorriso-1.4.0.tar.gz</pkg>
				<mirror>http://www.gnu.org/software/xorriso/</mirror>
			</file>
			<manualcheck date="20150601" interval="60" page="http://www.gnu.org/software/xorriso/" />
			<check>
				<page html="http://www.gnu.org/software/xorriso/">
					<atext linktext="xorriso-1.4.2." />
					<atext linktext="xorriso-1.4.4." />
					<atext linktext="xorriso-1.4.6." />
					<atext linktext="xorriso-1.4.8." />
					<atext linktext="xorriso-1.4.10." />
					<atext linktext="xorriso-1.4.12." />
					<atext linktext="xorriso-1.5." />
					<atext linktext="xorriso-2." />
				</page>
			</check> 
		</sources>
		<builddeps>
                        <dep>acl</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>syslinux</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr/compat.static --sysconfdir=/etc/compat.static --enable-static
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++"  LDFLAGS=-all-static
			else
				make LDFLAGS=-all-static
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
