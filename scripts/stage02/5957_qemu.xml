<llpackages>
	<package 
		name="qemu"
		version="2.1.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="f5f9eefa8fece7dead0487a2cca25f90e3dab3d9">qemu-2.1.2.tar.bz2</pkg>
				<mirror>http://wiki.qemu-project.org/download/</mirror>
			</file>
			<file>                           
				<pkg sha1="58c94faa3f0a682b496538792a66220bdd1d6ac7">qemu-2.1.2-virtfs-proxy-helper.patch</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20141101" interval="60" page="http://wiki.qemu-project.org/download/" />
		</sources>
		<builddeps>
                        <dep>Mesa</dep>
                        <dep>Python</dep>
                        <dep>SDL</dep>
                        <dep>atk</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>curl</dep>
                        <dep>diffutils</dep>
                        <dep>distcc</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>git</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnome-icon-theme</dep>
                        <dep>gnutls3</dep>
                        <dep>grep</dep>
                        <dep>gtk</dep>
                        <dep>iasl</dep>
                        <dep>jpegsrc</dep>
                        <dep>libX11</dep>
                        <dep>libcap</dep>
                        <dep>libpng15</dep><dep>libpng16</dep>
                        <dep>libssh2</dep>
                        <dep>libtool</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>openssl</dep>
                        <dep>pango</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>procps</dep>
                        <dep>pygobject</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
                        <dep>vte</dep>
                        <dep>xfsprogs</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat  ${SRCDIR}/${PKGNAME}-${PKGVERSION}-virtfs-proxy-helper.patch | patch -p1 
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/qemu --docdir=/usr/share/doc/${PKGNAME}-${PKGVERSION} \
				--target-list=x86_64-softmmu,arm-softmmu,arm-linux-user,armeb-linux-user,i386-linux-user,x86_64-linux-user
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
