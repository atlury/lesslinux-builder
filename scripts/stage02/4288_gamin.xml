<llpackages>
	<package 
		name="gamin"
		version="0.1.10"
		class="lib"
		>
		<license>GPLv2</license>
		<sources>
			<file>             
				<pkg sha1="f4c6b9fe87757552ef58fef4abef9e42cd3142ac">gamin-0.1.10.tar.gz</pkg>
				<mirror>http://www.gnome.org/~veillard/gamin/sources/</mirror>
			</file>  
			<!-- <file>           
				<pkg sha1="6839122c50a69e5b70acc69798de8654f0f9607a">gamin-0.1.9-ucred-headers.patch</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file> -->
			<manualcheck date="20140802" interval="180" page="http://people.gnome.org/~veillard/gamin/sources/" />
			<check>
				<page html="http://people.gnome.org/~veillard/gamin/sources/">
					<atext linktext="gamin-0.1.11.tar.gz" />
					<atext linktext="gamin-0.1.12.tar.gz" />
					<atext linktext="gamin-0.1.13.tar.gz" />
					<atext linktext="gamin-0.2.0.tar.gz" />
					<atext linktext="gamin-0.2.1.tar.gz" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<info>
			<url>http://live.gnome.org/JhbuildIssues/gamin</url>
		</info>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-ucred-headers.patch | patch -p1
			]]>
		</patch> -->
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
