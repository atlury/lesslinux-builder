<llpackages>
    <package name='qt5ct' version='0.27' install='chroot'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='f6533332ee16350117f8890159097e448145a231'>
                    qt5ct-0.27.tar.bz2
                </pkg>
                <mirror>
                    http://downloads.sourceforge.net/project/qt5ct/
                </mirror>
            </file>
            <manualcheck date='20160930' interval='60' mirror='http://downloads.sourceforge.net/project/qt5ct/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>kguiaddons</dep>
                        <dep>kwayland</dep>
                        <dep>kwindowsystem</dep>
                        <dep>libkscreen</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
