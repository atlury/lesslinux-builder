<llpackages>
	<package 
		name="atk"
		version="2.14.0"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>             
				<pkg sha1="b803d055c8e2f786782803b7d21e413718321db7">atk-2.14.0.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/atk/2.14/</mirror>
			</file>
			<manualcheck date="20141101" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/atk" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/atk/2.8/">
					<atext linktext="atk-2.14.1." />
					<atext linktext="atk-2.14.2." />
					<atext linktext="atk-2.14.3." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/atk/">
					<atext linktext="2.16" />
					<atext linktext="2.18" />
					<atext linktext="2.20" />
					<atext linktext="3.0" />
					<atext linktext="3.2" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>gobject-introspection</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
