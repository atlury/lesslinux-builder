<llpackages>
	<package 
		name="libpng16"
		version="1.6.21"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                  
				<pkg sha1="978b2f4e007eda56032001493ddb97d20f0ab291">libpng-1.6.21.tar.xz</pkg>
				<mirror>http://downloads.sourceforge.net/project/libpng/libpng16/1.6.21/</mirror>
			</file>
			<file>                                                                                                  
				<pkg sha1="84255a2396874ea0ae329f5f3cb2af7077656470">libpng-1.6.21-apng.patch.gz</pkg>
				<mirror>http://downloads.sourceforge.net/libpng-apng/</mirror>
			</file>
			<manualcheck date="20160125" interval="90" page="http://downloads.sourceforge.net/project/libpng" />
			<check>
				<page html="http://sourceforge.net/projects/libpng/files/libpng16/">
					<atext linktext="1.6.22" />
					<atext linktext="1.6.23" />
					<atext linktext="1.6.24" />
					<atext linktext="1.6.25" />
				</page>
				<page html="http://sourceforge.net/projects/libpng/files/">
					<atext linktext="1.8" />
					<atext linktext="1.7" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>libpng12</dep>
			<dep>libpng14</dep>
			<dep>libpng15</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/libpng-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			
			cd libpng-${PKGVERSION}
			gunzip -c ${SRCDIR}/libpng-${PKGVERSION}-apng.patch.gz | patch -p1 
			
			]]>
		</patch>
		<build>
			<![CDATA[
			cd libpng-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd libpng-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf libpng-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
