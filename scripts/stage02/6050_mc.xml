<llpackages>
	<package
		name="mc"
		version="4.8.13"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                          
				<pkg sha1="b64b81f80fa93224f054ad5f498e479ceac5a49d">mc-4.8.13.tar.xz</pkg>
				<mirror>ftp://ftp.midnight-commander.org/pub/midnightcommander/</mirror>
			</file>
			<manualcheck date="20141101" interval="60" page="ftp://ftp.midnight-commander.org/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>file</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>glib</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>imake</dep>
                        <dep>inetutils</dep>
                        <dep>libssh2</dep>
                        <dep>libX11</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>slang</dep>
                        <dep>unzip</dep>
                        <dep>xorg-cf-files</dep>
                        <dep>xproto-base</dep>
                        <dep>zip</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc 
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
