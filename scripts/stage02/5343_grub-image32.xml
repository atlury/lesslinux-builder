<llpackages>
	<package 
		name="grub-efi-image"
		version="20150601"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                         
				<pkg sha1="43c86119478215aa4f6e833942ae97e08a839c3c">grub-20150601.tar.bz2</pkg>
				<mirror>ftp://ftp.gnu.org/gnu/grub/</mirror>
			</file>
			<manualcheck date="20150601" interval="90" page="ftp://ftp.gnu.org/gnu/grub/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/grub/">
					<atext linktext="grub-2.06." />
					<atext linktext="grub-2.02." />
					<atext linktext="grub-2.03." />
					<atext linktext="grub-2.04." />
					<atext linktext="grub-2.05." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
			<dep>cross-gcc-amd64</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
			<dep>grub-efi-amd64</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			true
			]]>
		</unpack>
		<build>
			<![CDATA[
			mkdir $PKGNAME
			cd $PKGNAME
			pkgpath=`pwd ` 
			echo '===> Building in '$pkgpath
			cd /usr/local/crosstools-amd64/lib/grub/x86_64-efi
			echo '===> Current working directory '
			pwd 
			/usr/local/crosstools-amd64/bin/grub-mkimage -Ox86_64-efi \
			-d . -o ${pkgpath}/grubx64.efi -p "" part_gpt part_msdos ntfs ntfscomp \
			hfsplus fat ext2 normal chain boot configfile linux multiboot iso9660 udf
			file ${pkgpath}/grubx64.efi
			cd $pkgpath
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd $PKGNAME
			pwd
			file grubx64.efi
			mkdir -p ${TGTDIR}/usr/share/grub-amd64-efi
			install -m 0644 --verbose grubx64.efi ${TGTDIR}/usr/share/grub-amd64-efi
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME} 
			]]>
		</clean>
	</package>
</llpackages>
