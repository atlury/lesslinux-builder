<llpackages>
	<package 
		name="screen"
		version="4.3.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                    
				<pkg sha1="a524761504e28480517e338b20c852f2ab100c93">screen-4.3.1.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/screen/</mirror>
			</file>
			<manualcheck date="20150710" interval="365" page="http://ftp.gnu.org/gnu/screen/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/screen/">
					<atext linktext="screen-4.3.2" />
					<atext linktext="screen-4.3.2" />
					<atext linktext="screen-4.3.3" />
					<atext linktext="screen-4.3.4" />
					<atext linktext="screen-4.4." />
					<atext linktext="screen-4.5." />
					<atext linktext="screen-4.6." />
					<atext linktext="screen-5." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>ncurses</dep>
			<dep>ncurses-8bit</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			mkdir -p ${TGTDIR}/usr/etc
			install -m 0644 ./etc/etcscreenrc ${TGTDIR}/usr/etc/screenrc

			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
