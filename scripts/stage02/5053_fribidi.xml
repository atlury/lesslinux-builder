		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr
				pump make -j $jobcount
			else
				./configure --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
