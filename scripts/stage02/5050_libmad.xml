<llpackages>
	<package 
		name="libmad"
		version="0.15.1b"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>   
				<pkg sha1="cac19cd00e1a907f3150cc040ccc077783496d76">libmad-0.15.1b.tar.gz</pkg>
				<mirror>ftp://ftp.mars.org/pub/mpeg/</mirror>
			</file>
			<file>   
				<pkg sha1="8e6f56a84446a7b0a353fbe5bd5c48758ad8b54d">libmad-0.15.1b-lesslinux-20090625.patch</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20120715" interval="365" page="ftp://ftp.mars.org/pub/mpeg/" />
		</sources>
		<builddeps>
			<dep>autoconf</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-lesslinux-20090625.patch | patch -p1
			true
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr 
			sed -i 's/-fforce-mem//g' Makefile
			sed -i 's/-fforce-mem//g' msvc++/Makefile
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
