<llpackages>
	<package 
		name="yasm"
		version="1.2.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="773d28f27f83c44ac35079add0d3167ca6c1def8">yasm-1.2.0.tar.gz</pkg>
				<mirror>http://www.tortall.net/projects/yasm/releases/</mirror>
			</file>
			<manualcheck date="20120624" interval="180" page="http://www.tortall.net/projects/yasm/releases/" />
			<!--<check>
				<page html="http://sourceforge.net/projects/grsync/files/">
					<atext linktext="grsync-1.1.2." />
					<atext linktext="grsync-1.2." />
					<atext linktext="grsync-2." />
				</page>
			</check>-->
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
