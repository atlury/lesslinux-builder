		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libpcap</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}
			export LIBS="-ldl"
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS"
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<install>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
