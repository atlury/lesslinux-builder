<llpackages>
	<package 
		name="tcpdump"
		version="4.7.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                               
				<pkg sha1="a18c9dbc4b5c4983af9cb52d8e473f5504546f4a">tcpdump-4.7.4.tar.gz</pkg>
				<mirror>http://www.tcpdump.org/release/</mirror>
			</file>
			<manualcheck date="20150601" interval="120" page="http://www.tcpdump.org/release/" />
			<check>
				<page html="http://www.tcpdump.org/release/">
					<atext linktext="tcpdump-4.7.7." />
					<atext linktext="tcpdump-4.7.8." />
					<atext linktext="tcpdump-4.7.9." />
					<atext linktext="tcpdump-4.7.5." />
					<atext linktext="tcpdump-4.7.6." />
					<atext linktext="tcpdump-4.8." />
					<atext linktext="tcpdump-4.9." />
					<atext linktext="tcpdump-4.10." />
					<atext linktext="tcpdump-5." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libpcap</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}
			export LIBS="-ldl"
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS"
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<install>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
