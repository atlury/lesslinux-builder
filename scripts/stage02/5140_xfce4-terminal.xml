<llpackages>
	<package 
		name="xfce4-terminal"
		version="0.6.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>             
				<pkg sha1="4dd4d2bef8101f563487b0230346070930ff689f">xfce4-terminal-0.6.3.tar.bz2</pkg>
				<mirror>http://archive.xfce.org/src/apps/xfce4-terminal/0.6/</mirror>
			</file>
			<manualcheck date="20140216" interval="120" page="http://archive.xfce.org/src/apps/xfce4-terminal/" />
			<check>
				<page html="http://archive.xfce.org/src/apps/xfce4-terminal/0.6/">
					<atext linktext="0.6.6" />
					<atext linktext="0.6.4" />
					<atext linktext="0.6.5" />
					<atext linktext="0.6.6" />
				</page>
				<page html="http://archive.xfce.org/src/apps/xfce4-terminal/">
					<atext linktext="0.8" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>exo</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpng12</dep><dep>libpng14</dep><dep>libpng15</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxfce4util</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>p5-xml</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>vte</dep>
                        <dep>xproto-base</dep>
			<!-- soft -->
			<dep>imake</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			ln -sf xfce4-terminal ${TGTDIR}/usr/bin/Terminal
			ln -sf xfce4-terminal ${TGTDIR}/usr/bin/terminal
			paxctl -m  -r ${TGTDIR}/usr/bin/Terminal
			paxctl -m  -r ${TGTDIR}/opt/bin/Terminal
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
