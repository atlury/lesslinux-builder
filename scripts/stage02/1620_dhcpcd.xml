<llpackages>
	<package 
		name="dhcpcd"
		version="6.2.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                         
				<pkg sha1="02319be210f10e73a3add726ae3fd96f69743cff">dhcpcd-6.2.1.tar.bz2</pkg>
				<mirror>http://roy.marples.name/downloads/dhcpcd/</mirror>
			</file>
			<manualcheck date="20140216" interval="180" page="http://roy.marples.name/downloads/dhcpcd/" />
			<check>
				<page html="http://roy.marples.name/downloads/dhcpcd/">
					<atext linktext="dhcpcd-6.2.5." />
					<atext linktext="dhcpcd-6.2.2." />
					<atext linktext="dhcpcd-6.2.3." />
					<atext linktext="dhcpcd-6.2.4." />
					<atext linktext="dhcpcd-6.3." />
					<atext linktext="dhcpcd-6.4." />
					<atext linktext="dhcpcd-6.5." />
					<atext linktext="dhcpcd-7." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>which</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/ --sysconfdir=/etc/dhcpcd --dbdir=/var/lib/dhcpcd --libexecdir=/lib/dhcpcd CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/ --sysconfdir=/etc/dhcpcd --dbdir=/var/lib/dhcpcd --libexecdir=/lib/dhcpcd
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
