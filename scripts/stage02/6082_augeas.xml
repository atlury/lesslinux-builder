<llpackages>
    <package name='augeas' version='1.3.0' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='052694bc84e3b8246dd32808b0e0e8c41c3de40b'>
                    augeas-1.3.0.tar.gz
                </pkg>
                <mirror>
                    http://download.augeas.net/
                </mirror>
            </file>
            <manualcheck date='20141213' interval='60' mirror='http://download.augeas.net/'/>
        </sources>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
