<llpackages>
    <package name='fred' version='0.1.1' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='7d051e364064f17fdba30c9706f8a493f5e97aa0'>
                    fred-0.1.1.tar.gz
                </pkg>
                <mirror>
                    http://files.pinguin.lu/
                </mirror>
            </file>
            <manualcheck date='20150823' interval='180' mirror='http://files.pinguin.lu/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>hivex</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>qt-everywhere-opensource-src</dep>
                        <dep>which</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
bash autogen.sh
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
qmake
make
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
mkdir -p ${TGTDIR}/usr/sbin
mkdir -p ${TGTDIR}/usr/share/applications

install -m 0755 fred  ${TGTDIR}/usr/sbin/
cat << DESKFILE >  ${TGTDIR}/usr/share/applications/fred.desktop

[Desktop Entry]
Version=1.0
Encoding=UTF-8
Type=Application
Name=FRED Registry Editor
Categories=CB-Other;
Exec=sudo /usr/sbin/fred
Icon=wine
Terminal=false
StartupNotify=true
Path=

DESKFILE

]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>