<llpackages>
	<package 
		name="parted"
		version="3.1"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                
				<pkg sha1="4f006d29451f7cfbf6131efdb0148e7f386ebc8f">parted-3.1.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/parted/</mirror>
			</file>
			<manualcheck date="20130504" interval="180" page="http://ftp.gnu.org/gnu/parted/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/parted/">
					<atext linktext="parted-3.1.1." />
					<atext linktext="parted-3.1.2." />
					<atext linktext="parted-3.2." />
					<atext linktext="parted-3.3." />
					<atext linktext="parted-3.4." />
					<atext linktext="parted-4." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>device-mapper</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr  --sysconfdir=/etc --with-readline=no --enable-Werror=no  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr  --sysconfdir=/etc --with-readline=no --enable-Werror=no 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
