<llpackages>
	<package 
		name="libunistring"
		version="0.9.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                                   
				<pkg sha1="e1ea13c24a30bc93932d19eb5ad0704a618506dd">libunistring-0.9.3.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/libunistring/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://ftp.gnu.org/gnu/libunistring/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
