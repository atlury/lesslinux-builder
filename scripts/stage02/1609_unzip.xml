<llpackages>
	<package 
		name="unzip"
		version="60"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="abf7de8a4018a983590ed6f5cbd990d4740f8a22">unzip60.tar.gz</pkg>
				<mirror>http://switch.dl.sourceforge.net/sourceforge/infozip/</mirror>
			</file>
			<manualcheck date="20130504" interval="180" page="http://sourceforge.net/projects/infozip/files/" />
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				pump make -j $jobcount -f unix/Makefile linux CC="distcc gcc" CXX="distcc g++" 
			else
				make -f unix/Makefile linux
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}${PKGVERSION}
			make prefix=/usr install
			]]>
		</install>
	</package>
</llpackages>
