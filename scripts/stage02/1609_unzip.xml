<llpackages>
	<package 
		name="unzip"
		version="60"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="abf7de8a4018a983590ed6f5cbd990d4740f8a22">unzip60.tar.gz</pkg>
				<mirror>http://switch.dl.sourceforge.net/sourceforge/infozip/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://sourceforge.net/projects/infozip/files/" />
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}${PKGVERSION}
			case `uname -m` in
				i?86)
					sed -i -e 's/DASM_CRC"/DASM_CRC -DNO_LCHMOD"/' unix/Makefile
					make -f unix/Makefile linux
				;;
				*)
					sed -i -e 's/CFLAGS="-O -Wall/& -DNO_LCHMOD/' unix/Makefile
					make -f unix/Makefile linux_noasm
				;;
			esac
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}${PKGVERSION}
			make prefix=/usr install
			]]>
		</install>
	</package>
</llpackages>
