				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/atkmm/2.22/</mirror>
			</file>
			<manualcheck date="20130501" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/atkmm/2.22/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/atkmm/2.22/">
					<atext linktext="atkmm-2.22.10." />
					<atext linktext="atkmm-2.22.8." />
					<atext linktext="atkmm-2.22.9." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/atkmm/">
					<atext linktext="2.24" />
					<atext linktext="2.26" />
					<atext linktext="3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>glibmm</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libsigc++</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
