		<build>
			<![CDATA[
			cd qt-everywhere-opensource-src-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc gcc'
				export CXX='distcc g++'
				./configure -prefix /usr/compat.new -gtkstyle -opensource -release -system-sqlite \
				-silent -no-nis -confirm-license -nomake examples -nomake tests -no-pch -skip qtwebengine
				pump make -j $jobcount 
			else
				./configure -prefix /usr/compat.new -gtkstyle -opensource -release -system-sqlite \
				-silent -no-nis -confirm-license -nomake examples -nomake tests -skip qtwebengine
				make -j 6
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd qt-everywhere-opensource-src-${PKGVERSION}
			make install 
			]]>
		</install>
		<clean>
			 <![CDATA[
			rm -rf qt-everywhere-opensource-src-${PKGVERSION}
			]]>
