		<builddeps>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXft</dep>
                        <dep>libXrender</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>lua</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>xproto-base</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc LDFLAGS='-ldl'
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
