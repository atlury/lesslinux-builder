<llpackages>
	<package 
		name="plzip"
		version="1.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                        
				<pkg sha1="e339c06093d8e7905390cc7c39f28f6198a66471">plzip-1.3.tar.gz</pkg>
				<mirror>http://download.savannah.gnu.org/releases/lzip/</mirror>
			</file>
			<manualcheck date="20150601" interval="120" page="http://download.savannah.gnu.org/releases/lzip/" />
			<check>
				<page html="http://download.savannah.gnu.org/releases/lzip/plzip/">
					<atext linktext="plzip-1.4." />
					<atext linktext="plzip-1.5." />
					<atext linktext="plzip-1.6." />
					<atext linktext="plzip-1.7." />
					<atext linktext="plzip-1.8." />
					<atext linktext="plzip-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>lzlib</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
