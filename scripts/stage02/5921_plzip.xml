<llpackages>
	<package 
		name="plzip"
		version="1.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                        
				<pkg sha1="22d3bba78b9219e7976372e24773d3abc0ff4563">plzip-1.1.tar.gz</pkg>
				<mirror>http://download.savannah.gnu.org/releases/lzip/</mirror>
			</file>
			<manualcheck date="20130821" interval="120" page="http://download.savannah.gnu.org/releases/lzip/" />
			<!-- <check>
				<page html="http://www.hyperrealm.com/libconfig/">
					<atext linktext="libconfig-1.4.10." />
					<atext linktext="libconfig-1.4.11." />
					<atext linktext="libconfig-1.4.12." />
