<llpackages>
	<package 
		name="nettle"
		version="3.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                       
				<pkg sha1="b2eb5b36e65a8d3ed60ff81ec897044dead6dae0">nettle-3.2.tar.gz</pkg>
				<mirror>http://www.lysator.liu.se/~nisse/archive/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://www.lysator.liu.se/~nisse/archive/" />
			<check>
				<page html="http://www.lysator.liu.se/~nisse/archive/">
					<atext linktext="nettle-3.2.1." />
					<atext linktext="nettle-3.2.3." />
					<atext linktext="nettle-3.2.4." />
					<atext linktext="nettle-3.3." />
					<atext linktext="nettle-3.4." />
					<atext linktext="nettle-3.5." />
					<atext linktext="nettle-3.6." />
					<atext linktext="nettle-4." />
					<atext linktext="nettle-5." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gmp</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr  CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			chmod   -v   0755 ${TGTDIR}/usr/lib/lib{hogweed,nettle}.so
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
