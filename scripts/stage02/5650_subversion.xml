<llpackages>
	<package 
		name="subversion"
		version="1.8.9"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                
				<pkg sha1="424ee12708f39a126efd905886666083dcc4eeaf">subversion-1.8.9.tar.bz2</pkg>
				<mirror>http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/subversion/</mirror>
			</file>
			<!--<check>
				<page html="http://sourceforge.net/projects/grsync/files/">
					<atext linktext="grsync-1.1.2." />
					<atext linktext="grsync-1.2." />
					<atext linktext="grsync-2." />
				</page>
			</check>-->
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>apr-util</dep>
                        <dep>apr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>sqlite</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --disable-nls --without-berkeley-db  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --disable-nls --without-berkeley-db
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
