			<file>                           
				<pkg sha1="f224e697975910fcf66807422259e606566ad03e">gnome-robots-3.14.1.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/gnome-robots/3.14</mirror>
			</file>
			<manualcheck date="20141101" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-robots/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-robots/3.14/">
					<atext linktext="gnome-robots-3.14.2." />
