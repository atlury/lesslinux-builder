	<package 
		name="iceauth"
		version="1.0.6"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                    
				<pkg sha1="ee56608a52eec81682b8ca204a1afa4ec15bf01f">iceauth-1.0.6.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/app/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://xorg.freedesktop.org/archive/individual/app/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/app/">
					<atext linktext="iceauth-1.0.9." />
					<atext linktext="iceauth-1.0.7." />
					<atext linktext="iceauth-1.0.8." />
					<atext linktext="iceauth-1.1." />
					<atext linktext="iceauth-1.2." />
					<atext linktext="iceauth-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libICE</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
				make  
			fi
			# ./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
