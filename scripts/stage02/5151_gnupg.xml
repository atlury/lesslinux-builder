<llpackages>
	<package 
		name="gnupg-opt"
		version="1.4.18"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="41462d1a97f91abc16a0031b5deadc3095ce88ae">gnupg-1.4.18.tar.bz2</pkg>
				<mirror>ftp://ftp.gnupg.org/gcrypt/gnupg/</mirror>
			</file>
			<manualcheck date="20140710" interval="90" page="ftp://ftp.gnupg.org/gcrypt/gnupg/" />
			<check>
				<page html="ftp://ftp.gnupg.org/gcrypt/gnupg/">
					<atext linktext="gnupg-1.4.23." />
					<atext linktext="gnupg-1.4.24." />
					<atext linktext="gnupg-1.4.19." />
					<atext linktext="gnupg-1.4.20." />
					<atext linktext="gnupg-1.4.21." />
					<atext linktext="gnupg-1.4.22." />
					<atext linktext="gnupg-2.0.23." />
					<atext linktext="gnupg-2.0.24." />
					<atext linktext="gnupg-2.0.25." />
					<atext linktext="gnupg-2.0.26." />
					<atext linktext="gnupg-2.1." />
					<atext linktext="gnupg-2.2." />
					<atext linktext="gnupg-2.3." />
					<atext linktext="gnupg-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libusb</dep><dep>libusb-compat</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<!-- soft -->
			 <dep>curl</dep>
			 <dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/gnupg-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/gnupg-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/gnupg-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gnupg-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/opt --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/opt --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gnupg-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gnupg-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
