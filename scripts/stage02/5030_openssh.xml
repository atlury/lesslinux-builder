<llpackages>
	<package 
		name="openssh"
		version="6.6p1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                       
				<pkg sha1="b850fd1af704942d9b3c2eff7ef6b3a59b6a6b6e">openssh-6.6p1.tar.gz</pkg>
				<mirror>ftp://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/</mirror>
			</file>
			<manualcheck date="20140413" interval="180" page="http://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/" />
			<check>
				<page html="http://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/">
					<atext linktext="openssh-6.6p2" />
					<atext linktext="openssh-6.6.1" />
					<atext linktext="openssh-6.7." />
					<atext linktext="openssh-6.8." />
					<atext linktext="openssh-6.9." />
					<atext linktext="openssh-7." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Linux-PAM</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>perl</dep>
                        <dep>procps</dep>
                        <dep>sed</dep>
                        <dep>shadow</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc/openssh --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc/openssh --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
