<llpackages>
	<package 
		name="llvm"
		version="3.4"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                     
				<pkg sha1="10b1fd085b45d8b19adb9a628353ce347bc136b8">llvm-3.4.src.tar.gz</pkg>
				<mirror>http://llvm.org/releases/3.4/</mirror>
			</file>
			<file>                                                                                     
				<pkg sha1="a6a3c815dd045e9c13c7ae37d2cfefe65607860d">clang-3.4.src.tar.gz</pkg>
				<mirror>http://llvm.org/releases/3.4/</mirror>
			</file>
			<file>                                                                                     
				<pkg sha1="d644b1e4f306f7ad35df0a134d14a1123cd9f082">compiler-rt-3.4.src.tar.gz</pkg>
				<mirror>http://llvm.org/releases/3.4/</mirror>
			</file>
			<manualcheck date="20140109" interval="180" page="http://www.llvm.org/" />
			<check>
				<page html="http://llvm.org/releases/">
					<atext href="llvm-3.4.src." />
					<atext href="llvm-3.4.1src." />
					<atext href="llvm-3.4.2.src." />
					<atext href="llvm-3.5.src." />
					<atext href="llvm-3.6.src." />
					<atext href="llvm-3.7.src." />
					<atext href="llvm-3.8.src." />
					<atext href="llvm-4." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>file</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXt</dep>
                        <dep>libXxf86vm</dep>
                        <dep>libdrm</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>talloc</dep>
			<dep>makedepend</dep>
			<dep>distcc</dep>
			<dep>libffi</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.src.tar.gz
			tar xzf ${SRCDIR}/clang-${PKGVERSION}.src.tar.gz
			tar xzf ${SRCDIR}/compiler-rt-${PKGVERSION}.src.tar.gz
			mv clang-${PKGVERSION} ${PKGNAME}-${PKGVERSION}/tools/clang
			mv compiler-rt-${PKGVERSION} ${PKGNAME}-${PKGVERSION}/projects/compiler-rt
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 4 `
				export CC='distcc gcc'
				export CXX='distcc g++'
			else
				export CC='gcc'
				export CXX='g++'
			fi
			./configure --prefix=/usr              \
				--sysconfdir=/etc          \
				--enable-libffi            \
				--enable-optimized         \
				--enable-shared            \
				--disable-assertions
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount CC='distcc gcc' CXX='distcc g++' 
			else
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			for file in ${TGTDIR}/usr/lib/lib{clang,LLVM,LTO}*.a ; do
				test -f $file && chmod -v 644 $file
			done
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
