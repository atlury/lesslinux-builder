<llpackages>
	<package 
		name="xf86-input-synaptics"
		version="1.7.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                
				<pkg sha1="893fd2824353030d0302475ce289acc3688d39eb">xf86-input-synaptics-1.7.2.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/driver/</mirror>
			</file>
			<manualcheck date="20140109" interval="180" page="http://xorg.freedesktop.org/archive/individual/driver/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/driver/">
					<atext linktext="xf86-input-synaptics-1.7.4" />
					<atext linktext="xf86-input-synaptics-1.7.2" />
					<atext linktext="xf86-input-synaptics-1.8." />
					<atext linktext="xf86-input-synaptics-1.9." />
					<atext linktext="xf86-input-synaptics-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXext</dep>
                        <dep>libXi</dep>
                        <dep>libpciaccess</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xorg-server</dep>
                        <dep>xproto-base</dep>
			<dep>mtdev</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
