<llpackages>
	<package 
		name="libsmbios"
		version="2.2.28"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                  
				<pkg sha1="54c267411d2225cd54a3c8a696ca5c2a74e9d66e">libsmbios-2.2.28.tar.bz2</pkg>
				<mirror>http://linux.dell.com/libsmbios/download/libsmbios/libsmbios-2.2.28/</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://linux.dell.com/libsmbios/download/libsmbios/" />
			<check>
				<page html="http://linux.dell.com/libsmbios/download/libsmbios/">
					<atext linktext="libsmbios-2.2.29" />
					<atext linktext="libsmbios-2.2.30" />
					<atext linktext="libsmbios-2.2.31" />
					<atext linktext="libsmbios-2.3" />
					<atext linktext="libsmbios-2.4" />
					<atext linktext="libsmbios-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
