			<file>                     
				<pkg sha1="aa152d6f19bde44cd528b88f089c53913d0cd0ea">glibmm-2.44.0.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/glibmm/2.44</mirror>
			</file>
			<manualcheck date="20150529" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/glibmm/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/glibmm/2.44/">
					<atext linktext="glibmm-2.44.1." />
					<atext linktext="glibmm-2.44.2." />
					<atext linktext="glibmm-2.44.3." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/glibmm/">
					<atext linktext="2.46" />
