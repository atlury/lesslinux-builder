<llpackages>
	<package 
		name="zsync"
		version="0.6.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>   
				<pkg sha1="5e69f084c8adaad6a677b68f7388ae0f9507617a">zsync-0.6.2.tar.bz2</pkg>
				<mirror>http://zsync.moria.org.uk/download/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="http://zsync.moria.org.uk/downloads/" />
			<check>
				<page html="http://zsync.moria.org.uk/downloads/">
					<atext linktext="zsync-0.6.3." />
					<atext linktext="zsync-0.6.4." />
					<atext linktext="zsync-0.6.5." />
					<atext linktext="zsync-0.7." />
					<atext linktext="zsync-0.8." />
					<atext linktext="zsync-1." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
