<llpackages>
	<package 
		name="makedepend"
		version="1.0.5"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                            
				<pkg sha1="2599afa039d2070bae9df6ce43da288b3a4adf97">makedepend-1.0.5.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/util/</mirror>
			</file>
			<manualcheck date="20130910" interval="90" page="http://xorg.freedesktop.org/archive/individual/util/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/util/">
					<atext linktext="makedepend-1.0.8." />
					<atext linktext="makedepend-1.0.9." />
					<atext linktext="makedepend-1.0.6." />
					<atext linktext="makedepend-1.0.7." />
					<atext linktext="makedepend-1.1." />
					<atext linktext="makedepend-1.2." />
					<atext linktext="makedepend-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
