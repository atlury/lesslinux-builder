<llpackages>
	<package 
		name="libxklavier"
		version="5.0"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="e914adc00a7b1d39c5057aa415a5181856a697ae">libxklavier-5.0.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/gswitchit/libxklavier/5.0/</mirror>
			</file>
			<manualcheck date="20130504" interval="180" page="http://downloads.sourceforge.net/project/gswitchit/libxklavier/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>imake</dep>
                        <dep>inetutils</dep>
                        <dep>iso-codes</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXdmcp</dep>
                        <dep>libXext</dep>
                        <dep>libXi</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxkbfile</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xkbcomp</dep>
                        <dep>xorg-cf-files</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
