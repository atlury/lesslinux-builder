<llpackages>
	<package 
		name="libtasn1"
		version="4.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                             
				<pkg sha1="d2fe4bf12dbdc4d6765a04abbf8ddaf7e9163afa">libtasn1-4.2.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/pub/gnu/libtasn1/</mirror>
			</file>
			<manualcheck date="20141101" interval="90" page="http://ftp.gnu.org/pub/gnu/libtasn1/" />
			<check>
				<page html="http://ftp.gnu.org/pub/gnu/libtasn1/">
					<atext linktext="libtasn1-4.5." />
					<atext linktext="libtasn1-4.6." />
					<atext linktext="libtasn1-4.3." />
					<atext linktext="libtasn1-4.4." />
					<atext linktext="libtasn1-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
