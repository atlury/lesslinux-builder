<llpackages>
	<package 
		name="openjpeg2"
		version="2.0.0"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="0af78ab2283b43421458f80373422d8029a9f7a7">openjpeg-2.0.0.tar.gz</pkg>
				<mirror>http://www.openjpeg.org/</mirror>
			</file>
			<manualcheck date="20130504" interval="120" page="http://code.google.com/p/openjpeg/downloads/list" />
			<!-- <check>
				<page html="http://code.google.com/p/openjpeg/downloads/list">
					<atext linktext="openjpeg_v1_3_1.tar.gz" />
					<atext linktext="openjpeg_v1_4.tar.gz" />
					<atext linktext="openjpeg_v1_5.tar.gz" />
					<atext linktext="openjpeg_v2_0.tar.gz" />
				</page>
			</check> -->
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>make</dep>
			<dep>xproto-base</dep>
			<dep>cmake</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/openjpeg-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd openjpeg-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				cmake -DCMAKE_INSTALL_PREFIX=/usr 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				cmake -DCMAKE_INSTALL_PREFIX=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd openjpeg-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf openjpeg-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
