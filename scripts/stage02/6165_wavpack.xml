<llpackages>
    <package name='wavpack' version='4.80.0' install='chroot'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='83036db97b22f0585da81d113321ea8a989b2134'>
                    wavpack-4.80.0.tar.bz2
                </pkg>
                <mirror>
                    http://www.wavpack.com/
                </mirror>
            </file>
            <manualcheck date='20160924' interval='60' mirror='http://www.wavpack.com/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	      jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make -j $jobcount
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
make install
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>