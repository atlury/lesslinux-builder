                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXdamage</dep>
                        <dep>libXdmcp</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXxf86vm</dep>
                        <dep>libdrm</dep>
