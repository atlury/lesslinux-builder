<llpackages>
	<package 
		name="nbd-client-static"
		version="3.12.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                            
				<pkg sha1="e9ba5825ca7ce2585131ba2ab5698d9af29cb156">nbd-3.12.1.tar.xz</pkg>
				<mirror>http://downloads.sourceforge.net/project/nbd/nbd/3.12.1/</mirror>
			</file>
			<manualcheck date="20151216" interval="90" page="http://downloads.sourceforge.net/project/nbd" />
		</sources>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/nbd-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd nbd-${PKGVERSION}
			export PATH=/usr/local/crosstools-ia32-musl/bin:$PATH
			./configure --prefix=/usr --sysconfdir=/etc --host=i386-linux-musl --disable-glibtest
			make -j4 LDFLAGS=-all-static
			make -j4 LDFLAGS=-all-static nbd-client
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			mkdir -p ${TGTDIR}/static/bin
			install -m 0755 nbd-${PKGVERSION}/nbd-client ${TGTDIR}/static/bin 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf nbd-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
