<llpackages>
	<package 
		name="openvas-scanner"
		version="4.0.7"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="aa20f0129ab748c9575ee06455f053a60f38537e">openvas-scanner-4.0.7.tar.gz</pkg>
				<mirror>http://wald.intevation.org/frs/download.php/2101/</mirror>
			</file>
			<manualcheck date="20150621" interval="90" page="http://www.openvas.org/install-source.html" />
			<check>
				<page html="http://www.openvas.org/install-source.html">
					<atext href="openvas-scanner-4.0.10." />
					<atext href="openvas-scanner-4.0.11." />
					<atext href="openvas-scanner-4.0.8." />
					<atext href="openvas-scanner-4.0.9." />
					<atext href="openvas-scanner-5.0." />
					<atext href="openvas-scanner-6.0." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnutls3</dep>
                        <dep>grep</dep>
                        <dep>libgcrypt15</dep>
                        <dep>libgpg-error</dep>
                        <dep>libpcap</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>openvas-libraries</dep>
                        <dep>pkg-config</dep>
                        <dep>subversion</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			find . -type f -exec sed -i 's/-Werror/ /g' {} \;
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
