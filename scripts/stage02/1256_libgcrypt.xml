<llpackages>
	<package 
		name="libgcrypt"
		version="1.4.6"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="445b9e158aaf91e24eae3d1040c6213e9d9f5ba6">libgcrypt-1.4.6.tar.bz2</pkg>
				<mirror>ftp://ftp.gnupg.org/gcrypt/libgcrypt/</mirror>
			</file>
			<manualcheck date="20150619" interval="180" page="ftp://ftp.gnupg.org/gcrypt/libgcrypt/" />
			<check>
				<page html="ftp://ftp.gnupg.org/gcrypt/libgcrypt/">
					<atext linktext="libgcrypt-1.4.7." />
					<atext linktext="libgcrypt-1.4.8." />
					<atext linktext="libgcrypt-1.4.9." />
					<atext linktext="libgcrypt-1.4.10." />
					<atext linktext="libgcrypt-1.4.11." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>libgcrypt15</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr/compat.old   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr/compat.old 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			mkdir -p ${TGTDIR}/etc/lesslinux/
			touch ${TGTDIR}/etc/lesslinux/${PKGNAME}-${PKGVERSION}-dummy
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
