<llpackages>
	<package 
		name="which"
		version="2.20"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>           
				<pkg sha1="3bcd6d87aa5231917ba7123319eedcae90cfa0fd">which-2.20.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/which/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://ftp.gnu.org/gnu/which/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/which/">
					<atext linktext="which-2.21.tar.gz" />
					<atext linktext="which-2.22.tar.gz" />
					<atext linktext="which-2.23.tar.gz" />
					<atext linktext="which-2.24.tar.gz" />
					<atext linktext="which-2.25.tar.gz" />
					<atext linktext="which-3.0.tar.gz" />
					<atext linktext="which-3.00.tar.gz" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
	</package>
</llpackages>
