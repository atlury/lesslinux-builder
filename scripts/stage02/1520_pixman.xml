<llpackages>
	<package 
		name="pixman"
		version="0.32.6"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>            
			<file>                                                           
				<pkg sha1="5b730399e1e212e5acaa69a4f1a2c7be1af1cdc4">pixman-0.32.6.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/lib/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="http://xorg.freedesktop.org/archive/individual/lib/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="pixman-0.32.7" />
					<atext linktext="pixman-0.32.8" />
					<atext linktext="pixman-0.32.9" />
					<atext linktext="pixman-0.32.10" />
					<atext linktext="pixman-0.34." />
					<atext linktext="pixman-0.36." />
					<atext linktext="pixman-0.38." />
					<atext linktext="pixman-0.40." />
					<atext linktext="pixman-1." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
