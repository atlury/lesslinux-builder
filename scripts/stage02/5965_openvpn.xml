<llpackages>
	<package 
		name="openvpn"
		version="2.3.7"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="633a13c10f88110f7874ff742db1f1d4271e96c0">openvpn-2.3.7.tar.xz</pkg>
				<mirror>http://swupdate.openvpn.org/community/releases/</mirror>
			</file>
			<manualcheck date="20150620" interval="60" page="http://swupdate.openvpn.org/community/releases/" />
			<check>
				<page html="http://swupdate.openvpn.org/community/releases/">
					<atext linktext="openvpn-2.3.11." />
					<atext linktext="openvpn-2.3.8." />
					<atext linktext="openvpn-2.3.9." />
					<atext linktext="openvpn-2.3.10." />
					<atext linktext="openvpn-2.4." />
					<atext linktext="openvpn-2.5." />
					<atext linktext="openvpn-2.6." />
					<atext linktext="openvpn-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Linux-PAM</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>git</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>iproute2</dep>
                        <dep>linux_headers</dep>
                        <dep>lzo</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc --enable-iproute2 
			make 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
