<llpackages>
	<package 
		name="wxWidgets3"
		version="3.0.2"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>                         
				<pkg sha1="6461eab4428c0a8b9e41781b8787510484dea800">wxWidgets-3.0.2.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/wxwindows/3.0.2/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="e960f4683ce9704c7d5bc3cc297342dcc6a83593">scintilla344.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/scintilla/3.4.4/</mirror>
			</file>
		</sources>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/scintilla344.tgz
			tar xjf ${SRCDIR}/wxWidgets-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			make -C scintilla/gtk prefix=/usr/compat.new GTK3=yes
			cd wxWidgets-${PKGVERSION}
			./configure --prefix=/usr/compat.new --sysconfdir=/etc/compat.new --with-gtk=3 --enable-shared --enable-static --disable-compat26 --disable-compat28 --enable-unicode && make 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd wxWidgets-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf cd wxWidgets-${PKGVERSION}
			rm -rf scintilla
			]]>
		</clean>
	</package>
</llpackages>
