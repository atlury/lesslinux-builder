<llpackages>
	<package 
		name="gnutls"
		version="2.12.23"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                           
				<pkg sha1="3c0ba2153560abfb08d88dcb016cd6b72e465db5">gnutls-2.12.23.tar.bz2</pkg>
				<mirror>ftp://ftp.gnutls.org/gcrypt/gnutls/v2.12/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="ftp://ftp.gnutls.org/gcrypt/gnutls/v2.12/" />
			<check>
				<page html="ftp://ftp.gnutls.org/gcrypt/gnutls/v2.12/">
					<atext linktext="gnutls-2.12.24." />
					<atext linktext="gnutls-2.12.25." />
					<atext linktext="gnutls-2.12.26." />
					<atext linktext="gnutls-2.12.27." />
					<atext linktext="gnutls-2.12.28." />
					<atext linktext="gnutls-2.12.29." />
					<atext linktext="gnutls-2.12.30." />
					<atext linktext="gnutls-2.12.31." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>gmp</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>libgcrypt</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>nettle</dep>
			<dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>p11-kit</dep>
			<dep>guile</dep>
			<dep>gnutls3</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			for f in lib/gl/stdio.in.h gl/stdio.in.h ; do
				sed -i -e '/gets is a/d' ${PKGNAME}-${PKGVERSION}/${f}
			done
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			# ./configure --sysconfdir=/etc --prefix=/usr --without-p11-kit && make
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc/compat.old --prefix=/usr/compat.old --without-p11-kit   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc/compat.old --prefix=/usr/compat.old --without-p11-kit 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
