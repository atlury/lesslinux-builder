<llpackages>
	<package 
		name="binutils"
		version="2.25"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                 
				<pkg sha1="b46cc90ebaba7ffcf6c6d996d60738881b14e50d">binutils-2.25.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/binutils/</mirror>
			</file>
			<manualcheck date="20150308" interval="180" page="http://ftp.gnu.org/gnu/binutils/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/binutils/">
					<atext linktext="binutils-2.25.1." />
					<atext linktext="binutils-2.25.2." />
					<atext linktext="binutils-2.25.3" />
					<atext linktext="binutils-2.26." />
					<atext linktext="binutils-2.27." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>linux_headers</dep>
			<dep>glibc</dep>
			<dep>man-pages</dep>
			<dep>readjust</dep>
			<dep>zlib</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			mkdir binutils-build
			]]>
		</unpack>
		<!-- <patch>			
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			## cat ${SRCDIR}/${PKGNAME}-2.19-pt-pax-flags-200811041810.patch | patch -p1
			sed -i -e 's/@colophon/@@colophon/' -e 's/doc@cygnus.com/doc@@cygnus.com/' bfd/doc/bfd.texinfo
			rm -fv etc/standards.info
			sed -i.bak '/^INFO/s/standards.info //' etc/Makefile.in
			
			]]>
		</patch> -->
		<build>
			<![CDATA[ 
			cd ${PKGNAME}-build
			../${PKGNAME}-${PKGVERSION}/configure --prefix=/usr --enable-shared --disable-werror
			make tooldir=/usr
			]]>
		</build>
		<test>
			<![CDATA[ 
			cd ${PKGNAME}-build
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-build
			make tooldir=/usr install DESTDIR=${TGTDIR}
			mkdir -p ${TGTDIR}/usr/include
			cp -v ../${PKGNAME}-${PKGVERSION}/include/libiberty.h ${TGTDIR}/usr/include
			]]>
		</install>
		<clean>
			<![CDATA[ 
			rm -rf ${PKGNAME}-build
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
