<llpackages>
	<package 
		name="libcap"
		version="2.24"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>	
			<file>                                                    
				<pkg sha1="b2754cddb614567de445ffdaac7a00b9671b858a">libcap-2.24.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="http://ftp.de.debian.org/debian/pool/main/libc/libcap2/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/">
					<atext linktext="libcap-2.28." />
					<atext linktext="libcap-2.29." />
					<atext linktext="libcap-2.25." />
					<atext linktext="libcap-2.26." />
					<atext linktext="libcap-2.27." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Linux-PAM</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make PREFIX=/usr
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} RAISE_SETFCAP=no prefix=/usr
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
