<llpackages>
	<package 
		name="make"
		version="4.0"
		class="devel"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                              
				<pkg sha1="c819622dc84e2290c351646b8a0ec4df0df12bb6">make-4.0.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/make/</mirror>
			</file>
			<check>
				<page html="http://ftp.gnu.org/gnu/make/">
					<atext linktext="make-4.0.1." />
					<atext linktext="make-4.0.2." />
					<atext linktext="make-4.0.3." />
					<atext linktext="make-4.1." />
					<atext linktext="make-4.2." />
					<atext linktext="make-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-upstream_fixes-1.patch | patch -p1
			]]>
		</patch> -->
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
