<llpackages>
	<package 
		name="mpc"
		version="1.0.2"
		class="devel"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                
				<pkg sha1="5072d82ab50ec36cc8c0e320b5c377adb48abe70">mpc-1.0.2.tar.gz</pkg>
				<mirror>http://www.multiprecision.org/mpc/download/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://www.multiprecision.org/index.php?prog=mpc&amp;page=download" />
			<check>
				<page html="http://www.multiprecision.org/index.php?prog=mpc&amp;page=download">
					<atext linktext="Version 1.0.3" />
					<atext linktext="Version 1.0.4" />
					<atext linktext="Version 1.1" />
					<atext linktext="Version 2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>linux_headers</dep>
			<dep>glibc</dep>
			<dep>man-pages</dep>
			<dep>readjust</dep>
			<dep>zlib</dep>
			<dep>binutils</dep>
			<dep>gmp</dep>
			<dep>mpfr</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			CFLAGS='-mtune=generic -march=i686' CXXFLAGS='-mtune=generic -march=i686' \
			./configure --prefix=/usr && make -j 4
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
