<llpackages>
	<package 
		name="jfsutils"
		version="1.1.15"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                               
				<pkg sha1="291e8bd9d615cf3d27e4000117c81a3602484a50">jfsutils-1.1.15.tar.gz</pkg>
				<mirror>http://jfs.sourceforge.net/project/pub/</mirror>
			</file>
			<manualcheck date="20150823" interval="365" page="http://jfs.sourceforge.net/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			sed "s@<unistd.h>@<sys/types.h>@g" -i fscklog/extract.c
			]]>
		</patch>
		<build>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			
			]]>
		</build>
		<install>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
