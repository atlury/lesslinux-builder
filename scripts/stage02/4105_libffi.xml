		<sources>
			<file>                                                         
				<pkg sha1="8b9b344998a33da37d03a63fbaeaff46f63b2075">libffi-3.1.tar.gz</pkg>
				<mirror>ftp://sources.redhat.com/pub/libffi/</mirror>
			</file>
			<manualcheck date="20140518" interval="60" page="http://mirrors.kernel.org/sources.redhat.com/libffi/" />
			<check>
				<page html="http://mirrors.kernel.org/sources.redhat.com/libffi/">
					<atext linktext="libffi-3.1.1." />
					<atext linktext="libffi-3.1.2." />
					<atext linktext="libffi-3.1.3." />
					<atext linktext="libffi-3.3." />
					<atext linktext="libffi-3.2." />
					<atext linktext="libffi-4." />
					<atext linktext="libffi-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
