		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}Lib-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}Lib-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}Lib-${PKGVERSION}.tar.gz
			fi
			# tar xzf ${SRCDIR}/dri3proto-1.0.tar.gz
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}Lib-${PKGVERSION}-llvm.patch | patch -p0
			]]>
		</patch> -->
		<build>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}
			
			echo "Now working in:"
			pwd
			
			echo 'Current environment:'
			env
			echo 'Unsetting SRCDIR'
			unset SRCDIR
			echo 'Current environment:'
			env
			
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc /usr/bin/gcc'
				export CXX='distcc /usr/bin/g++'
			else
				export CC='/usr/bin/gcc'
				export CXX='/usr/bin/g++'
			fi
			
			./configure --prefix=/usr     \
				--sysconfdir=/etc              \
				--enable-texture-float         \
				--enable-gles1                 \
				--enable-gles2                 \
				--enable-openvg                \
				--enable-vdpau                 \
				--enable-osmesa                \
				--enable-xa                    \
				--enable-gbm                   \
				--enable-gallium-egl           \
				--enable-gallium-gbm           \
				--enable-glx-tls               \
				--with-llvm-shared-libs        \
				--with-egl-platforms="drm,x11" \
				--with-gallium-drivers="nouveau,r300,r600,radeonsi,svga,swrast" 
				
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount 
				make -j $jobcount 
				make
			else
				make
			fi
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			echo 'Unsetting SRCDIR'
			unset SRCDIR
			echo 'Current environment:'
			env
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
