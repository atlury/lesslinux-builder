<llpackages>
	<package 
		name="usbip"
		version="3.18.11"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="4557ef53c89fe70a9da230ae1e6542856d8b0a94">linux-3.18.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="e0405dbbfc02bdf155462fbbfc6a4dddb758f98a">patch-3.18.11.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20150420" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.18.12." />
					<atext linktext="patch-3.18.13." />
					<atext linktext="patch-3.18.14." />
					<atext linktext="patch-3.19." />
					<atext linktext="patch-3.20." />
					<atext linktext="patch-3.21." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>autoconf</dep>
                        <dep>automake</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>font-util</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gstreamer</dep>
                        <dep>guile</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libtool</dep>
                        <dep>libxml2</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>sysfsutils</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>util-macros</dep>
                        <dep>vala</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			major=` echo $PKGVERSION | awk -F '.' '{print $1}' ` 
			minor=` echo $PKGVERSION | awk -F '.' '{print $2}' `
			unxz -c ${SRCDIR}/linux-${major}.${minor}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			major=` echo $PKGVERSION | awk -F '.' '{print $1}' ` 
			minor=` echo $PKGVERSION | awk -F '.' '{print $2}' `
			cd linux-${major}.${minor}
			unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv linux-${major}.${minor} linux-${PKGVERSION}
			]]>
		</patch>
		<build>
			<![CDATA[
			cd linux-${PKGVERSION}/tools/usb/usbip
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			bash autogen.sh
			## sed -i 's%USBIP_VERSION 0x00000111%USBIP_VERSION 0x00000106%g' config.h 
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd linux-${PKGVERSION}/tools/usb/usbip
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
