<llpackages>
	<package 
		name="gnome-menus3"
		version="2.30.5"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                             
				<pkg sha1="29226e7a8ab59984cabb13545cc0ec28cba55398">gnome-menus-3.10.1.tar.xz</pkg>
				<mirror>http://ftp.gnome.org/pub/gnome/sources/gnome-menus/3.10/</mirror>
			</file>
			<manualcheck date="20141118" interval="60" page="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/" />
			<!-- <check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/2.30/">
					<atext linktext="gnome-menus-2.30.6." />
					<atext linktext="gnome-menus-2.30.7." />
					<atext linktext="gnome-menus-2.30.8." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/">
					<atext linktext="2.32" />
					<atext linktext="2.34" />
					<atext linktext="3." />
				</page>
			</check> -->
		</sources>
		
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/gnome-menus-${PKGVERSION}.tar.xz 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gnome-menus-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			end
			./configure --prefix=/usr/compat.new --sysconfdir=/etc/compat.new 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
