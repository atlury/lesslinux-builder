		<builddeps>
                        <dep>Python</dep>
                        <dep>WebOb</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>distribute</dep>
                        <dep>fusepy</dep>
