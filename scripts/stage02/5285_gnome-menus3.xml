                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gobject-introspection</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libffi</dep>
                        <dep>linux_headers</dep>
