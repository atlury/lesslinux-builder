<llpackages>
	<package 
		name="scite"
		version="362"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="5390d28a9cfd82e48f6eb01465f6633adefd9ecb">scintilla362.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/scintilla/3.6.2/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="b608994b4c46178a5302d682da2d00d2605e19de">scite362.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/SciTE/3.6.2/</mirror>
			</file>
			<manualcheck date="20151128" interval="90" page="http://sourceforge.net/projects/scintilla/files/SciTE/" />
			<check>
				<page html="http://sourceforge.net/projects/scintilla/files/SciTE/">
					<atext linktext="3.6.5" />
					<atext linktext="3.6.6" />
					<atext linktext="3.6.3" />
					<atext linktext="3.6.4" />
					<atext linktext="3.7." />
					<atext linktext="3.8." />
					<atext linktext="3.9." />
					<atext linktext="4.0." />
					<atext linktext="4.1." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gtk</dep>
			<dep>gtk3</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>pkg-config</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			for f in scintilla scite ; do
				tar xzf ${SRCDIR}/${f}${PKGVERSION}.tgz
			done
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				make -j $jobcount -C scintilla/gtk prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount -C scite/gtk prefix=/usr CC="distcc gcc" CXX="distcc g++" 
			else
				make -C scintilla/gtk prefix=/usr GTK3=yes
				make -C scite/gtk prefix=/usr GTK3=yes
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd scite/gtk
			make prefix=/usr DESTDIR=${TGTDIR} GTK3=yes install 
			ln -sf SciTE ${TGTDIR}/usr/bin/scite 
			sed -i 's/Categories=TextEditor;Development;GTK;Application;/Categories=Utility;TextEditor;GTK;/g'  \
				${TGTDIR}/usr/share/applications/SciTE.desktop
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf scintilla scite
			]]>
		</clean>
	</package>
</llpackages>
