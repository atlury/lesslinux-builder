			<manualcheck date="20141101" interval="180" page="http://ftp.kernel.org/pub/software/utils/pciutils/" />
			<check>
				<page html="rsync://ftp.kernel.org/pub/software/utils/pciutils/">
					<atext linktext="pciutils-3.3.2." />
					<atext linktext="pciutils-3.3.3." />
