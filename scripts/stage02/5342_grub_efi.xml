<llpackages>
	<package 
		name="grub-efi-amd64"
		version="20140308"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                         
				<pkg sha1="e7716ad48b0108329661941dd0d09fd22ca5ecbd">grub-20140308.tar.bz2</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
			<dep>cross-gcc-amd64</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/grub-${PKGVERSION}.tar.xz | tar xf - || tar xjf ${SRCDIR}/grub-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[ 
			sed -i -e '/gets is a/d' grub/grub-core/gnulib/stdio.in.h
			]]>
		</patch> -->
		<build>
			<![CDATA[
			export PATH=/usr/local/crosstools-amd64/bin:/usr/bin:/usr/sbin:/bin:/sbin
			cd grub
			bash autogen.sh
			./configure --prefix=/usr/local/crosstools-amd64 --with-platform=efi --target=amd64-linux-uclibc --disable-werror
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			export PATH=/usr/local/crosstools-amd64/bin:/usr/bin:/usr/sbin:/bin:/sbin
			cd grub
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf grub
			]]>
		</clean>
	</package>
</llpackages>
