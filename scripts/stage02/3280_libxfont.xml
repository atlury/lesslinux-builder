<llpackages>
	<package 
		name="libXfont"
		version="1.4.8"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                             
				<pkg sha1="687746ba7e6d6064cb2b930e2dfe744603a5f85b">libXfont-1.4.8.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/lib/</mirror>
			</file>
			<manualcheck date="20140518" interval="180" page="http://xorg.freedesktop.org/archive/individual/lib/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/lib/">
					<atext linktext="libXfont-1.4.11." />
					<atext linktext="libXfont-1.4.9." />
					<atext linktext="libXfont-1.4.10." />
					<atext linktext="libXfont-1.5." />
					<atext linktext="libXfont-1.6." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libfontenc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                        <dep>xtrans</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
