	<package 
		name="desktop-file-utils"
		version="0.22"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                   
				<pkg sha1="617f130091dbcc5e739d82ee48e2b3932da5957d">desktop-file-utils-0.22.tar.xz</pkg>
				<mirror>http://www.freedesktop.org/software/desktop-file-utils/releases/</mirror>
			</file>
			<manualcheck date="20130910" interval="120" page="http://www.freedesktop.org/software/desktop-file-utils/releases/" />
			<check>
				<page html="http://www.freedesktop.org/software/desktop-file-utils/releases/">
					<atext linktext="desktop-file-utils-0.24.t" />
					<atext linktext="desktop-file-utils-0.25.t" />
					<atext linktext="desktop-file-utils-0.26.t" />
					<atext linktext="desktop-file-utils-0.27.t" />
					<atext linktext="desktop-file-utils-0.23.t" />
					<atext linktext="desktop-file-utils-1." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
