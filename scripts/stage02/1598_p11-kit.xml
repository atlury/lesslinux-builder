<llpackages>
	<package 
		name="p11-kit"
		version="0.23.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                           
				<pkg sha1="4da0d7b47935b6cb0f321dd00358b063ae42df71">p11-kit-0.23.2.tar.gz</pkg>
				<mirror>http://p11-glue.freedesktop.org/releases/</mirror>
			</file>
			<manualcheck date="20151231" interval="180" page="http://p11-glue.freedesktop.org/releases/" />
			<check>
				<page html="http://p11-glue.freedesktop.org/releases/">
					<atext linktext="p11-kit-0.24." />
					<atext linktext="p11-kit-0.25." />
					<atext linktext="p11-kit-0.26." />
					<atext linktext="p11-kit-0.23.5" />
					<atext linktext="p11-kit-0.23.3" />
					<atext linktext="p11-kit-0.23.4" />
					<atext linktext="p11-kit-1." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>gmp</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>libgcrypt</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>nettle</dep>
			<dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --without-system-anchors  --without-trust-paths CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --without-system-anchors  --without-trust-paths
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
