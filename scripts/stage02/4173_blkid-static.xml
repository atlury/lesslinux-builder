<llpackages>
	<package 
		name="blkid-static"
		version="2.24.2"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                                                               
				<pkg sha1="4d2159b2420b8090b31f7198ff9d392a5b3cf0ff">util-linux-2.24.2.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/util-linux/v2.24/</mirror>
			</file>
			<manualcheck date="20140517" interval="120" page="https://www.kernel.org/pub/linux/utils/util-linux/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/util-linux/">
					<atext linktext="v2.27" />
					<atext linktext="v2.25" />
					<atext linktext="v2.26" />
					<atext linktext="v3." />
				</page>
				<page html="rsync://www.kernel.org/pub/linux/utils/util-linux/v2.24/">
					<atext linktext="util-linux-2.24.6." />
					<atext linktext="util-linux-2.24.7." />
					<atext linktext="util-linux-2.24.3." />
					<atext linktext="util-linux-2.24.4." />
					<atext linktext="util-linux-2.24.5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>linux_headers</dep>
			<dep>glibc</dep>
			<dep>man-pages</dep>
			<dep>readjust</dep>
			<dep>zlib</dep>
			<dep>binutils</dep>
			<dep>gmp</dep>
			<dep>mpfr</dep>
			<dep>mpc</dep>
			<dep>gcc</dep>
			<dep>sed</dep>
			<dep>ncurses</dep>
			<dep>ncurses-8bit</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/util-linux-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd util-linux-${PKGVERSION}
			sed -e 's@etc/adjtime@var/lib/hwclock/adjtime@g'  -i $(grep -rl '/etc/adjtime' .)
			]]>
		</patch>
		<build>
			<![CDATA[
			cd util-linux-${PKGVERSION}
			./configure --enable-arch --enable-partx --enable-write --disable-login --disable-su
			make blkid  LDFLAGS=-all-static
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd util-linux-${PKGVERSION}
			mkdir -p $TGTDIR/static/sbin
			install -m 0755 blkid $TGTDIR/static/sbin/blkid.static
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf util-linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
