<llpackages>
	<package 
		name="blkid-static"
		version="2.26.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                                                               
				<pkg sha1="ac0b880a12392b2cbbe12239ab7613c25349093d">util-linux-2.26.2.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/util-linux/v2.26/</mirror>
			</file>
			<manualcheck date="20150529" interval="120" page="https://www.kernel.org/pub/linux/utils/util-linux/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/util-linux/">
					<atext linktext="v2.27" />
					<atext linktext="v2.28" />
					<atext linktext="v2.29" />
					<atext linktext="v3." />
				</page>
				<page html="rsync://www.kernel.org/pub/linux/utils/util-linux/v2.26/">
					<atext linktext="util-linux-2.26.6." />
					<atext linktext="util-linux-2.26.7." />
					<atext linktext="util-linux-2.26.3." />
					<atext linktext="util-linux-2.26.4." />
					<atext linktext="util-linux-2.26.5." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Linux-PAM</dep>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk-doc</dep>
                        <dep>inetutils</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/util-linux-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd util-linux-${PKGVERSION}
			]]>
		</patch>
		<build>
			<![CDATA[
			cd util-linux-${PKGVERSION}
			./configure --enable-arch --enable-partx --enable-write --disable-login --disable-su
			make blkid  LDFLAGS=-all-static
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd util-linux-${PKGVERSION}
			mkdir -p $TGTDIR/static/sbin
			install -m 0755 blkid $TGTDIR/static/sbin/blkid.static
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf util-linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
