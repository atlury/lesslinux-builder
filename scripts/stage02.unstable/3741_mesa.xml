		<builddeps>
			<dep>Python</dep>
			<dep>automake</dep>
			<dep>automake113</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>file</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXt</dep>
                        <dep>libXxf86vm</dep>
                        <dep>libdrm</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
			<dep>libtool</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>talloc</dep>
			<dep>llvm</dep>
			<dep>libvdpau</dep>
			<dep>elfutils</dep>
			<dep>dri3proto</dep>
			<dep>presentproto</dep>
			<dep>libxshmfence</dep>
			<!-- soft -->
			<dep>makedepend</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/mesa-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			
			cd mesa-${PKGVERSION}
			
			echo "Now working in:"
			pwd
			
			echo 'Current environment:'
			env
			echo 'Unsetting SRCDIR'
			unset SRCDIR
			echo 'Current environment:'
			env
			
			bash autogen.sh 
			
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc /usr/bin/gcc'
				export CXX='distcc /usr/bin/g++'
			else
				export CC='/usr/bin/gcc'
				export CXX='/usr/bin/g++'
			fi
			
			./configure --prefix=/usr     \
				--sysconfdir=/etc              \
				--enable-texture-float         \
				--enable-gles1                 \
				--enable-gles2                 \
				--enable-openvg                \
				--enable-vdpau                 \
				--enable-osmesa                \
				--enable-xa                    \
				--enable-gbm                   \
				--enable-gallium-egl           \
				--enable-gallium-gbm           \
				--enable-glx-tls               \
				--with-egl-platforms="drm,x11" \
				--with-gallium-drivers="i915,ilo,nouveau,r300,r600,radeonsi,svga,swrast" 
				
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount 
				make -j $jobcount 
				make
			else
				make -j 4
			fi
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			echo 'Unsetting SRCDIR'
			unset SRCDIR
			echo 'Current environment:'
			env
			cd mesa-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf mesa-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
