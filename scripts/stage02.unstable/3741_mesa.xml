		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/mesa-${PKGVERSION}.tar.xz 
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd mesa-${PKGVERSION}
			patch -Np1 -i ${SRCDIR}/mesa-12.0.3-add_xdemos-1.patch
			sed -i "/pthread-stubs/d" configure.ac     
			sed -i "/seems to be moved/s/^/: #/" bin/ltmain.sh 
			]]>
		</patch>
		<build>
			<![CDATA[
			
			cd mesa-${PKGVERSION}
			
			echo "Now working in:"
			pwd
			
			echo 'Current environment:'
			env
			echo 'Unsetting SRCDIR'
			unset SRCDIR
			echo 'Current environment:'
			env
			
			# bash autogen.sh 
			
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc /usr/bin/gcc'
				export CXX='distcc /usr/bin/g++'
			else
				export CC='/usr/bin/gcc'
				export CXX='/usr/bin/g++'
			fi
			
			./configure CFLAGS='-O2' CXXFLAGS='-O2' \
				--prefix=/usr     \
				--sysconfdir=/etc              \
				--enable-texture-float         \
				--enable-gles1                 \
				--enable-gles2                 \
				--enable-vdpau                 \
				--enable-osmesa                \
				--enable-xa                    \
				--enable-gbm                   \
				--enable-glx-tls               \
				--with-egl-platforms="drm,x11,wayland" \
				--with-gallium-drivers="i915,nouveau,r300,r600,radeonsi,svga,swrast" 
				
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				make -j $jobcount 
				make -j $jobcount 
				make
			else
				make -j 4
			fi
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			echo 'Unsetting SRCDIR'
			unset SRCDIR
			echo 'Current environment:'
			env
			cd mesa-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf mesa-${PKGVERSION}
			]]>
		</clean>
