<llpackages>
	<package 
		name="alsa-firmware"
		version="1.0.28"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                             
				<pkg sha1="07078bdfe11d542a25b64314ca06120ce4ef1034">alsa-firmware-1.0.28.tar.bz2</pkg>
				<mirror>ftp://ftp.alsa-project.org/pub/firmware/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="ftp://ftp.alsa-project.org/pub/lib/" />
			<check>
				<page html="http://ftp.silug.org/pub/alsa/firmware/">
					<atext linktext="alsa-utils-1.0.28.1." />
					<atext linktext="alsa-utils-1.0.28.2." />
					<atext linktext="alsa-utils-1.0.29." />
					<atext linktext="alsa-utils-1.0.30." />
					<atext linktext="alsa-utils-1.1." />
					<atext linktext="alsa-utils-1.2." />
					<atext linktext="alsa-utils-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>which</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
