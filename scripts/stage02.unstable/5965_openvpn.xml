<llpackages>
	<package 
		name="openvpn"
		version="2.4.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="64395346fa6c7f52a350073acf6acfe5c0658bc8">openvpn-2.4.2.tar.xz</pkg>
				<mirror>http://swupdate.openvpn.org/community/releases/</mirror>
			</file>
			<manualcheck date="20170615" interval="60" page="http://swupdate.openvpn.org/community/releases/" />
			<check>
				<page html="http://swupdate.openvpn.org/community/releases/">
					<atext linktext="openvpn-2.4.5." />
					<atext linktext="openvpn-2.4.6." />
					<atext linktext="openvpn-2.4.3." />
					<atext linktext="openvpn-2.4.4." />
					<atext linktext="openvpn-2.7." />
					<atext linktext="openvpn-2.5." />
					<atext linktext="openvpn-2.6." />
					<atext linktext="openvpn-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Linux-PAM</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>git</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>iproute2</dep>
                        <dep>linux_headers</dep>
                        <dep>lzo</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --enable-iproute2 
			make  -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
