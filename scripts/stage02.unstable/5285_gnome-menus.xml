<llpackages>
	<package 
		name="gnome-menus"
		version="2.30.5"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                             
				<pkg sha1="dcf7af8507d5678d6bb1bf705d2c4ac2238c6da5">gnome-menus-2.30.5.tar.bz2</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/2.30/</mirror>
			</file>
			<manualcheck date="20140802" interval="365" page="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/2.30/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/2.30/">
					<atext linktext="gnome-menus-2.30.6." />
					<atext linktext="gnome-menus-2.30.7." />
					<atext linktext="gnome-menus-2.30.8." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-menus/">
					<atext linktext="2.32" />
					<atext linktext="2.34" />
					<atext linktext="3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>GConf</dep>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gobject-introspection</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libffi</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr/compat.old --sysconfdir=/etc/compat.old
				pump make -j $jobcount
			else
				./configure --prefix=/usr /compat.old --sysconfdir=/etc/compat.old
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
