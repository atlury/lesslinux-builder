<llpackages>
	<package 
		name="qtwebkit"
		version="2.3.4"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>                                                                                                
			<file>
				<pkg sha1="a8c7978517ffac2285a9eee7e72a479aa6b910c3">qtwebkit-2.3.4.tar.gz</pkg>
				<mirror>http://download.kde.org/stable/qtwebkit-2.3/2.3.4/src/</mirror>
			</file>
			<file>
				<pkg sha1="bf781e5f46cfe71deb5688aff2827462fd759dd2">qtwebkit-2.3.4-gcc5-1.patch</pkg>
				<mirror>http://www.linuxfromscratch.org/patches/blfs/7.8/</mirror>
			</file>
			<!-- <file>
				<pkg sha1="c2b2b4f20bc76f298171e35af10866094f60d574">qt-everywhere-opensource-src-4.8.2-glib_fix-1.patch</pkg>
				<mirror>http://www.linuxfromscratch.org/patches/blfs/svn/</mirror>
			</file> -->
			<manualcheck date="20150530" interval="180" page="http://qt-project.org/downloads" />
		</sources>
		<builddeps>
			<dep>Mesa</dep><dep>glu</dep>
                        <dep>alsa-lib</dep>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk</dep>
			<dep>gtk3</dep>
                        <dep>jpegsrc</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXi</dep>
                        <dep>libXrandr</dep>
                        <dep>libXrender</dep>
                        <dep>libXv</dep>
                        <dep>libpng12</dep><dep>libpng14</dep><dep>libpng15</dep><dep>libpng16</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tiff</dep>
                        <dep>which</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
			<dep>sqlite</dep>
			<!-- soft -->
			<dep>makedepend</dep>
			<dep>gst-plugins-base</dep>
			<dep>gst-plugins-base1</dep>
			<dep>distcc</dep>
			<dep>qt-everywhere-opensource-src</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			mkdir ${PKGNAME}-${PKGVERSION}
			cd ${PKGNAME}-${PKGVERSION}
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-gcc5-1.patch | patch -p1
			]]>
		</patch> 
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 4 `
				export CC='distcc gcc'
				export CXX='distcc g++'
			else
				export CC='gcc'
				export CXX='g++'
			fi
			export QTDIR=/usr/compat.old/qt4 
			PATH=$PATH:$QTDIR/bin Tools/Scripts/build-webkit --qt --no-webkit2 --prefix=$QTDIR --makeargs=-j${jobcount}
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			export QTDIR=/usr/compat.old/qt4 
			make -C WebKitBuild/Release install
			# mkdir -p ${TGTDIR}/etc/lesslinux/packages/
			# touch ${TGTDIR}/etc/lesslinux/packages/${PKGNAME}-${PKGVERSION}_is_not_needed_on_stable
			]]>
		</install>
		<clean>
			 <![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
