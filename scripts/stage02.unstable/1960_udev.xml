<llpackages>
	<package 
		name="udev"
		version="3.1.1"
		class="user"
		install="chroot">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                   
				<pkg sha1="cdce44230bc654f73925c37216e65428e9f6fd8b">eudev-3.1.1.tar.gz</pkg>
				<mirror>http://dev.gentoo.org/~blueness/eudev/</mirror>
			</file>
			<file>      
				<pkg sha1="7e79b839f7a0adf11a22fbb49c43531f19e55b7f">udev-lfs-20140408.tar.bz2</pkg>
				<mirror>http://anduin.linuxfromscratch.org/sources/other/</mirror>
			</file>
			<manualcheck date="20150609" interval="90" page="http://www.kernel.org/pub/linux/utils/kernel/hotplug/" />
			<check>
				<page html="http://dev.gentoo.org/~blueness/eudev/">
					<atext linktext="eudev-3.1.2." />
					<atext linktext="eudev-3.1.3." />
					<atext linktext="eudev-3.1.4." />
					<atext linktext="eudev-3.2." />
					<atext linktext="eudev-3.3." />
					<atext linktext="eudev-3.4." />
					<atext linktext="eudev-3.5." />
					<atext linktext="eudev-4." />
					<atext linktext="eudev-5." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>acl</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gperf</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libusb</dep><dep>libusb-compat</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <!-- <dep>usbutils</dep> -->
                        <dep>util-linux-ng</dep>
			<dep>kmod</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/e${PKGNAME}-${PKGVERSION}.tar.gz
			tar xjf ${SRCDIR}/udev-lfs-20140408.tar.bz2
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd e${PKGNAME}-${PKGVERSION}
			sed -r -i 's|/usr(/bin/test)|\1|' test/udev-test.pl

cat > config.cache << "EOF"
HAVE_BLKID=1
BLKID_LIBS="-lblkid"
BLKID_CFLAGS="-I/tools/include"
EOF

			]]>
		</patch>
		<build>
			<![CDATA[
			cd e${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr           \
				--bindir=/sbin          \
				--sbindir=/sbin         \
				--libdir=/usr/lib       \
				--sysconfdir=/etc       \
				--libexecdir=/lib       \
				--with-rootprefix=      \
				--with-rootlibdir=/lib  \
				--enable-split-usr      \
				--enable-libkmod        \
				--enable-rule_generator \
				--enable-keymap         \
				--disable-introspection \
				--disable-gtk-doc-html  \
				--with-firmware-path=/lib/firmware 
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			mkdir -pv /lib/{firmware,udev}
			mkdir -pv /lib/udev/rules.d
			mkdir -pv /etc/udev/rules.d
			make -C e${PKGNAME}-${PKGVERSION} install
			# ln -sf libudev.so.1.6.0 /lib/libudev.so.0
			make -f udev-lfs-20140408/Makefile.lfs install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf e${PKGNAME}-${PKGVERSION} udev-lfs-20140408
			]]>
		</clean>
	</package>
</llpackages>
