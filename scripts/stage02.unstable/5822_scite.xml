<llpackages>
	<package 
		name="scite"
		version="343"
		class="user"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="daedabfba36b65660e4aa4eae7dd7f92192a7ea2">scintilla343.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/scintilla/3.4.3/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="7365e8f264f9448712f6c21ee43985a4932d1f82">scite343.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/SciTE/3.4.3/</mirror>
			</file>
			<manualcheck date="20140805" interval="120" page="http://sourceforge.net/projects/scintilla/files/SciTE/" />
			<check>
				<page html="http://sourceforge.net/projects/scintilla/files/SciTE/">
					<atext linktext="3.4.2" />
					<atext linktext="3.4.3" />
					<atext linktext="3.4.4" />
					<atext linktext="3.4.5" />
					<atext linktext="3.6." />
					<atext linktext="3.7." />
					<atext linktext="3.5." />
					<atext linktext="4.0." />
					<atext linktext="4.1." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gtk</dep>
			<dep>gtk3</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>pkg-config</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			for f in scintilla scite ; do
				tar xzf ${SRCDIR}/${f}${PKGVERSION}.tgz
			done
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				pump make -j $jobcount -C scintilla/gtk prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount -C scite/gtk prefix=/usr CC="distcc gcc" CXX="distcc g++" 
			else
				make -C scintilla/gtk prefix=/usr GTK3=yes
				make -C scite/gtk prefix=/usr GTK3=yes
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd scite/gtk
			make prefix=/usr DESTDIR=${TGTDIR} GTK3=yes install 
			ln -sf SciTE ${TGTDIR}/usr/bin/scite 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf scintilla scite
			]]>
		</clean>
	</package>
</llpackages>
