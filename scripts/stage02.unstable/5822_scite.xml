<llpackages>
	<package 
		name="scite"
		version="366"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="582efe82287c110fbee1d0877363ec73bf6393ea">scintilla366.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/scintilla/3.6.6/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="86651845f28aeee659286d5a4564a469407e9fcd">scite366.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/SciTE/3.6.6/</mirror>
			</file>
			<manualcheck date="20160701" interval="90" page="http://sourceforge.net/projects/scintilla/files/SciTE/" />
			<check>
				<page html="http://sourceforge.net/projects/scintilla/files/SciTE/">
					<atext linktext="3.6.7" />
					<atext linktext="3.6.8" />
					<atext linktext="3.6.9" />
					<atext linktext="3.6.10" />
					<atext linktext="3.7." />
					<atext linktext="3.8." />
					<atext linktext="3.9." />
					<atext linktext="4.0." />
					<atext linktext="4.1." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gtk</dep>
			<dep>gtk3</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>pkg-config</dep>
			<!-- dep>distcc</dep -->
                </builddeps>
		<unpack>
			<![CDATA[ 
			for f in scintilla scite ; do
				tar xzf ${SRCDIR}/${f}${PKGVERSION}.tgz
			done
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				make -j $jobcount -C scintilla/gtk prefix=/usr CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount -C scite/gtk prefix=/usr CC="distcc gcc" CXX="distcc g++" 
			else
				make -C scintilla/gtk prefix=/usr GTK3=yes
				make -C scite/gtk prefix=/usr GTK3=yes
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd scite/gtk
			make prefix=/usr DESTDIR=${TGTDIR} GTK3=yes install 
			ln -sf SciTE ${TGTDIR}/usr/bin/scite 
			sed -i 's/Categories=TextEditor;Development;GTK;Application;/Categories=Utility;TextEditor;GTK;/g'  \
				${TGTDIR}/usr/share/applications/SciTE.desktop
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf scintilla scite
			]]>
		</clean>
	</package>
</llpackages>
