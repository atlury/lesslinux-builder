<llpackages>
	<package 
		name="gtk3"
		version="3.22.0"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                   
				<pkg sha1="47def49000d2b1b1fdde4a362f3cb81ca0b80611">gtk+-3.22.0.tar.xz</pkg>
				<mirror>http://ftp.acc.umu.se/pub/gnome/sources/gtk+/3.22/</mirror>
			</file>
			<manualcheck date="20160923" interval="180" page="http://ftp.acc.umu.se/pub/gnome/sources/gtk+/" />
			<check>
				<page html="http://ftp.gtk.org/pub/gtk/3.22/">
					<atext linktext="gtk+-3.22.1." />
					<atext linktext="gtk+-3.22.2." />
					<atext linktext="gtk+-3.22.3." />
					<atext linktext="gtk+-3.22.4." />
					<atext linktext="gtk+-3.22.5." />
				</page>
				<page html="http://ftp.gtk.org/pub/gtk/">
					<atext linktext="3.28" />
					<atext linktext="3.24" />
					<atext linktext="3.26" />
					<atext linktext="4." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>distcc</dep>
			<dep>gtk</dep>
			<dep>at-spi2-atk</dep>
                        <dep>at-spi2-core</dep>
			<dep>gobject-introspection1</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/gtk+-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gtk+-${PKGVERSION}
			export PKG_CONFIG_PATH=/usr/compat.new/lib/pkgconfig
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --without-atk-bridge --prefix=/usr --sysconfdir=/etc --disable-broadway-backend --enable-x11-backend --disable-wayland-backend CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure  --without-atk-bridge --prefix=/usr --sysconfdir=/etc --disable-broadway-backend --enable-x11-backend --disable-wayland-backend 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gtk+-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gtk+-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
