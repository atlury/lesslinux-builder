<llpackages>
	<package 
		name="openjpeg"
		version="1.5.2"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="496e99ff1d37b73bbce6a066dd9bd3576ebca0a2">openjpeg-1.5.2.tar.gz</pkg>
				<mirror>http://downloads.sourceforge.net/openjpeg.mirror/</mirror>
			</file>
			<manualcheck date="20150529" interval="120" page="http://downloads.sourceforge.net/openjpeg.mirror/" />
			<!-- <check>
				<page html="http://code.google.com/p/openjpeg/downloads/list">
					<atext linktext="openjpeg_v1_3_1.tar.gz" />
					<atext linktext="openjpeg_v1_4.tar.gz" />
					<atext linktext="openjpeg_v1_5.tar.gz" />
					<atext linktext="openjpeg_v2_0.tar.gz" />
				</page>
			</check> -->
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>make</dep>
			<dep>xproto-base</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			autoreconf -f -i
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr
				make PREFIX=/usr
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make PREFIX=/usr install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
