		<patch>
			<![CDATA[
			cd  qt-everywhere-src-${PKGVERSION}
			cat ${SRCDIR}/qt-5.11.1-glibc228-1.patch | patch -p1
			]]>
		</patch>
		<build>
			<![CDATA[
			cd qt-everywhere-src-${PKGVERSION}
			# echo "INCLUDEPATH += /usr/include/openssl-1.0" >> qtbase/src/network/network.pro
			# export OPENSSL_LIBS='-L/usr/lib/openssl-1.0 -lssl -lcrypto'
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				[ "$jobcount" -gt 8 ] && jobcount=8 
				export CC='distcc gcc'
				export CXX='distcc g++'
				./configure -prefix /usr \
					-bindir         /usr/bin/qt5                \
					-plugindir      /usr/lib/qt5/plugins        \
					-importdir      /usr/lib/qt5/imports        \
					-headerdir      /usr/include/qt5            \
					-datadir        /usr/share/qt5              \
					-docdir         /usr/share/doc/qt5          \
					-translationdir /usr/share/qt5/translations \
					-examplesdir    /usr/share/doc/qt5/examples \
					-sysconfdir /etc/xdg                        \
					-confirm-license                            \
					-opensource                                 \
					-dbus-linked                                \
					-openssl-linked                             \
					-system-harfbuzz                            \
					-system-sqlite                              \
					-nomake examples                            \
					-no-rpath              -skip qtwebengine                   
				make -j $jobcount 
			else
				./configure -prefix /usr \
					-bindir         /usr/bin/qt5                \
					-plugindir      /usr/lib/qt5/plugins        \
					-importdir      /usr/lib/qt5/imports        \
					-headerdir      /usr/include/qt5            \
					-datadir        /usr/share/qt5              \
					-docdir         /usr/share/doc/qt5          \
					-translationdir /usr/share/qt5/translations \
					-examplesdir    /usr/share/doc/qt5/examples \
					-sysconfdir /etc/xdg                        \
					-confirm-license                            \
					-opensource                                 \
					-dbus-linked                                \
					-openssl-linked                             \
					-system-harfbuzz                            \
					-system-sqlite                              \
					-nomake examples                            \
					-no-rpath              -skip qtwebengine                   
				make -j 4
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd qt-everywhere-opensource-src-${PKGVERSION}
			make install 
			for file in moc uic rcc qmake lconvert lrelease lupdate; do
				ln -sfrvn /usr/bin/qt5/$file /usr/bin/$file-qt5
			done
			mkdir -p /etc/profile.d
			cat > /etc/profile.d/qt5.sh << "EOF"
# Begin /etc/profile.d/qt5.sh

QT5DIR=/usr
export QT5DIR
pathappend $QT5DIR/bin

# End /etc/profile.d/qt5.sh
EOF

			]]>
		</install>
		<clean>
