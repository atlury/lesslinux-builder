<llpackages>
	<package 
		name="libvshadow"
		version="20170715"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="b47adf9093fcabbd3bbac0b5cf330448c6bd1343">libvshadow-alpha-20170715.tar.gz</pkg>
				<mirror>https://github.com/libyal/libvshadow/releases/download/20170715/</mirror>
			</file>
			<manualcheck date="20170801" interval="120" page="https://github.com/libyal/libvshadow/releases" />
			<check>
				<page html="https://github.com/libyal/libvshadow/releases">
					<atext href="libvshadow-alpha-201710" />
					<atext href="libvshadow-alpha-201711" />
					<atext href="libvshadow-alpha-201712" />
					<atext href="libvshadow-alpha-201708" />
					<atext href="libvshadow-alpha-201709" />
					<atext href="libvshadow-alpha-20171" />
					<atext href="libvshadow-alpha-2018" />
					<atext href="libvshadow-alpha-2019" />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fuse</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-alpha-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --enable-python 
			make  -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
