<llpackages>
	<package 
		name="libvshadow"
		version="20150106"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="18ee3ace9f06b807f59e1cd194f0c9d5f2bb11fa">libvshadow-alpha-20150106.tar.gz</pkg>
				<mirror>https://github.com/libyal/libvshadow/releases/download/20150106/</mirror>
			</file>
			<manualcheck date="20140731" interval="120" page="https://github.com/libyal/libvshadow/releases" />
			<check>
				<page html="https://github.com/libyal/libvshadow/releases">
					<atext href="libvshadow-alpha-201505" />
					<atext href="libvshadow-alpha-201506" />
					<atext href="libvshadow-alpha-201507" />
					<atext href="libvshadow-alpha-201508" />
					<atext href="libvshadow-alpha-201509" />
					<atext href="libvshadow-alpha-20151" />
					<atext href="libvshadow-alpha-2016" />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fuse</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>gcc49</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-alpha-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			CC=/usr/local/gcc49/bin/gcc49 CXX=/usr/local/gcc49/bin/g++49 \
			./configure --prefix=/usr --sysconfdir=/etc --enable-python 
			make 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
