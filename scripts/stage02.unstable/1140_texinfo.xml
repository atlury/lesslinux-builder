<llpackages>
	<package 
		name="texinfo"
		version="6.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
	<sources>
			<file>
				<pkg sha1="e0cf05fa968203ded69b6bc2aeef9053fded0fa6">texinfo-6.2.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/texinfo/</mirror>
			</file>
			<manualcheck date="20160922" interval="120" page="http://ftp.gnu.org/gnu/texinfo/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/texinfo/">
					<atext linktext="texinfo-6.5" />
					<atext linktext="texinfo-6.6" />
					<atext linktext="texinfo-6.3" />
					<atext linktext="texinfo-6.4" />
					<atext linktext="texinfo-7" />
					<atext linktext="texinfo-8" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr && make -j $jobcount
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
