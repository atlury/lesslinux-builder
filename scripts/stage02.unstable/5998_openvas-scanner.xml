<llpackages>
	<package 
		name="openvas-scanner"
		version="4.0.6"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="58e38ec650a9fda94cc9efc9c0e99e23eb9dd5ce">openvas-scanner-4.0.6.tar.gz</pkg>
				<mirror>http://wald.intevation.org/frs/download.php/1959/</mirror>
			</file>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnutls3</dep>
                        <dep>grep</dep>
                        <dep>libgcrypt15</dep>
                        <dep>libgpg-error</dep>
                        <dep>libpcap</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>openvas-libraries</dep>
                        <dep>pkg-config</dep>
                        <dep>subversion</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			find . -type f -exec sed -i 's/-Werror/ /g' {} \;
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
