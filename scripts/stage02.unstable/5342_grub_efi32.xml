<llpackages>
	<package 
		name="grub-efi-i386"
		version="20141102"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                         
				<pkg sha1="b744b34334adb24b6ddd119d9fcbc081775af209">grub-20141102.tar.bz2</pkg>
				<mirror>ftp://ftp.gnu.org/gnu/grub/</mirror>
			</file>
			<manualcheck date="20141102" interval="90" page="ftp://ftp.gnu.org/gnu/grub/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/grub/">
					<atext linktext="grub-2.01." />
					<atext linktext="grub-2.02." />
					<atext linktext="grub-2.03." />
					<atext linktext="grub-2.04." />
					<atext linktext="grub-2.05." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
			<dep>cross-gcc-amd64</dep>
			<dep>cross-gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/grub-${PKGVERSION}.tar.xz | tar xf - || tar xjf ${SRCDIR}/grub-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[ 
			sed -i -e '/gets is a/d' grub/grub-core/gnulib/stdio.in.h
			]]>
		</patch> -->
		<build>
			<![CDATA[
			export PATH=/usr/local/crosstools/bin:/usr/bin:/usr/sbin:/bin:/sbin
			cd grub
			bash autogen.sh
			./configure --prefix=/usr/local/crosstools --with-platform=efi --target=i686-linux-uclibc --disable-werror
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			export PATH=/usr/local/crosstools/bin:/usr/bin:/usr/sbin:/bin:/sbin
			cd grub
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf grub
			]]>
		</clean>
	</package>
</llpackages>
