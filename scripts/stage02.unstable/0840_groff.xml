		<license>GPLv2</license>
		<sources>
			<file>                               
				<pkg sha1="61a6808ea1ef715df9fa8e9b424e1f6b9fa8c091">groff-1.22.3.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/groff/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="http://ftp.gnu.org/gnu/groff/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/groff/">
					<atext linktext="groff-1.22.5" />
					<atext linktext="groff-1.22.6" />
					<atext linktext="groff-1.22.7" />
					<atext linktext="groff-1.22.4" />
					<atext linktext="groff-1.23." />
					<atext linktext="groff-1.24." />
					<atext linktext="groff-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			 <dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
			<dep>autoconf</dep>
                        <dep>automake</dep>
			<dep>xz</dep>
                        <dep>kmod</dep>
			<dep>gettext</dep>
			<dep>procps</dep>
			<!-- <dep>e2fsprogs</dep> -->
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>findutils</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			PAGE=A4 ./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make docdir=/usr/share/doc/${PKGNAME}-${PKGVERSION} install DESTDIR=${TGTDIR} 
			ln -sv eqn ${TGTDIR}/usr/bin/geqn
			ln -sv tbl ${TGTDIR}/usr/bin/gtbl
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
