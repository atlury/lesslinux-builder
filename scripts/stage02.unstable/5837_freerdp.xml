                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/FreeRDP-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd FreeRDP
			git checkout stable-1.1
			cmake -DCMAKE_INSTALL_PREFIX=/usr -DWITH_PCSC=ON -DWITH_CUPS=ON .
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd FreeRDP # -${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf FreeRDP # -${PKGVERSION}
			]]>
		</clean>
