		<builddeps>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>ffmpeg</dep>
                        <dep>gcc</dep>
