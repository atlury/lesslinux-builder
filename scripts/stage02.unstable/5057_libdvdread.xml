<llpackages>
	<package 
		name="libdvdread"
		version="5.0.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="ab5c46f9a82b0c5d758ef2ca369b32fa939a6405">libdvdread-5.0.3.tar.bz2</pkg>
				<mirror>http://www.videolan.org/pub/videolan/libdvdread/5.0.3/</mirror>
			</file>
			<manualcheck date="20150530" interval="180" page="http://download.videolan.org/pub/videolan/libdvdread/" />
			<check>
				<page html="http://download.videolan.org/pub/videolan/libdvdread/">
					<atext linktext="5.0.10" />
					<atext linktext="5.0.4" />
					<atext linktext="5.0.5" />
					<atext linktext="5.0.6" />
					<atext linktext="5.0.7" />
					<atext linktext="5.0.8" />
					<atext linktext="5.0.9" />
					<atext linktext="5.1." />
					<atext linktext="5.2." />
					<atext linktext="5.3." />
					<atext linktext="5.4." />
					<atext linktext="6.0." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			bash autogen.sh
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR="${TGTDIR}"
			]]>
		</install>
	</package>
</llpackages>
