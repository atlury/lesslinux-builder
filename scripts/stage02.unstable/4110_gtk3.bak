<llpackages>
	<package 
		name="gtk3"
		version="3.14.10"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                   
				<pkg sha1="d6eaaba60261b21663d857a8ee32f9c9cd2aaff3">gtk+-3.14.10.tar.xz</pkg>
				<mirror>http://ftp.acc.umu.se/pub/gnome/sources/gtk+/3.14/</mirror>
			</file>
			<manualcheck date="20141101" interval="180" page="http://ftp.acc.umu.se/pub/gnome/sources/gtk+/3.14/" />
			<check>
				<page html="http://ftp.gtk.org/pub/gtk/3.14/">
					<atext linktext="gtk+-3.14.11." />
					<atext linktext="gtk+-3.14.12." />
					<atext linktext="gtk+-3.14.13." />
					<atext linktext="gtk+-3.14.14." />
				</page>
				<page html="http://ftp.gtk.org/pub/gtk/">
					<atext linktext="3.16" />
					<atext linktext="3.18" />
					<atext linktext="3.20" />
					<atext linktext="4." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>distcc</dep>
			<dep>gtk</dep>
			<dep>at-spi2-atk</dep>
                        <dep>at-spi2-core</dep>
			<dep>gobject-introspection1</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/gtk+-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gtk+-${PKGVERSION}
			export PKG_CONFIG_PATH=/usr/compat.new/lib/pkgconfig
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --without-atk-bridge --prefix=/usr --sysconfdir=/etc --disable-broadway-backend --enable-x11-backend --disable-wayland-backend CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure  --without-atk-bridge --prefix=/usr --sysconfdir=/etc --disable-broadway-backend --enable-x11-backend --disable-wayland-backend 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gtk+-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gtk+-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
