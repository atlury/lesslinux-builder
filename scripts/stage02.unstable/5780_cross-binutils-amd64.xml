<llpackages>
	<package 
		name="cross-binutils-amd64"
		version="2.28"
		class="devel"
		install="destdir"
		providedeps="no">
		<license>GPLv2</license>
		<sources>
			<file>                                                                 
				<pkg sha1="f8b033731f6baa437d429c60e2623570f1ef9d6b">binutils-2.28.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/binutils/</mirror>
			</file>
			<manualcheck date="20170606" interval="180" page="http://ftp.gnu.org/gnu/binutils/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/binutils/">
					<atext linktext="binutils-2.28.1." />
					<atext linktext="binutils-2.28.2." />
					<atext linktext="binutils-2.28.3" />
					<atext linktext="binutils-2.29." />
					<atext linktext="binutils-2.30." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>autoconf</dep>
                        <dep>automake</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/binutils-${PKGVERSION}.tar.bz2
			mkdir binutils-build
			]]>
		</unpack>
