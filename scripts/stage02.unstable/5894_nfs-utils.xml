<llpackages>
	<package 
		name="nfs-utils"
		version="1.3.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                      
				<pkg sha1="54707d8e171d9c8048a20aeb1181e4582e935b82">nfs-utils-1.3.4.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/nfs-utils/1.3.4/</mirror>
			</file>
			<manualcheck date="20160823" interval="180" page="rsync://www.kernel.org/pub/linux/utils/nfs-utils/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/nfs-utils/">
					<atext linktext="1.3.6" />
					<atext linktext="1.3.7" />
					<atext linktext="1.3.8" />
					<atext linktext="1.3.9" />
					<atext linktext="1.3.5" />
