                        <dep>openssl</dep>
                        <dep>pcre</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>subversion</dep>
                        <dep>util-linux-ng</dep>
			<!-- dep>distcc</dep -->
                </builddeps>
		<unpack>
			<![CDATA[ 
			
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tgz
			
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --with-libpcap=included --without-nmap-update
			
			make -j $jobcount -k
			make -j $jobcount
			make 
			
			]]>
		</build>
		<install>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			[ -f ${TGTDIR}/usr/bin/nmap ] || exit 1 
			rm ${TGTDIR}/usr/share/applications/zenmap*.desktop
			
			cat > ${TGTDIR}/usr/share/applications/zenmap.desktop  << EOF
			
			
[Desktop Entry]
Encoding=UTF-8
Name=Zenmap
GenericName=GUI Port Scanner
Exec=sudo /usr/bin/zenmap
Terminal=false
Icon=/usr/share/zenmap/pixmaps/zenmap.png
Type=Application
Categories=CB-Other;
Comment=A cross-platform GUI for the Nmap Security Scanner.

EOF


			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
