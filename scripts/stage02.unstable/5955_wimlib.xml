<llpackages>
	<package 
		name="wimlib"
		version="1.8.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="919eec5f226932b492cb54c00a9a2aacbf480b82">wimlib-1.8.1.tar.gz</pkg>
				<mirror>http://downloads.sourceforge.net/project/wimlib/</mirror>
			</file>
			<manualcheck date="20150601" interval="90" page="http://downloads.sourceforge.net/project/wimlib/" />
			<check>
				<page html="http://sourceforge.net/projects/wimlib/files/">
					<atext linktext="wimlib-1.8.2." />
					<atext linktext="wimlib-1.8.3." />
					<atext linktext="wimlib-1.8.4." />
					<atext linktext="wimlib-1.8.5." />
					<atext linktext="wimlib-1.9." />
					<atext linktext="wimlib-1.10." />
					<atext linktext="wimlib-1.11." />
					<atext linktext="wimlib-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>distcc</dep>
                        <dep>fuse</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gnome-icon-theme</dep>
                        <dep>grep</dep>
                        <dep>icu</dep>
                        <dep>inetutils</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ntfs-3g_ntfsprogs</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>procps</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>xz</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
