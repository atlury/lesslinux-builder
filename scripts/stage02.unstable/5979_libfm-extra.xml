		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/libfm-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd libfm-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			bash autogen.sh
			./configure --prefix=/usr --sysconfdir=/etc --with-extra-only --with-gtk=no    
			make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd libfm-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf libfm-${PKGVERSION}
			]]>
		</clean>
