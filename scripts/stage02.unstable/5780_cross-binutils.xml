	<sources>
			<file>                                                                 
				<pkg sha1="624cd377e3a8eef3db83a56ce289a60f556b3ec2">binutils-2.26.1.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/binutils/</mirror>
			</file>
			<manualcheck date="20160629" interval="180" page="http://ftp.gnu.org/gnu/binutils/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/binutils/">
					<atext linktext="binutils-2.26.4." />
					<atext linktext="binutils-2.26.2." />
