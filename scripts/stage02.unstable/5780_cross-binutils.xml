		<build>
			<![CDATA[ 
			cd binutils-build
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				../binutils-${PKGVERSION}/configure --target=i486-linux-uclibc  --prefix=/usr/local/crosstools --disable-nls --disable-werror CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				../binutils-${PKGVERSION}/configure --target=i486-linux-uclibc  --prefix=/usr/local/crosstools --disable-nls --disable-werror
				make -j 3
			fi
			]]>
		</build>
		<install>
			<![CDATA[
			cd binutils-build
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[ 
			rm -rf binutils-build
			rm -rf binutils-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
