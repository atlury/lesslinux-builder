					<atext linktext="binutils-2.27." />
					<atext linktext="binutils-2.28." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>autoconf</dep>
                        <dep>automake</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/binutils-${PKGVERSION}.tar.bz2
			mkdir binutils-build
			]]>
		</unpack>
