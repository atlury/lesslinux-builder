<llpackages>
	<package 
		name="xdg-utils"
		version="1.1.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>   
				<pkg sha1="788622223efd9aa676f52ecaaf01b6510538ec60">xdg-utils-1.1.0.tar.gz</pkg>
				<mirror>http://portland.freedesktop.org/download/</mirror>
			</file>
			<manualcheck date="20160113" interval="365" page="http://portland.freedesktop.org/download/" />
			<check>
				<page html="http://portland.freedesktop.org/download/">
					<atext linktext="xdg-utils-1.1.1." />
					<atext linktext="xdg-utils-1.1.2." />
					<atext linktext="xdg-utils-1.1.3." />
					<atext linktext="xdg-utils-1.1.4." />
					<atext linktext="xdg-utils-1.2." />
					<atext linktext="xdg-utils-1.3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>libxslt</dep>
			<dep>xmlto</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
