				</page>
			</check> -->
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>popt</dep>
                        <dep>sed</dep>
			<dep>Python3</dep>
			<dep>automake</dep>
			<dep>autoconf</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME%d}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME%d}
			bash autogen.sh
			./configure --prefix=/tools --disable-Werror --without-avahi --without-libiberty --without-iberty
			make -j 4
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME%d}
			mkdir -p ${TGTDIR}/usr/bin
			make install DESTDIR=${TGTDIR}
			rm ${TGTDIR}/usr/bin/distcc
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME%d}
			/bin/true 
			]]>
		</clean>
	</package>
</llpackages>
