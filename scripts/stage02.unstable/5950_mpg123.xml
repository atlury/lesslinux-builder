<llpackages>
	<package 
		name="mpg123"
		version="1.23.6"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="10a2377509d4edf8be0328727361e79610250182">mpg123-1.23.6.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/mpg123/mpg123/1.23.6/</mirror>
			</file>
			<manualcheck date="20160701" interval="90" page="http://downloads.sourceforge.net/project/mpg123/mpg123/" />
			<check>
				<page html="http://sourceforge.net/projects/mpg123/files/mpg123/">
					<atext linktext="1.23.8" />
					<atext linktext="1.23.9" />
					<atext linktext="1.23.10" />
					<atext linktext="1.23.6" />
					<atext linktext="1.23.7" />
					<atext linktext="1.24." />
					<atext linktext="1.25." />
					<atext linktext="2.0." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>SDL</dep>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
			 <dep>lame</dep>
                        <dep>libtool</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
