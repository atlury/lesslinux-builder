<llpackages>
	<package 
		name="libmatroska"
		version="1.4.2"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="546a761a763b2d1d15dbbccaa5495eb63dd87223">libmatroska-1.4.2.tar.bz2</pkg>
				<mirror>http://dl.matroska.org/downloads/libmatroska/</mirror>
			</file>
			<manualcheck date="20150601" interval="180" page="http://dl.matroska.org/downloads/libmatroska/" />
			<check>
				<page html="http://dl.matroska.org/downloads/libmatroska/">
					<atext linktext="libmatroska-1.4.3." />
					<atext linktext="libmatroska-1.4.4." />
					<atext linktext="libmatroska-1.4.5." />
					<atext linktext="libmatroska-1.4.6." />
					<atext linktext="libmatroska-1.4.7." />
					<atext linktext="libmatroska-1.5." />
					<atext linktext="libmatroska-1.6." />
					<atext linktext="libmatroska-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>libebml</dep>
                        <dep>make</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc
			make 
			# make -C make/linux prefix=/usr
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			# make -C make/linux prefix=/usr install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
