<llpackages>
	<package 
		name="conky"
		version="1.10.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                        
				<pkg sha1="f2da0e3b8e6ff8ebc42b35f710f822e228616993">conky-1.10.4.tar.bz2</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20160922" interval="180" page="https://github.com/brndnmtthws/conky/releases" />
		</sources>
		<builddeps>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
			<dep>cmake</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXft</dep>
                        <dep>libXrender</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>lua</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>xproto-base</dep>
			<dep>libaudclient</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			mkdir _build
			cd _build
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			cmake -DCMAKE_INSTALL_PREFIX=/usr \
				-DBUILD_AUDACIOUS=ON -DBUILD_WLAN=ON \
				-DBUILD_WEATHER_METAR=ON -DBUILD_WEATHER_XOAP=ON ..
			make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}/_build 
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
