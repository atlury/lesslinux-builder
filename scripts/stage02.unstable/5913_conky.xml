<llpackages>
	<package 
		name="conky"
		version="1.9.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                        
				<pkg sha1="2069cbdb8e7224fcbf3c6b1ddebf64a51634b4cc">conky-1.9.0.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/conky/conky/1.9.0/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://downloads.sourceforge.net/project/conky/conky/1.9.0/" />
			<check>
				<page html="http://sourceforge.net/projects/conky/files/conky/">
					<atext linktext="1.9.1" />
					<atext linktext="1.9.2" />
					<atext linktext="1.9.3" />
					<atext linktext="1.9.4" />
					<atext linktext="1.9.5" />
					<atext linktext="1.10.0" />
					<atext linktext="1.11.0" />
					<atext linktext="2.0.0" />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXdamage</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXft</dep>
                        <dep>libXrender</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>lua</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>xproto-base</dep>
			<dep>gcc49</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			CC=/usr/local/gcc49/bin/gcc49 CXX=/usr/local/gcc49/bin/g++49 \
				./configure --prefix=/usr --sysconfdir=/etc --enable-wlan \
					--enable-curl --enable-rss --enable-weather-metar --enable-weather-xoap
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
