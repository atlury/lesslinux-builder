<llpackages>
    <package name='xvkbd' version='3.6' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='bf7ead8aaa4a586df52d4f62cf57fb601bd7a25b'>
                    xvkbd-3.6.tar.gz
                </pkg>
                <mirror>
                    http://homepage3.nifty.com/tsato/xvkbd/
                </mirror>
            </file>
            <manualcheck date='20141013' interval='60' mirror='http://homepage3.nifty.com/tsato/xvkbd/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>imake</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXaw</dep>
                        <dep>libXi</dep>
                        <dep>libXmu</dep>
                        <dep>libXt</dep>
                        <dep>libXtst</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>xorg-cf-files</dep>
                        <dep>xproto-base</dep>
	</builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch>
		<![CDATA[cd ${PKGNAME}-${PKGVERSION}
		sed -i 's/#define XAW3D/XCOMM #define XAW3D/g' Imakefile
]]>
	</patch>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    xmkmf
	    make
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    mkdir -p ${TGTDIR}/usr/share/applications
	    make install DESTDIR=${TGTDIR}
cat << DESKFILE > ${TGTDIR}/usr/share/applications/xvkbd.desktop

[Desktop Entry]
Version=1.0
Encoding=UTF-8
Type=Application
Name=Virtual Keyboard
Name[de]=Bildschirmtastatur
Categories=Utility;
Exec=/usr/bin/xvkbd
Icon=input-keyboard
Terminal=false
StartupNotify=true
Path=

DESKFILE
	    
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>