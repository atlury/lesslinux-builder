<llpackages>
	<package 
		name="dc3dd"
		version="7.2.641"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                               
				<pkg sha1="18a697b53cfc8470fca2a24a0820f65e9057f79a">dc3dd-7.2.641.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/dc3dd/dc3dd/7.2/</mirror>
			</file>
			<manualcheck date="20140804" interval="180" page="http://sourceforge.net/projects/dc3dd/files/" />
		</sources>
		<builddeps>
			<dep>autoconf</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --sysconfdir=/etc --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
