<llpackages>
	<package 
		name="multipath-tools"
		version="0.5.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="dcd889c09bcb1f2b89900838da6ac1ed970104cb">multipath-tools-0.5.0.tar.bz2</pkg>
				<mirror>http://christophe.varoqui.free.fr/multipath-tools/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="http://christophe.varoqui.free.fr/multipath-tools/" />
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>device-mapper</dep>
                        <dep>distcc</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gnome-icon-theme</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>libaio</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>procps</dep>
                        <dep>pygobject</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>udev</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
