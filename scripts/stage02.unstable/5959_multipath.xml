<llpackages>
	<package 
		name="multipath-tools"
		version="0.6.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                          <!-- git clone -b '0.6.3' http://git.opensvc.com/multipath-tools/.git  -->
				<pkg sha1="f0fcef94f5d17e47cb6af3846e39bb34abc772f7">multipath-tools-0.6.3.tar.xz</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20160927" interval="180" page="http://christophe.varoqui.free.fr/" />
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>device-mapper</dep>
                        <dep>distcc</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gnome-icon-theme</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>libaio</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>procps</dep>
                        <dep>pygobject</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>udev</dep>
			<dep>userspace-rcu</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME} # -${PKGVERSION}
			export LDFLAGS=-lncurses
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME} # -${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME} # -${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
