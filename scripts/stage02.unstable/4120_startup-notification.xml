<llpackages>
	<package 
		name="startup-notification"
		version="0.12"
		class="lib" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>         
				<pkg sha1="2c09f43247683d1e4a16b2f8d1e236b57eafae68">startup-notification-0.12.tar.gz</pkg>
				<mirror>http://www.freedesktop.org/software/startup-notification/releases/</mirror>
			</file>
			<manualcheck date="20141118" interval="120" page="http://www.freedesktop.org/software/startup-notification/releases/" />
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXt</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<!-- soft -->
			 <dep>imake</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
