<llpackages>
	<package 
		name="libisofs"
		version="1.4.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                 
				<pkg sha1="07d42735b74140490e5760e30ce21adcbdfef2e5">libisofs-1.4.4.tar.gz</pkg>
				<mirror>http://files.libburnia-project.org/releases/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://files.libburnia-project.org/releases/" />
			<check>
				<page html="http://files.libburnia-project.org/releases/">
					<atext linktext="libisofs-1.4.10." />
					<atext linktext="libisofs-1.4.12." />
					<atext linktext="libisofs-1.4.6." />
					<atext linktext="libisofs-1.4.8." />
					<atext linktext="libisofs-1.5." />
					<atext linktext="libisofs-1.6." />
					<atext linktext="libisofs-1.7." />
					<atext linktext="libisofs-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<!-- soft -->
			 <dep>attr</dep>
			 <dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
