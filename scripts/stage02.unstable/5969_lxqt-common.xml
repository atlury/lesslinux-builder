		<unpack>
			<![CDATA[ 
			mkdir ${PKGNAME}
			tar -C ${PKGNAME} -xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}
			export PATH=/usr/bin/qt4:$PATH
			cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			make 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}
			export PATH=/usr/bin/qt4:$PATH
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}
