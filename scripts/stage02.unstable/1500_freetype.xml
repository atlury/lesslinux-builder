<llpackages>
	<package 
		name="freetype"
		version="2.5.5"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<!-- Freetype 2.5.x breaks the build of instantbird. So stay with 2.4 for a while -->
			<file>                                                                                                   
				<pkg sha1="7b7460ef51a8fdb17baae53c6658fc1ad000a1c2">freetype-2.5.5.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/freetype/freetype2/2.5.5/</mirror>
			</file>
			<manualcheck date="20150529" interval="120" page="http://sourceforge.net/projects/freetype/files/freetype2/" />
			<check>
				<page html="http://sourceforge.net/projects/freetype/files/freetype2/">
					<atext linktext="2.5.6" />
					<atext linktext="2.5.6" />
					<atext linktext="2.5.7" />
					<atext linktext="2.6." />
					<atext linktext="3.0." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<!-- <dep>distcc</dep> -->
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr 
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
