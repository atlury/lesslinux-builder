<llpackages>
	<package 
		name="libgpg-error"
		version="1.18"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                    
				<pkg sha1="7ba54f939da023af8f5b3e7a421a32eb742909c4">libgpg-error-1.18.tar.bz2</pkg>
				<mirror>ftp://ftp.gnupg.org/gcrypt/libgpg-error/</mirror>
			</file>
			<manualcheck date="20150309" interval="180" page="ftp://ftp.gnupg.org/gcrypt/libgpg-error/" />
			<check>
				<page html="ftp://ftp.gnupg.org/gcrypt/libgpg-error/">
					<atext linktext="libgpg-error-1.23." />
					<atext linktext="libgpg-error-1.24." />
					<atext linktext="libgpg-error-1.25." />
					<atext linktext="libgpg-error-1.26." />
					<atext linktext="libgpg-error-1.27." />
					<atext linktext="libgpg-error-1.28." />
					<atext linktext="libgpg-error-1.19." />
					<atext linktext="libgpg-error-1.20." />
					<atext linktext="libgpg-error-1.21." />
					<atext linktext="libgpg-error-1.22." />
					<atext linktext="libgpg-error-2." />
					<atext linktext="libgpg-error-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
