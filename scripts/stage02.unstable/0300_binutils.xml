<llpackages>
	<package 
		name="binutils"
		version="2.27"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                 
				<pkg sha1="6e472ddae565a2b1447e6f2393809bb8799982cf">binutils-2.27.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/binutils/</mirror>
			</file>
			<manualcheck date="20160629" interval="180" page="http://ftp.gnu.org/gnu/binutils/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/binutils/">
					<atext linktext="binutils-2.27.1." />
					<atext linktext="binutils-2.27.2." />
					<atext linktext="binutils-2.27.3" />
					<atext linktext="binutils-2.28." />
					<atext linktext="binutils-2.29." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>linux_headers</dep>
			<dep>glibc</dep>
			<dep>man-pages</dep>
			<dep>readjust</dep>
			<dep>zlib</dep>
			<dep>file</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			mkdir binutils-build
			]]>
		</unpack>
		<patch>			
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/binutils-2.26-upstream_fixes-3.patch | patch -p1
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			cd ${PKGNAME}-build
			../${PKGNAME}-${PKGVERSION}/configure --prefix=/usr --enable-shared --disable-werror
			make tooldir=/usr
			]]>
		</build>
		<test>
			<![CDATA[ 
			cd ${PKGNAME}-build
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-build
			make tooldir=/usr install DESTDIR=${TGTDIR}
			mkdir -p ${TGTDIR}/usr/include
			# cp -v ../${PKGNAME}-${PKGVERSION}/include/libiberty.h ${TGTDIR}/usr/include
			]]>
		</install>
		<clean>
			<![CDATA[ 
			rm -rf ${PKGNAME}-build
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
