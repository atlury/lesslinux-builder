<llpackages>
	<package 
		name="kexec-tools"
		version="2.0.8"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>           
				<pkg sha1="9488363eb786cdf69468742f2ef5cbe934e70e7b">kexec-tools-2.0.8.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/kernel/kexec/</mirror>
			</file>
			<manualcheck date="20141211" interval="90" page="https://www.kernel.org/pub/linux/utils/kernel/kexec/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/kernel/kexec/">
					<atext linktext="kexec-tools-2.0.9." />
					<atext linktext="kexec-tools-2.0.10." />
					<atext linktext="kexec-tools-2.0.11." />
					<atext linktext="kexec-tools-2.1." />
					<atext linktext="kexec-tools-2.2." />
					<atext linktext="kexec-tools-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xz</dep>
                        <dep>zlib</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc 
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
