<llpackages>
	<package 
		name="aqbanking"
		version="5.5.15"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                            
				<pkg sha1="4783890253acf04dddede6d34bf81b8f1c24480d">aqbanking-5.5.1.tar.gz</pkg>
				<mirror>http://www.aquamaniac.de/</mirror>
			</file>
			<manualcheck date="20150601" interval="180" page="https://pcsclite.alioth.debian.org/" />
