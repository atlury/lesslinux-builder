<llpackages>
	<package 
		name="device-mapper"
		version="2.02.120"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                          
				<pkg sha1="34f015ee90316c1afc72f715a468028e0f89b705">LVM2.2.02.120.tgz</pkg>
				<mirror>ftp://sources.redhat.com/pub/lvm2/</mirror>
			</file>
			<manualcheck date="20150309" interval="90" page="http://mirrors.kernel.org/sources.redhat.com/lvm2/" />
			<check>
				<page html="http://mirrors.kernel.org/sources.redhat.com/lvm2/">
					<atext linktext="LVM2.2.02.121.t" />
					<atext linktext="LVM2.2.02.122.t" />
					<atext linktext="LVM2.2.02.13" />
					<atext linktext="LVM2.2.02.14" />
					<atext linktext="LVM2.2.03" />
					<atext linktext="LVM2.2.04" />
					<atext linktext="LVM2.3" />
					<atext linktext="LVM2.4" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/LVM2.${PKGVERSION}.tgz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd LVM2.${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --sysconfdir=/etc --enable-dmeventd --enable-cmdlib  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --sysconfdir=/etc --enable-dmeventd --enable-cmdlib
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd LVM2.${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf LVM2.${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
