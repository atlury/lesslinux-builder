<llpackages>
	<package 
		name="gccmakedep"
		version="1.0.3"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                            
				<pkg sha1="03018e2fb9d7df4fec1623cedb1c090bc224f971">gccmakedep-1.0.3.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/util/</mirror>
			</file>
			<manualcheck date="20140724" interval="180" page="ftp://ftp.gnu.org/gnu/patch/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/util/">
					<atext linktext="gccmakedep-1.0.7." />
					<atext linktext="gccmakedep-1.0.4." />
					<atext linktext="gccmakedep-1.0.5." />
					<atext linktext="gccmakedep-1.0.6." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
	</package>
</llpackages>
