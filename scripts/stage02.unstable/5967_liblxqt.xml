		<builddeps>
                        <dep>Mesa</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>distcc</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
