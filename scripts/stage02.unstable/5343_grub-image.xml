<llpackages>
	<package 
		name="grub-efi-image-i386"
		version="2.02"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                         
				<pkg sha1="3d7eb6eaab28b88cb969ba9ab24af959f4d1b178">grub-2.02.tar.xz</pkg>
				<mirror>ftp://ftp.gnu.org/gnu/grub/</mirror>
			</file>
			<manualcheck date="20170615" interval="90" page="ftp://ftp.gnu.org/gnu/grub/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/grub/">
					<atext linktext="grub-2.06." />
					<atext linktext="grub-2.07." />
					<atext linktext="grub-2.03." />
					<atext linktext="grub-2.04." />
					<atext linktext="grub-2.05." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
			<dep>cross-gcc-amd64</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
			<dep>grub-efi-i386</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			true
			]]>
		</unpack>
		<build>
			<![CDATA[
			mkdir $PKGNAME
			cd $PKGNAME
			pkgpath=`pwd ` 
			echo '===> Building in '$pkgpath
			cd /usr/local/crosstools/lib/grub/i386-efi
			echo '===> Current working directory '
			pwd 
			/usr/local/crosstools/bin/grub-mkimage -Oi386-efi \
			-d . -o ${pkgpath}/grubia32.efi -p "" part_gpt part_msdos ntfs ntfscomp \
			hfsplus fat ext2 normal chain boot configfile linux multiboot iso9660 udf
			file ${pkgpath}/grubia32.efi
			cd $pkgpath
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd $PKGNAME
			pwd
			file grubia32.efi
			mkdir -p ${TGTDIR}/usr/share/grub-i386-efi
			install -m 0644 --verbose grubia32.efi ${TGTDIR}/usr/share/grub-i386-efi
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME} 
			]]>
		</clean>
	</package>
</llpackages>
