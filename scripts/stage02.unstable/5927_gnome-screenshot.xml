<llpackages>
	<package 
		name="gnome-screenshot"
		version="3.16.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="3d9d19a2df2d83fc0bf70b74ab015af757988542">gnome-screenshot-3.16.2.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/3.16/</mirror>
			</file>
			<manualcheck date="20150601" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/3.16/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/3.16/">
					<atext linktext="gnome-screenshot-3.16.6." />
					<atext linktext="gnome-screenshot-3.16.3." />
