	<package 
		name="gnome-screenshot"
		version="3.30.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="ee6399decba2a9377a8f1c9c8705937937c669b7">gnome-screenshot-3.30.0.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/3.30/</mirror>
			</file>
			<manualcheck date="20160927" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/3.22/">
					<atext linktext="gnome-screenshot-3.22.2." />
					<atext linktext="gnome-screenshot-3.22.3." />
					<atext linktext="gnome-screenshot-3.22.4." />
					<atext linktext="gnome-screenshot-3.22.1." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gnome-screenshot/">
					<atext linktext="3.26" />
					<atext linktext="3.24" />
					<atext linktext="4." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk3</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libX11</dep>
                        <dep>libXext</dep>
                        <dep>libcanberra</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>p5-xml</dep>
                        <dep>pango</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>xproto-base</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			# ./configure --sysconfdir=/etc/compat.old --prefix=/usr/compat.old && make
			./configure --sysconfdir=/etc --prefix=/usr && make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			sed -i 's/DBusActivatable=true//g' ${TGTDIR}/usr/share/applications/org.gnome.Screenshot.desktop
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
