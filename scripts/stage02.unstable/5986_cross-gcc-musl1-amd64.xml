                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/gcc-${PKGVERSION}.tar.bz2
			tar xf ${SRCDIR}/musl-gcc-patches-${PKGVERSION}.tar.xz
			
			tar xf ${SRCDIR}/mpfr-3.1.4.tar.bz2
			tar xf ${SRCDIR}/gmp-6.1.1.tar.lz
			tar xf ${SRCDIR}/mpc-1.0.3.tar.gz

			mv -v mpc-1.0.3 gcc-${PKGVERSION}/mpc
			mv -v gmp-6.1.1 gcc-${PKGVERSION}/gmp
			mv -v mpfr-3.1.4 gcc-${PKGVERSION}/mpfr
		
			mkdir ${PKGNAME}-build
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd gcc-${PKGVERSION}
			cat ../musl-gcc-patches/series | while read fname ; do 
				cat ../musl-gcc-patches/${fname} | patch -p1
			done
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-build
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			# crosstools-ia32-musl/i386-linux-musl
			export CLFS_HOST=$(echo ${MACHTYPE} | sed "s/-[^-]*/-cross/")
			export CLFS_TARGET=x86_64-linux-musl
			export CLFS_CPU=k8
			cd ../gcc-build
			../gcc-${PKGVERSION}/configure \
				--prefix=/usr/local/crosstools-amd64-musl \
				--build=${CLFS_HOST} \
				--host=${CLFS_HOST} \
				--target=${CLFS_TARGET} \
				--with-sysroot=/usr/local/crosstools-amd64-musl/${CLFS_TARGET} \
				--disable-nls  \
				--disable-shared \
				--without-headers \
				--with-newlib \
				--disable-decimal-float \
				--disable-libgomp \
				--disable-libmudflap \
				--disable-libssp \
				--disable-libatomic \
				--disable-libquadmath \
				--disable-threads \
				--enable-languages=c \
				--disable-multilib \
				--with-mpfr-include=$(pwd)/../gcc-${PKGVERSION}/mpfr/src \
				--with-mpfr-lib=$(pwd)/mpfr/src/.libs \
				--with-arch=${CLFS_CPU}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make all-gcc all-target-libgcc -j $jobcount
			else
				make all-gcc all-target-libgcc -j 4
			fi
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-build
			make install install-gcc install-target-libgcc DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			 <![CDATA[
			rm -rf gcc-${PKGVERSION}
			rm -rf ${PKGNAME}-build
			]]>
		</clean>
	</package>
</llpackages>
