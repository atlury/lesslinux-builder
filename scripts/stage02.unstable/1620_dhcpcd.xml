<llpackages>
	<package 
		name="dhcpcd"
		version="6.9.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                         
				<pkg sha1="42511094af8bd3d8fbf43323d90fe8706f97cf09">dhcpcd-6.9.4.tar.xz</pkg>
				<mirror>http://roy.marples.name/downloads/dhcpcd/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://roy.marples.name/downloads/dhcpcd/" />
			<check>
				<page html="http://roy.marples.name/downloads/dhcpcd/">
					<atext linktext="dhcpcd-6.9.8." />
					<atext linktext="dhcpcd-6.9.5." />
					<atext linktext="dhcpcd-6.9.6." />
					<atext linktext="dhcpcd-6.9.7." />
					<atext linktext="dhcpcd-6.9." />
					<atext linktext="dhcpcd-6.10." />
					<atext linktext="dhcpcd-6.11." />
					<atext linktext="dhcpcd-7." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>which</dep>
			<dep>distcc</dep>
			<dep>udev</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz ] ; then
				tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			else
				tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/ --sysconfdir=/etc/dhcpcd --dbdir=/var/lib/dhcpcd --libexecdir=/lib/dhcpcd CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/ --sysconfdir=/etc/dhcpcd --dbdir=/var/lib/dhcpcd --libexecdir=/lib/dhcpcd
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
