<llpackages>
	<package 
		name="curl"
		version="7.43.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                            
				<pkg sha1="d821ea39610b7f1122f1f574a4d8e20e81b3c561">curl-7.43.0.tar.bz2</pkg>
				<mirror>http://curl.haxx.se/download/</mirror>
			</file>
			<manualcheck date="20150530" interval="90" page="http://curl.haxx.se/download/" />
			<check>
				<page html="http://curl.haxx.se/download/">
					<atext linktext="curl-7.43.1." />
					<atext linktext="curl-7.43.2." />
					<atext linktext="curl-7.43.3." />
					<atext linktext="curl-7.44." />
					<atext linktext="curl-7.45." />
					<atext linktext="curl-7.46." />
					<atext linktext="curl-8." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<!-- soft -->
			<dep>libidn</dep>
			<dep>distcc</dep>
			<dep>cacerts</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			# ln -sf /usr/lib/libcurl.so /usr/lib/libcurl.so.3
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
