		</sources>
		 <builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>distcc</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>ruby</dep>
                        <dep>rubygem-pkg-config</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/rcairo-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd rcairo-${PKGVERSION}/
			ruby extconf.rb
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd rcairo-${PKGVERSION}/
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf rcairo-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
