<llpackages>
	<package 
		name="ruby-cairo"
		version="1.14.1"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="5004067d807dfd8c81c5d0093f431ea61d0c7b82">rcairo-1.14.1.tar.gz</pkg>
				<mirror>http://cairographics.org/releases/</mirror>  
			</file>
			<manualcheck date="20150601" interval="90" page="http://cairographics.org/releases/" />
