<llpackages>
	<package 
		name="make"
		version="4.2.1"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                              
				<pkg sha1="7d9d11eb36cfb752da1fb11bb3e521d2a3cc8830">make-4.2.1.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/make/</mirror>
			</file>
			<manualcheck date="20160630" interval="180" page="ftp://ftp.gnu.org/gnu/make/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/make/">
					<atext linktext="make-4.2.4." />
					<atext linktext="make-4.2.2." />
					<atext linktext="make-4.2.3." />
					<atext linktext="make-4.3." />
					<atext linktext="make-4.4." />
					<atext linktext="make-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
			<dep>autoconf</dep>
                        <dep>automake</dep>
			<dep>xz</dep>
                        <dep>kmod</dep>
			<dep>gettext</dep>
			<dep>procps</dep>
			<!-- <dep>e2fsprogs</dep> -->
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>findutils</dep>
                        <dep>groff</dep>
			<dep>gzip</dep>
			<dep>less</dep>
			<dep>kbd</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-upstream_fixes-1.patch | patch -p1
			]]>
		</patch> -->
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr && make
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
