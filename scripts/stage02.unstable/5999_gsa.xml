<llpackages>
	<package 
		name="greenbone-security-assistant"
		version="6.0.10"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="4d9c903a729fa3ea5b0705a1e525605851b3b453">greenbone-security-assistant-6.0.10.tar.gz</pkg>
				<mirror>http://wald.intevation.org/frs/download.php/2299/</mirror>
			</file>
			<manualcheck date="20160412" interval="90" page="http://www.openvas.org/install-source.html" />
			<check>
				<page html="http://www.openvas.org/install-source.html">
					<atext href="greenbone-security-assistant-6.0.11." />
					<atext href="greenbone-security-assistant-6.0.12." />
					<atext href="greenbone-security-assistant-6.0.13." />
					<atext href="greenbone-security-assistant-6.0.14." />
					<atext href="greenbone-security-assistant-7." />
					<atext href="greenbone-security-assistant-8." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>glib</dep>
                        <dep>gnutls3</dep>
                        <dep>grep</dep>
                        <dep>libgcrypt15</dep>
                        <dep>libgpg-error</dep>
                        <dep>libmicrohttpd</dep>
                        <dep>libxml2</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>openvas-libraries</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>subversion</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			CFLAGS='-w' cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			CFLAGS='-w'  make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
