<llpackages>
	<package 
		name="sed"
		version="4.2.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="f17ab6b1a7bcb2ad4ed125ef78948092d070de8f">sed-4.2.2.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/sed/</mirror>
			</file>
			<manualcheck date="20151101" interval="120" page="http://ftp.gnu.org/gnu/sed/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/sed/">
					<atext linktext="sed-4.2.4." />
					<atext linktext="sed-4.2.3." />
					<atext linktext="sed-4.3." />
					<atext linktext="sed-4.4." />
					<atext linktext="sed-4.5." />
					<atext linktext="sed-5." />
					<atext linktext="sed-6." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
			<dep>file</dep>
			<dep>zlib</dep>
			<dep>bzip2</dep>
			<dep>pkg-config</dep>
			<dep>ncurses</dep>
			<dep>attr</dep>
			<dep>acl</dep>
			<dep>libcap</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --bindir=/bin --enable-html--htmldir=/usr/share/doc/sed-${PKGVERSION} && make
			]]>
		</build>
		<test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make check
			]]>
		</test>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
