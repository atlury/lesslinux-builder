<llpackages>
	<package 
		name="libcroco"
		version="0.6.12"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                       
				<pkg sha1="f34287280cbf44d6c9628d15fa8a16347753a1d5">libcroco-0.6.12.tar.xz</pkg>
				<mirror>http://ftp.acc.umu.se/pub/gnome/sources/libcroco/0.6/</mirror>
			</file>
			<manualcheck date="20170615" interval="365" page="http://www.libarchive.org/" />
