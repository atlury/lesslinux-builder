<llpackages>
	<package 
		name="ruby"
		version="2.3.1"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                     
				<pkg sha1="83499c14c674cf2d88e495031434a94c06330879">ruby-2.3.1.tar.xz</pkg>
				<mirror>http://cache.ruby-lang.org/pub/ruby/2.2/</mirror>
			</file>
			<manualcheck date="20160701" interval="90" page="http://ftp.ruby-lang.org/" />
			<check>
				<page html="http://ftp.ruby-lang.org/pub/ruby/2.2/">
					<atext linktext="ruby-2.3.2" />
					<atext linktext="ruby-2.3.3" />
					<atext linktext="ruby-2.3.4" />
					<atext linktext="ruby-2.3.5" />
					<atext linktext="ruby-2.3.6" />
					<atext linktext="ruby-2.3.7" />
					<atext linktext="ruby-2.3.8" />
					<atext linktext="ruby-2.4" />
					<atext linktext="ruby-2.5" />
					<atext linktext="ruby-2.6" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			
			case $(uname -m) 
			in
				x86_64) 
					export CFLAGS="-fPIC"
					./configure --enable-static --enable-dynamic --enable-shared --prefix=/usr CFLAGS="-fPIC"
				;;
				*)
					./configure --enable-static --enable-dynamic --enable-shared --prefix=/usr 
				;;
			esac 
			
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then	
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				make -j ` grep -c processor /proc/cpuinfo ` 
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			paxctl -m ${TGTDIR}/usr/bin/ruby
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
