<llpackages>
	<package 
		name="ruby"
		version="2.1.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                     
				<pkg sha1="befbc7b31b0e19c2abe8fa89f08de5d4d7509d19">ruby-2.1.3.tar.bz2</pkg>
				<mirror>http://cache.ruby-lang.org/pub/ruby/2.1/</mirror>
			</file>
			<manualcheck date="20141101" interval="180" page="http://ftp.ruby-lang.org/" />
			<check>
				<page html="http://ftp.ruby-lang.org/pub/ruby/2.0/">
					<atext linktext="ruby-2.1.7" />
					<atext linktext="ruby-2.1.8" />
					<atext linktext="ruby-2.1.3" />
					<atext linktext="ruby-2.1.4" />
					<atext linktext="ruby-2.1.5" />
					<atext linktext="ruby-2.1.6" />
					<atext linktext="ruby-2.2" />
					<atext linktext="ruby-2.3" />
					<atext linktext="ruby-2.4" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			paxctl -m ${TGTDIR}/usr/bin/ruby
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
