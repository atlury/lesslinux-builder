<llpackages>
	<package 
		name="smartmontools"
		version="6.3"
		class="user"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                          
				<pkg sha1="716c5dc339d408d628c55dbe69028b1561df4c7e">smartmontools-6.3.tar.gz</pkg>
				<mirror>http://downloads.sourceforge.net/project/smartmontools/smartmontools/6.3/</mirror>
			</file>
			<manualcheck date="20140802" interval="180" page="http://sourceforge.net/projects/smartmontools/files/" />
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc gcc'
				export CXX='distcc g++' 
				./configure --sysconfdir=/etc --prefix=/usr 
				pump make -j $jobcount 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
