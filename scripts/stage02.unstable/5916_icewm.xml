		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc /usr/local/gcc52/bin/gcc52"
				export CXX="distcc /usr/local/gcc52/bin/g++52"
				./configure --prefix=/usr --sysconfdir=/etc --disable-xinerama --disable-i18n --disable-nls
				pump make -j $jobcount
			else
				export CC="/usr/local/gcc52/bin/gcc52"
				export CXX="/usr/local/gcc52/bin/g++52"
				./configure --prefix=/usr --sysconfdir=/etc --disable-xinerama --disable-i18n --disable-nls
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
