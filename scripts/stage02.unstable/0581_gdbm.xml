<llpackages>
	<package 
		name="gdbm"
		version="1.12"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
			<sources>
			<file>                                                                                      
				<pkg sha1="86513e8871bb376bc014e9e5a2d18a8e0a8ea2f5">gdbm-1.12.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/gdbm/</mirror>
			</file>
			<manualcheck date="20160630" interval="180" page="http://ftp.gnu.org/gnu/gdbm/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/gdbm/">
					<atext linktext="gdbm-1.12.1." />
					<atext linktext="gdbm-1.12.2." />
					<atext linktext="gdbm-1.12.3." />
					<atext linktext="gdbm-1.13." />
					<atext linktext="gdbm-1.14." />
					<atext linktext="gdbm-2." />
				</page>
			</check>
		</sources>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --enable-libgdbm-compat 
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
