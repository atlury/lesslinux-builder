<llpackages>
    <package name='ophcrack' version='3.7.0' install='chroot'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='a8c89671b510468cdbcd8e4e9dc280f19029ee81'>
                    ophcrack-3.7.0.tar.bz2
                </pkg>
                <mirror>
                    http://downloads.sourceforge.net/ophcrack/
                </mirror>
            </file>
            <manualcheck date='20170615' interval='60' mirror='http://downloads.sourceforge.net/ophcrack/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>qt-everywhere-opensource-src</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
	    export PATH=/usr/compat.old/qt4/bin:$PATH
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make -j $jobcount 
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    export PATH=/usr/compat.old/qt4/bin:$PATH
make install
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>