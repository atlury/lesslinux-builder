<llpackages>
	<package 
		name="gnuchess"
		version="6.2.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="2dfc9eed04e51c4a57a5f8ea885234aac0269dd1">gnuchess-6.2.4.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/chess/</mirror>
			</file>
			<manualcheck date="20170615" interval="180" page="http://ftp.gnu.org/gnu/chess/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/chess/">
					<atext linktext="gnuchess-6.2.8." />
					<atext linktext="gnuchess-6.2.9." />
					<atext linktext="gnuchess-6.2.5." />
					<atext linktext="gnuchess-6.2.6." />
					<atext linktext="gnuchess-6.2.7." />
					<atext linktext="gnuchess-6.3." />
					<atext linktext="gnuchess-6.4." />
					<atext linktext="gnuchess-7." />
				</page>
			</check>
		</sources>
		 <builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
