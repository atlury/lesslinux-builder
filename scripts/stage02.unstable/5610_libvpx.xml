<llpackages>
	<package 
		name="libvpx"
		version="1.5.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                            
				<pkg sha1="0baf76627eb08450eaf307347d1721f56a880c64">libvpx-1.5.0.tar.bz2</pkg>
				<mirror>http://webm.googlecode.com/files/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://downloads.webmproject.org/releases/webm/index.html" />
			<check>
				<page html="http://downloads.webmproject.org/releases/webm/index.html">
					<atext linktext="libvpx-v1.5.1." />
					<atext linktext="libvpx-v1.5.2." />
					<atext linktext="libvpx-v1.5.3." />
					<atext linktext="libvpx-v1.5.4." />
					<atext linktext="libvpx-v1.5.5." />
					<atext linktext="libvpx-v1.10." />
					<atext linktext="libvpx-v1.11." />
					<atext linktext="libvpx-v1.6." />
					<atext linktext="libvpx-v1.7." />
					<atext linktext="libvpx-v1.8." />
					<atext linktext="libvpx-v1.9." />
					<atext linktext="libvpx-v2." />
					<atext linktext="libvpx-v3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>yasm</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --enable-shared && make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
