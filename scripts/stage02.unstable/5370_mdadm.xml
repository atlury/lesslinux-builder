<llpackages>
	<package 
		name="mdadm"
		version="3.4"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>                                           
				<pkg sha1="0b6c284970567bfa30dbc14ea5c0e2320582b80c">mdadm-3.4.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/utils/raid/mdadm/</mirror>
			</file>
			<manualcheck date="20160701" interval="120" page="http://www.kernel.org/pub/linux/utils/raid/mdadm/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/raid/mdadm/">
					<atext linktext="mdadm-3.4.1." />
					<atext linktext="mdadm-3.4.2." />
					<atext linktext="mdadm-3.4.3." />
					<atext linktext="mdadm-3.5." />
					<atext linktext="mdadm-3.6." />
					<atext linktext="mdadm-3.7." />
					<atext linktext="mdadm-4." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>groff</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>gcc52</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			sed -i 's/-Werror //g' Makefile
			# sed -i 's/\(^inline\)/static \1/' bitmap.c
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			make -j $jobcount RUN_DIR=/var/run  
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			export CC="/usr/local/gcc52/bin/gcc52"
			export CXX="/usr/local/gcc52/bin/g++52"
			make install RUN_DIR=/var/run
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
