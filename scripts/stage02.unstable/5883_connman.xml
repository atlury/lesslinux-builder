<llpackages>
	<package 
		name="connman"
		version="1.28"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                      
				<pkg sha1="4216c136aecda3d68294d7e8e283955db4eef951">connman-1.28.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/network/connman/</mirror>
			</file>
			<manualcheck date="20140309" interval="60" page="https://www.kernel.org/pub/linux/network/connman/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/network/connman/">
					<atext linktext="connman-1.29" />
					<atext linktext="connman-1.30" />
					<atext linktext="connman-1.31" />
					<atext linktext="connman-1.32" />
					<atext linktext="connman-1.33" />
					<atext linktext="connman-1.34" />
					<atext linktext="connman-1.35" />
					<atext linktext="connman-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnutls3</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>iptables</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>wpa_supplicant</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			mkdir -p ${TGTDIR}/usr/bin
			install -m 0755 client/connmanctl ${TGTDIR}/usr/bin
			mv ${TGTDIR}/etc/dbus-1/system.d/connman.conf ${TGTDIR}/etc/dbus-1/system.d/connman.bak
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
