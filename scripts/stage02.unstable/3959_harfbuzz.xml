<llpackages>
	<package 
		name="harfbuzz"
		version="1.8.8"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>  
			<file>                                           
				<pkg sha1="be496408b2bb3dc794891e8b0e977cd75f02d71d">harfbuzz-1.8.8.tar.bz2</pkg>
				<mirror>http://www.freedesktop.org/software/harfbuzz/release/</mirror>
			</file>
			<manualcheck date="20170614" interval="180" page="http://www.freedesktop.org/software/harfbuzz/release/" />
			<check>
				<page html="http://www.freedesktop.org/software/harfbuzz/release/">
					<atext linktext="harfbuzz-1.4.7." />
					<atext linktext="harfbuzz-1.4.8." />
					<atext linktext="harfbuzz-1.4.9." />
					<atext linktext="harfbuzz-1.4.10." />
					<atext linktext="harfbuzz-1.4.11." />
					<atext linktext="harfbuzz-1.4.12." />
					<atext linktext="harfbuzz-1.5." />
					<atext linktext="harfbuzz-1.6." />
					<atext linktext="harfbuzz-2." />
				</page>
			</check>
		</sources> 
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
			<dep>icu</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXft</dep>
                        <dep>libXrender</dep>
                        <dep>libpng12</dep><dep>libpng14</dep><dep>libpng15</dep><dep>libpng16</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>gobject-introspection</dep>
			 <dep>imake</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc && make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
