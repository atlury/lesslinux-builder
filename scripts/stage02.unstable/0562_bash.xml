<llpackages>
	<package 
		name="bash"
		version="4.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                          
				<pkg sha1="8de012df1e4f3e91f571c3eb8ec45b43d7c747eb">bash-4.4.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/bash/</mirror>
			</file>
			<manualcheck date="20160922" interval="180" page="http://ftp.gnu.org/gnu/bash/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/bash/">
					<atext linktext="bash-4.3.31." />
					<atext linktext="bash-4.4." />
					<atext linktext="bash-4.5." />
					<atext linktext="bash-5." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>readline</dep>
			<dep>bison</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-upsteam_fixes-3.patch | patch -p1
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --bindir=/bin --docdir=/usr/share/doc/bash-4.3.30 --without-bash-malloc --with-installed-readline \
			&& make -j $jobcount
			]]>
		</build>
		<!--<test />-->
		<!-- <test>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			sed -i 's/LANG/LC_ALL/' tests/intl.tests
			sed -i 's@tests@& </dev/tty@' tests/run-test
			make tests
			]]>
		</test> -->
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			ln -sfv /bin/bash ${TGTDIR}/bin/sh
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
