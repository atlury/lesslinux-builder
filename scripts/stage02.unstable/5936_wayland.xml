<llpackages>
	<package 
		name="wayland"
		version="1.7.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="a731201534dcf6ec76a1184411724376cbf1acb6">wayland-1.7.0.tar.xz</pkg>
				<mirror>http://wayland.freedesktop.org/releases/</mirror>
			</file>
			<manualcheck date="20141101" interval="90" page="http://wayland.freedesktop.org/releases/" />
			<check>
				<page html="http://wayland.freedesktop.org/releases/">
					<atext linktext="wayland-1.7.1." />
					<atext linktext="wayland-1.7.2." />
					<atext linktext="wayland-1.7.3." />
					<atext linktext="wayland-1.7.4." />
					<atext linktext="wayland-1.10." />
					<atext linktext="wayland-1.8." />
					<atext linktext="wayland-1.9." />
					<atext linktext="wayland-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Mesa</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXdamage</dep>
                        <dep>libXdmcp</dep>
                        <dep>libXext</dep>
                        <dep>libXfixes</dep>
                        <dep>libXxf86vm</dep>
                        <dep>libdrm</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>udev</dep>
                        <dep>xproto-base</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc --disable-documentation
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
