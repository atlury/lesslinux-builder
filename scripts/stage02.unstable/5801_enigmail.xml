		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}
			export CC=/usr/local/gcc49/bin/gcc49
			export CXX=/usr/local/gcc49/bin/g++49
			./configure --prefix=/usr --sysconfdir=/etc CC=/usr/local/gcc49/bin/gcc49 CXX=/usr/local/gcc49/bin/g++49
			make 
			echo '==> Searching XPI'
			find . -name '*.xpi'
			]]>
		</build>
		<test />
