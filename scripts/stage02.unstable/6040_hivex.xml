<llpackages>
    <package name='hivex' version='1.3.13' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='cf5bced58d1a6c33a29cf2647c3ac40649700711'>
                  hivex-1.3.13.tar.gz
                </pkg>
                <mirror>
                    http://libguestfs.org/download/hivex/
                </mirror>
            </file>
            <manualcheck date='20160701' interval='180' mirror='http://archive.ubuntu.com/ubuntu/pool/universe/h/hivex/'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>distribute</dep>
                        <dep>findutils</dep>
                        <dep>fusepy</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>google-api-python-client</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>Python</dep>
                        <dep>readline</dep>
                        <dep>requests</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>setuptools</dep>
                        <dep>WebOb</dep>
                        <dep>xz</dep>
                </builddeps>
        <unpack>
            <![CDATA[
tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[
cd ${PKGNAME}-${PKGVERSION}
jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make -j $jobcount 
]]>
        </build>
        <install>
            <![CDATA[
cd ${PKGNAME}-${PKGVERSION}
make install DESTDIR=${TGTDIR} 
]]>
        </install>
        <clean>
            <![CDATA[
rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>