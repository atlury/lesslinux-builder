<llpackages>
	<package 
		name="cairo"
		version="1.14.4"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                        
				<pkg sha1="5b44471e7c328f96de6830baf8ea65030de797f9">cairo-1.14.4.tar.xz</pkg>
				<mirror>http://cairographics.org/releases/</mirror>
			</file>
			<manualcheck date="20151128" interval="180" page="http://cairographics.org/releases/" />
			<check>
				<page html="http://cairographics.org/releases/">
					<atext linktext="cairo-1.14.9." />
					<atext linktext="cairo-1.14.10." />
					<atext linktext="cairo-1.14.5." />
					<atext linktext="cairo-1.14.6." />
					<atext linktext="cairo-1.14.7." />
					<atext linktext="cairo-1.14.8." />
					<atext linktext="cairo-1.15." />
					<atext linktext="cairo-1.16." />
					<atext linktext="cairo-1.17." />
					<atext linktext="cairo-1.18." />
					<atext linktext="cairo-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpng12</dep><dep>libpng14</dep><dep>libpng15</dep><dep>libpng16</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pixman</dep>
			<!-- <dep>poppler</dep> --><!-- ??? -->
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
			<dep>Mesa</dep>
			<dep>glu</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr \
					--enable-fc=yes \
					--enable-ft=yes \
					--enable-gl=yes \
					--enable-test-surfaces \
					--enable-xlib-xcb=yes \
					--enable-tee=yes \
					--enable-xlib=yes \
					--enable-xcb=yes \
					CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr \
					--enable-fc=yes \
					--enable-ft=yes \
					--enable-gl=yes \
					--enable-test-surfaces \
					--enable-xlib-xcb=yes \
					--enable-tee=yes \
					--enable-xlib=yes \
					--enable-xcb=yes
				make  
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
