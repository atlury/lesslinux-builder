<llpackages>
	<package 
		name="mkfontscale"
		version="1.1.2"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                
				<pkg sha1="da32fe297732355eea71d4a94ed003be93d1eae7">mkfontscale-1.1.2.tar.bz2</pkg>
				<mirror>http://xorg.freedesktop.org/archive/individual/app/</mirror>
			</file>
			<manualcheck date="20150529" interval="365" page="http://xorg.freedesktop.org/archive/individual/app/" />
			<check>
				<page html="http://xorg.freedesktop.org/archive/individual/app/">
					<atext linktext="mkfontscale-1.1.4." />
					<atext linktext="mkfontscale-1.1.5." />
					<atext linktext="mkfontscale-1.1.3." />
					<atext linktext="mkfontscale-1.2." />
					<atext linktext="mkfontscale-1.3." />
					<atext linktext="mkfontscale-1.4." />
					<atext linktext="mkfontscale-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libfontenc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
	</package>
</llpackages>
