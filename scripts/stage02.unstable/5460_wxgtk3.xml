<llpackages>
	<package 
		name="wxWidgets3"
		version="3.0.3"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>                         
				<pkg sha1="3525306c926e208d9b0272aaa9c091b8c7264e5b">wxWidgets-3.0.3.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/wxwindows/3.0.3/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="582efe82287c110fbee1d0877363ec73bf6393ea">scintilla366.tgz</pkg>
				<mirror>http://downloads.sourceforge.net/project/scintilla/scintilla/3.6.6/</mirror>
			</file>
		</sources>
		<builddeps>
                        <dep>Mesa</dep>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>glu</dep>
                        <dep>grep</dep>
                        <dep>gst-plugins-base</dep>
                        <dep>gstreamer</dep>
                        <dep>gtk3</dep>
                        <dep>inetutils</dep>
                        <dep>jpegsrc</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXxf86vm</dep>
                        <dep>libnotify</dep>
                        <dep>libpng15</dep><dep>libpng16</dep>
                        <dep>libsoup</dep>
                        <dep>libxml2</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tiff</dep>
                        <dep>webkit</dep>
                        <dep>xproto-base</dep>
                        <dep>zlib</dep>
			<dep>gcc54</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/scintilla366.tgz
			tar xjf ${SRCDIR}/wxWidgets-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd wxWidgets-${PKGVERSION}
			sed -i 's%#include <stdlib.h>%#include <math.h>%g' src/stc/scintilla/src/Editor.cxx
			]]>
		</patch>
		<build>
			<![CDATA[
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			make -C scintilla/gtk -j $jobcount prefix=/usr/compat.new GTK3=yes
			cd wxWidgets-${PKGVERSION}
			./configure --prefix=/usr/compat.new --sysconfdir=/etc/compat.new --with-gtk=3 --enable-shared --enable-static --disable-compat26 --enable-unicode  && make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			cd wxWidgets-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf cd wxWidgets-${PKGVERSION}
			rm -rf scintilla
			]]>
		</clean>
	</package>
</llpackages>
