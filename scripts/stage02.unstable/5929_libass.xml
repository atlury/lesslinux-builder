<llpackages>
	<package 
		name="libass"
		version="0.13.7"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="d59127f18a87ee0528f70bd17258d9df29f7b707">libass-0.13.7.tar.xz</pkg>
				<mirror>https://github.com/libass/libass/releases/download/0.13.7/</mirror>
			</file>
			<manualcheck date="20170615" interval="180" page="https://github.com/libass/libass/releases" />
			<check>
				<page html="https://github.com/libass/libass/releases">
					<atext href="libass-0.13.8." />
					<atext href="libass-0.13.9." />
					<atext href="libass-0.13.10." />
					<atext href="libass-0.13.11." />
					<atext href="libass-0.13.12." />
					<atext href="libass-0.14." />
					<atext href="libass-0.15." />
					<atext href="libass-1.0." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>fribidi</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>harfbuzz</dep>
                        <dep>inetutils</dep>
                        <dep>libffi</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --disable-static 
			make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
