				<pkg sha1="47d5850a358df899f468837d0928ee529c54ee45">libass-0.12.3.tar.xz</pkg>
				<mirror>https://github.com/libass/libass/releases/download/0.12.3/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="https://github.com/libass/libass/releases" />
			<check>
				<page html="https://github.com/libass/libass/releases">
					<atext href="libass-0.12.8." />
