				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>fribidi</dep>
                        <dep>gawk</dep>
