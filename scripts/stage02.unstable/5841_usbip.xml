<llpackages>
	<package 
		name="usbip"
		version="3.15.1"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="f21a27b36ad7169596b0b809707f1442e6d2bb89">linux-3.15.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="5d5331c260846e3ef20ed6cfd7fd2c78a61dc54b">patch-3.15.1.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20140617" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.15.2." />
					<atext linktext="patch-3.15.3." />
					<atext linktext="patch-3.15.4." />
					<atext linktext="patch-3.16." />
					<atext linktext="patch-3.17." />
					<atext linktext="patch-3.18." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>autoconf</dep>
                        <dep>automake</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>font-util</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gstreamer</dep>
                        <dep>guile</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>libtool</dep>
                        <dep>libxml2</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>sysfsutils</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>util-macros</dep>
                        <dep>vala</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.15.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd linux-3.15
			unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv linux-3.15 linux-${PKGVERSION}
			]]>
		</patch>
		<build>
			<![CDATA[
			cd linux-${PKGVERSION}/drivers/staging/usbip/userspace
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			bash autogen.sh
			## sed -i 's%USBIP_VERSION 0x00000111%USBIP_VERSION 0x00000106%g' config.h 
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd linux-${PKGVERSION}/drivers/staging/usbip/userspace
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
