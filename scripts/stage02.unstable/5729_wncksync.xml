				<pkg sha1="dcb8bead8d75bd7dfcbd50e598ec457e0073b2aa">wncksync-0.2.8.tar.gz</pkg>
				<mirror>http://launchpad.net/wncksync/0.2/0.2.8/+download/</mirror>
			</file>
			<manualcheck date="20140724" interval="180" page="http://launchpad.net/wncksync/0.2/0.2.8/+download/" />
		</sources> 
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>dbus-glib</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnome-menus</dep>
			<dep>gnome-menus3</dep>
                        <dep>grep</dep>
                        <dep>gtk</dep>
                        <dep>inetutils</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXdmcp</dep>
                        <dep>libXrender</dep>
