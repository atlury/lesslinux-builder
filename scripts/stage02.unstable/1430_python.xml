<llpackages>
	<package 
		name="Python"
		version="2.7.12"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                      
				<pkg sha1="05360b8ade117b35e266b2004a7f1f11250c6dcd">Python-2.7.12.tar.xz</pkg>
				<mirror>http://python.org/ftp/python/2.7.12/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://www.python.org/" />
			<check>
				<page html="http://python.org/ftp/python/">
					<atext linktext="2.7.15" />
					<atext linktext="2.7.16" />
					<atext linktext="2.7.13" />
					<atext linktext="2.7.14" />
					<atext linktext="3.2.5" />
					<atext linktext="3.2.6" />
					<atext linktext="3.3.3" />
					<atext linktext="3.3.4" />
					<atext linktext="3.3.2" />
				</page>
			</check>
		</sources> 
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>ncurses</dep>
                        <dep>openssl</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<!-- soft -->
			<dep>sqlite</dep>
			<!-- creates cycle -->
			<!-- <dep>subversion</dep> -->
			<!-- <dep>distcc</dep> -->
			<!-- <dep>gcc52</dep> -->
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			export CC="/usr/local/gcc52/bin/gcc52"
			export CXX="/usr/local/gcc52/bin/g++52"
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS"
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc /usr/local/gcc52/bin/gcc52"
				export CXX="distcc /usr/local/gcc52/bin/g++52" 
			fi
			
			case $(uname -m) 
			in
				x86_64) 
					export CFLAGS="-fPIC"
				;;
			esac 
				
			./configure --prefix=/usr  --enable-shared # --enable-static
				
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				make -j ` grep -c processor /proc/cpuinfo ` 
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			ln -sf python2.7 ${TGTDIR}/usr/bin/python
			/sbin/paxctl -m ${TGTDIR}/usr/bin/python2.7
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
