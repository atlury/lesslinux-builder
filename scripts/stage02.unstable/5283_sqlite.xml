		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<!-- <dep>distcc</dep> -->
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf  ${SRCDIR}/${PKGNAME}-autoconf-3100000.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-autoconf-3100000
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] && which pump ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				CFLAGS="-DSQLITE_ENABLE_COLUMN_METADATA=1 -g -O2 -DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_UNLOCK_NOTIFY=1 -DSQLITE_SECURE_DELETE=1 " ./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				CFLAGS="-DSQLITE_ENABLE_COLUMN_METADATA=1 -g -O2 -DSQLITE_ENABLE_FTS3=1 -DSQLITE_ENABLE_UNLOCK_NOTIFY=1 -DSQLITE_SECURE_DELETE=1 " ./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-autoconf-3100000
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-autoconf-3100000
			]]>
		</clean>
	</package>
</llpackages>
