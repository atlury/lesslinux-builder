<llpackages>
	<package 
		name="VeraCrypt"
		version="1.18a"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="f97bff49a7dfb992df18fed6051f84db3a6fb865">VeraCrypt_1.18a.tar.gz</pkg>
				<mirror>https://github.com/veracrypt/VeraCrypt/archive/</mirror>
			</file>
			<manualcheck date="20160922" interval="90" page="http://www.truecrypt.org/" />
		</sources>
		<builddeps>
                        <dep>atk</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>fontconfig</dep>
                        <dep>freetype</dep>
                        <dep>fuse</dep>
                        <dep>gcc</dep>
                        <dep>gdk-pixbuf</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gtk</dep>
                        <dep>inetutils</dep>
                        <dep>libICE</dep>
                        <dep>libSM</dep>
                        <dep>libX11</dep>
                        <dep>libXau</dep>
                        <dep>libXrender</dep>
                        <dep>libpthread-stubs</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>nasm</dep>
                        <dep>pango</dep><dep>pangox-compat</dep>
                        <dep>pixman</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xproto-base</dep>
			<dep>wxWidgets3</dep>
			<dep>ImageMagick</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}_${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGNAME}_${PKGVERSION}/src
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			export PATH=/usr/compat.new/bin:$PATH 
			make -j $jobcount
			convert ./Setup/Linux/usr/share/pixmaps/veracrypt.xpm -resize '48x48!'  ./Setup/Linux/usr/share/pixmaps/veracrypt.png
			sed -i 's%Categories=Encryption;Encryption Tools;Utility;%Categories=Utility;Encryption;Encryption Tools;%g'  ./Setup/Linux/usr/share/applications/veracrypt.desktop
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGNAME}_${PKGVERSION}/src
			mkdir -p ${TGTDIR}/usr/bin
			mkdir -p ${TGTDIR}/usr/share 
			tar -C ./Setup/Linux/ -cvf - | tar -C ${TGTDIR}/ -xf - 
			ln -sf veracrypt ${TGTDIR}/usr/bin/truecrypt 
			rm veracrypt ${TGTDIR}/usr/bin/veracrypt-uninstall.sh
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGNAME}_${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
