<llpackages>
	<package 
		name="gpgme"
		version="1.6.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="21510323495f6220f8f67610c3c27a23d761d43d">gpgme-1.6.0.tar.bz2</pkg>
				<mirror>ftp://ftp.gnupg.org/gcrypt/gpgme/</mirror>
			</file>
			<manualcheck date="20160701" interval="90" page="ftp://ftp.gnupg.org/gcrypt/gpgme/" />
			<check>
				<page html="ftp://ftp.gnupg.org/gcrypt/gpgme/">
					<atext linktext="gpgme-1.6.1." />
					<atext linktext="gpgme-1.6.2." />
					<atext linktext="gpgme-1.6.3." />
					<atext linktext="gpgme-1.6.4." />
					<atext linktext="gpgme-1.6.5." />
					<atext linktext="gpgme-1.6.6." />
					<atext linktext="gpgme-1.7." />
					<atext linktext="gpgme-1.8." />
					<atext linktext="gpgme-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gnupg</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libassuan</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --disable-gpgsm-test
			make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
