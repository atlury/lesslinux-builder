<llpackages>
	<package 
		name="gpgme"
		version="1.5.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="8cf1bcce8603bd7d006065f08059cf85462828c4">gpgme-1.5.4.tar.bz2</pkg>
				<mirror>ftp://ftp.gnupg.org/gcrypt/gpgme/</mirror>
			</file>
			<manualcheck date="20150601" interval="90" page="ftp://ftp.gnupg.org/gcrypt/libassuan/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gnupg</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libassuan</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc --disable-gpgsm-test
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
