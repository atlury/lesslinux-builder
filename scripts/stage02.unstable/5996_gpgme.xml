<llpackages>
	<package 
		name="gpgme"
		version="1.5.5"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="88476d72cb099e179de4040760502886f7a54926">gpgme-1.5.5.tar.bz2</pkg>
				<mirror>ftp://ftp.gnupg.org/gcrypt/gpgme/</mirror>
			</file>
			<manualcheck date="20150620" interval="90" page="ftp://ftp.gnupg.org/gcrypt/gpgme/" />
			<check>
				<page html="ftp://ftp.gnupg.org/gcrypt/gpgme/">
					<atext linktext="gpgme-1.5.11." />
					<atext linktext="gpgme-1.5.6." />
					<atext linktext="gpgme-1.5.7." />
					<atext linktext="gpgme-1.5.8." />
					<atext linktext="gpgme-1.5.9." />
					<atext linktext="gpgme-1.5.10." />
					<atext linktext="gpgme-1.6." />
					<atext linktext="gpgme-1.7." />
					<atext linktext="gpgme-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gnupg</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libassuan</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc --disable-gpgsm-test
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
