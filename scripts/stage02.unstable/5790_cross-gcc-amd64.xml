		</sources>
		<builddeps>
                        <dep>autoconf</dep>
                        <dep>automake</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>cross-binutils-amd64</dep>
                        <dep>diffutils</dep>
                        <dep>flex</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>gmp</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>mpfr</dep>
                        <dep>perl</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/gcc-${PKGVERSION}.tar.bz2
			tar xf ${SRCDIR}/mpfr-3.1.4.tar.bz2
			tar xf ${SRCDIR}/gmp-6.1.1.tar.lz
			tar zxf ${SRCDIR}/mpc-1.0.3.tar.gz

			mv -v mpc-1.0.3 gcc-${PKGVERSION}/mpc
			mv -v gmp-6.1.1 gcc-${PKGVERSION}/gmp
			mv -v mpfr-3.1.4 gcc-${PKGVERSION}/mpfr
		
			mkdir ${PKGNAME}-build
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd gcc-${PKGVERSION}
			sed -i 's/BUILD_INFO=info/BUILD_INFO=/' gcc/configure
			sed -i '/k prot/agcc_cv_libc_provides_ssp=yes' gcc/configure
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-build
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
			fi
			../gcc-${PKGVERSION}/configure \
				--target=amd64-linux-uclibc \
				--prefix=/usr/local/crosstools-amd64 \
				--with-newlib \
				--without-headers \
				--disable-nls \
				--disable-shared \
				--disable-multilib \
				--disable-libmudflap \
				--disable-libssp \
				--disable-libgomp \
				--disable-libquadmath \
				--disable-libitm \
				--disable-decimal-float \
				--disable-libatomic \
				--disable-threads \
				--disable-libsanitizer \
				--disable-libstdc++-v3 \
				--enable-languages=c,c++ \
				--without-ppl \
				--without-cloog \
				--with-mpfr-include=$(pwd)/../gcc-${PKGVERSION}/mpfr/src \
				--with-mpfr-lib=$(pwd)/mpfr/src/.libs 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
			else
				make -j 4
			fi
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-build
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			 <![CDATA[
			rm -rf gcc-${PKGVERSION}
			rm -rf ${PKGNAME}-build
			]]>
		</clean>
	</package>
</llpackages>
