<llpackages>
	<package 
		name="atk"
		version="2.30.0"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>             
				<pkg sha1="08a1c0e5173b992fd8b59cd7c40c3ae0cf0dc4f3">atk-2.30.0.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/atk/2.30/</mirror>
			</file>
			<manualcheck date="20170614" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/atk" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/atk/2.24/">
					<atext linktext="atk-2.24.1." />
					<atext linktext="atk-2.24.2." />
					<atext linktext="atk-2.24.3." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/atk/">
					<atext linktext="2.28" />
					<atext linktext="2.30" />
					<atext linktext="2.26" />
					<atext linktext="3.0" />
					<atext linktext="3.2" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>gobject-introspection</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
