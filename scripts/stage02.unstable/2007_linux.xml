<llpackages>
	<package 
		name="linux"
		version="3.15.4"
		class="kernel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                  
				<pkg sha1="95d05eb18d8f414011732abde9f52095bf6def07">config-3.15-lesslinux-20140618-1030</pkg> 
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<file>
				<pkg sha1="660d8a1c2c694b1dbb361ef7fcbd62846ba742a5">lesslinux-fblogo-20100922.ppm</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<file>                                                                                                 
				<pkg sha1="f21a27b36ad7169596b0b809707f1442e6d2bb89">linux-3.15.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="0d7c129934c0b1309f5fc6e7941b5fdc47c9f7b6">patch-3.15.4.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20140707" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.15.5." />
					<atext linktext="patch-3.15.6." />
					<atext linktext="patch-3.15.7." />
					<atext linktext="patch-3.16." />
					<atext linktext="patch-3.17." />
					<atext linktext="patch-3.18." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>which</dep>
			<dep>ruby</dep>
			<dep>installkernel-debian</dep>
			<dep>xz</dep>
			<dep>bzip2</dep>
			<dep>gzip</dep>
			<dep>lesslinux-modextract</dep>
			<dep>module-init-tools</dep>
			<!-- <dep>linux-pax</dep> -->
			<dep>bc</dep>
			<dep>distcc</dep>
			<dep>kmod</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.15.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			cd linux-3.15
			[ -f ${SRCDIR}/patch-${PKGVERSION}.xz ] && unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cp -v ${SRCDIR}/lesslinux-fblogo-20100922.ppm drivers/video/logo/logo_linux_clut224.ppm
			cp -v ${SRCDIR}/config-3.15-lesslinux-20140618-1030  .config 
			echo 'CONFIG_ACPI_PROCFS_POWER=y' >>  .config 
			cd ..
			mv linux-3.15 linux-${PKGVERSION}
			]]>
		</patch>
		<build>
			<![CDATA[ 
			cd linux-${PKGVERSION}
			make oldconfig
			make clean
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount bzImage CC="distcc gcc" CXX="distcc g++" 
			else
				make -j 4
				make -j 4 bzImage
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd linux-${PKGVERSION}
			mkdir -p ${TGTDIR}/boot
			INSTALL_MOD_PATH=${TGTDIR} make modules_install
			install -m 0644 arch/x86/boot/bzImage ${TGTDIR}/boot/vmlinuz-${PKGVERSION}-lesslinux-000
			find ${TGTDIR}/lib/modules/${PKGVERSION}-lesslinux-000 -type f -name '*.ko' -exec strip --strip-unneeded {} \; 
			true
			
			]]>
		</install>
		<clean>
			  <![CDATA[
			  
			  rm -rf linux-${PKGVERSION}
			  
			  ]]>
		</clean>
	</package>
</llpackages>
