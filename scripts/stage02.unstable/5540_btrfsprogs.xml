<llpackages>
	<package 
		name="btrfs-progs"
		version="20160704"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>                                                          
			<file>	<!-- git clone git://git.kernel.org/pub/scm/linux/kernel/git/mason/btrfs-progs.git  -->         
				<pkg sha1="a11af9865878b33d746d038f5db663a77c0217eb">btrfs-progs-20160704.tar.bz2</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20160701" interval="60" page="http://distfiles.lesslinux.org/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>gzip</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>util-linux-ng</dep>
                        <dep>which</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			cd ${PKGNAME}
			bash autogen.sh 
			./configure --prefix=/usr --sysconfdir=/etc 
			sed -i 's/ build-Documentation//g' Makefile 
			sed -i 's/ install-Documentation//g' Makefile
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				make
			fi
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}
			mkdir -p ${TGTDIR}/usr/bin
			mkdir -p ${TGTDIR}/usr/sbin
			make install prefix=/usr DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}
			]]>
		</clean>
	</package>
</llpackages>
