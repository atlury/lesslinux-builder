<llpackages>
	<package
		name="mc"
		version="4.8.19"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                          
				<pkg sha1="850747ae43a5c81f1dd0d906dfa9e149eb19748a">mc-4.8.19.tar.xz</pkg>
				<mirror>ftp://ftp.midnight-commander.org/pub/midnightcommander/</mirror>
			</file>
			<manualcheck date="20170615" interval="90" page="ftp://ftp.midnight-commander.org/" />
			<check>
				<page html="ftp://ftp.midnight-commander.org/pub/midnightcommander/">
					<atext linktext="mc-4.8.20." />
					<atext linktext="mc-4.8.21." />
					<atext linktext="mc-4.8.22." />
					<atext linktext="mc-4.8.23." />
					<atext linktext="mc-4.8.24." />
					<atext linktext="mc-4.9." />
					<atext linktext="mc-4.10." />
					<atext linktext="mc-5.0." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>file</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>glib</dep>
                        <dep>grep</dep>
                        <dep>groff</dep>
                        <dep>imake</dep>
                        <dep>inetutils</dep>
                        <dep>libssh2</dep>
                        <dep>libX11</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>slang</dep>
                        <dep>unzip</dep>
                        <dep>xorg-cf-files</dep>
                        <dep>xproto-base</dep>
                        <dep>zip</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc 
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			
mkdir -p ${TGTDIR}/usr/share/applications
cat >> ${TGTDIR}/usr/share/applications/mc.desktop << MCDESKTOP

[Desktop Entry]
Version=1.0
Encoding=UTF-8
Type=Application
Name=Midnight Commander
Comment=
Categories=Utility;
Exec=Terminal --hide-menubar -T "Midnight Commander" -e mc 
Icon=file-manager
Terminal=false
StartupNotify=true

MCDESKTOP
			
chmod 0755 ${TGTDIR}/usr/share/applications/mc.desktop

			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
