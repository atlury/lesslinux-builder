<llpackages>
	<package 
		name="cross-linux-headers"
		version="3.15.9"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="f21a27b36ad7169596b0b809707f1442e6d2bb89">linux-3.15.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="f5e3ce187394601a074d6a624f8773bf1245509d">patch-3.15.9.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20140808" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.15.11." />
					<atext linktext="patch-3.15.12." />
					<atext linktext="patch-3.15.10." />
					<atext linktext="patch-3.16." />
					<atext linktext="patch-3.17." />
					<atext linktext="patch-3.18." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>findutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>which</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.15.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd linux-3.15
			unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv -v linux-3.15 linux-${PKGVERSION}
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			
			cd linux-${PKGVERSION}
			make mrproper && make headers_check
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			
			cd linux-${PKGVERSION}
			make INSTALL_HDR_PATH=dest headers_install
			find dest/include \( -name .install -o -name ..install.cmd \) -delete
			
			for tgt in crosstools/i486-linux-uclibc crosstools-amd64/amd64-linux-uclibc \
				crosstools-ia32-musl/i386-linux-musl crosstools-amd64-musl/x86_64-linux-musl ; do
				ln -s . ${TGTDIR}/usr/local/${tgt}/usr
				mkdir -p ${TGTDIR}/usr/local/${tgt}/include
				cp -rv dest/include/* ${TGTDIR}/usr/local/${tgt}/include
			done
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
