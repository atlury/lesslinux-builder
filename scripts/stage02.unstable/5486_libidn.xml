<llpackages>
	<package 
		name="libidn"
		version="1.32"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                    
				<pkg sha1="ddd018611b98af7c67d434aa42d15d39f45129f5">libidn-1.32.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/libidn/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="ftp://ftp.gnu.org/gnu/libidn/" />
			<check>
				<page html="ftp://ftp.gnu.org/gnu/libidn/">
					<atext linktext="libidn-1.34." />
					<atext linktext="libidn-1.35." />
					<atext linktext="libidn-1.36." />
					<atext linktext="libidn-1.37." />
					<atext linktext="libidn-1.33." />
					<atext linktext="libidn-2." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
