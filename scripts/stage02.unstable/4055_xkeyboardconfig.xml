<llpackages>
	<package 
		name="xkeyboard-config"
		version="2.18"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>          
				<pkg sha1="d41335ec37b363ddaf2f0dcb121436dfc627ced5">xkeyboard-config-2.18.tar.bz2</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://cgit.freedesktop.org/xkeyboard-config/log/" />
			<check>
				<page html="ftp://ftp.x.org/pub/individual/data/xkeyboard-config/">
					<atext linktext="xkeyboard-config-2.20." />
					<atext linktext="xkeyboard-config-2.21." />
					<atext linktext="xkeyboard-config-2.22." />
					<atext linktext="xkeyboard-config-2.19." />
					<atext linktext="xkeyboard-config-3." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>intltool</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>xkbcomp</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			# bash autogen.sh
			./configure --prefix=/usr --sysconfdir=/etc  --with-xkb-rules-symlink=xorg && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
