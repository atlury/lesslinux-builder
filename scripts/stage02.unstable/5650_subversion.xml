<llpackages>
	<package 
		name="subversion"
		version="1.8.13"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                
				<pkg sha1="aa0bd14ac6a8f0fb178cc9ff325387de01cd7452">subversion-1.8.13.tar.bz2</pkg>
				<mirror>http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/subversion/</mirror>
			</file>
			<manualcheck date="20150601" interval="180" page="https://apr.apache.org/" />
			<check>
				<page html="http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/subversion/">
					<atext linktext="subversion-1.8.14." />
					<atext linktext="subversion-1.8.15." />
					<atext linktext="subversion-1.8.16." />
					<atext linktext="subversion-1.8.17." />
					<atext linktext="subversion-1.9.0." />
					<atext linktext="subversion-1.9.1." />
					<atext linktext="subversion-1.10." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>apr-util</dep>
                        <dep>apr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>sqlite</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --disable-nls --without-berkeley-db  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --disable-nls --without-berkeley-db
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
