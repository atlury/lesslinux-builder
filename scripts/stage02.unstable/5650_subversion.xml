<llpackages>
	<package 
		name="subversion"
		version="1.9.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                
				<pkg sha1="2ba78f59b3669e461ef6f56326426918100e2073">subversion-1.9.0.tar.bz2</pkg>
				<mirror>http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/subversion/</mirror>
			</file>
			<manualcheck date="20150823" interval="180" page="https://apr.apache.org/" />
			<check>
				<page html="http://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/subversion/">
					<atext linktext="subversion-1.9.1." />
					<atext linktext="subversion-1.9.2." />
					<atext linktext="subversion-1.9.3." />
					<atext linktext="subversion-1.9.4." />
					<atext linktext="subversion-1.10." />
					<atext linktext="subversion-1.11." />
					<atext linktext="subversion-1.12." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>apr-util</dep>
                        <dep>apr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>dbus</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>ruby</dep>
                        <dep>sed</dep>
                        <dep>sqlite</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --disable-nls --without-berkeley-db  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --disable-nls --without-berkeley-db
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
