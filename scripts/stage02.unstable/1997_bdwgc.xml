<llpackages>
	<package 
		name="bdw-gc"
		version="7.4.4"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="52adf4e7779c0a890ec70d0a41671eefdcc4181a">gc-7.4.4.tar.gz</pkg>
				<mirror>http://www.hboehm.info/gc/gc_source/</mirror>
			</file>
			<file>
				<!-- git clone https://github.com/ivmai/libatomic_ops  -->                                                             
				<pkg sha1="426af02f1bb8b91979fa8794e9e0b29e2be1e47e">libatomic_ops-7.4.4.tar.gz</pkg>
				<mirror>http://www.ivmaisoft.com/_bin/atomic_ops/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://www.hboehm.info/gc/" />
			<check>
				<page html="http://www.hboehm.info/gc/gc_source/">
					<atext linktext="gc-7.4.8." />
					<atext linktext="gc-7.4.9." />
					<atext linktext="gc-7.4.5." />
					<atext linktext="gc-7.4.6." />
					<atext linktext="gc-7.4.7." />
					<atext linktext="gc-7.5." />
					<atext linktext="gc-7.6." />
					<atext linktext="gc-7.7." />
					<atext linktext="gc-8." />
					<atext linktext="gc-9." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/gc-${PKGVERSION}.tar.gz
			cd gc-${PKGVERSION} 
			tar xzf ${SRCDIR}/libatomic_ops-${PKGVERSION}.tar.gz
			mv libatomic_ops-${PKGVERSION} libatomic_ops 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gc-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gc-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gc-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
