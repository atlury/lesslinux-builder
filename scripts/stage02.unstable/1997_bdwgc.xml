<llpackages>
	<package 
		name="bdw-gc"
		version="7.4.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="cd4a54620c38a2c361b3ee99dd134dbffb57c313">gc-7.4.2.tar.gz</pkg>
				<mirror>http://www.hpl.hp.com/personal/Hans_Boehm/gc/gc_source/</mirror>
			</file>
			<file>
				<!-- git clone https://github.com/ivmai/libatomic_ops  -->                                                             
				<pkg sha1="57cd7c64e37fca300bd7b24e3d2f14129b25b376">libatomic_ops-7.4.2.tar.gz</pkg>
				<mirror>http://www.ivmaisoft.com/_bin/atomic_ops/</mirror>
			</file>
			<manualcheck date="20150529" interval="180" page="http://www.hpl.hp.com/personal/Hans_Boehm/gc/gc_source/" />
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/gc-${PKGVERSION}.tar.gz
			cd gc-${PKGVERSION} 
			tar xzf ${SRCDIR}/libatomic_ops-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gc-${PKGVERSION}
			./configure --prefix=/usr --sysconfdir=/etc && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gc-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gc-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
