		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/parted-${PKGVERSION}.tar.xz | tar xf - 
			tar -xf ${SRCDIR}/LVM2.2.02.171.tgz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd parted-${PKGVERSION} 
			true
			]]>
		</patch>
		<build>
			<![CDATA[
			# export CC="/usr/local/gcc54/bin/gcc54"
			# export CXX="/usr/local/gcc54/bin/g++54"
			THISDIR=` pwd ` 
			cd LVM2.2.02.171
			export CFLAGS=-Wno-error
			./configure --prefix=/usr --sysconfdir=/etc --enable-dmeventd --enable-cmdlib --enable-static_link # CFLAGS=-fPIE LDFLAGS=-pie
			make lib
			cd ../parted-${PKGVERSION}                    
			./configure --prefix=/usr --sysconfdir=/etc --enable-static --disable-nls --with-readline=no 
			make LDFLAGS="-all-static -L${THISDIR}/LVM2.2.02.171/libdm/ioctl -pthread"
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			export CC="/usr/local/gcc54/bin/gcc54"
			export CXX="/usr/local/gcc54/bin/g++54"
			cd parted-${PKGVERSION}
			mkdir -p $TGTDIR/static/sbin
			install -m 0755 parted/parted $TGTDIR/static/sbin/parted
			strip $TGTDIR/static/sbin/parted 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf parted-${PKGVERSION}
			rm -rf LVM2.2.02.166
			]]>
