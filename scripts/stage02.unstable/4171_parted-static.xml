		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/parted-${PKGVERSION}.tar.xz | tar xf - 
			tar -xf ${SRCDIR}/LVM2.2.02.158.tgz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			THISDIR=` pwd ` 
			cd LVM2.2.02.111
			./configure --prefix=/usr --sysconfdir=/etc --enable-dmeventd --enable-cmdlib --enable-static_link
			make -k
			cd ../parted-${PKGVERSION}                    
			./configure --prefix=/usr --sysconfdir=/etc --enable-static --disable-nls --with-readline=no
			make LDFLAGS="-all-static -L${THISDIR}/LVM2.2.02.158/libdm/ioctl -pthread"
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd parted-${PKGVERSION}
			mkdir -p $TGTDIR/static/sbin
			install -m 0755 parted/parted $TGTDIR/static/sbin/parted
			strip $TGTDIR/static/sbin/parted 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf parted-${PKGVERSION}
			rm -rf LVM2.2.02.158
			]]>
