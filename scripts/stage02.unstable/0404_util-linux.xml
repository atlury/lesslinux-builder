		<builddeps>
			<dep>linux_headers</dep>
			<dep>glibc</dep>
			<dep>readjust</dep>
			<dep>zlib</dep>
			<dep>binutils</dep>
			<dep>gmp</dep>
			<dep>mpfr</dep>
