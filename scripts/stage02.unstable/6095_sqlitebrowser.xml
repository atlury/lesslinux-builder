					<atext href="v3.10." />
					<atext href="v3.11." />
					<atext href="v4.0." />
				</page>
			</check>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>qt-everywhere-opensource-src</dep>
                        <dep>sqlite</dep>
			<dep>distcc</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/v${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
	    export PATH=/usr/compat.old/qt4/bin:$PATH
cmake -DCMAKE_INSTALL_PREFIX=/usr  .
make -j $jobcount 
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    export PATH=/usr/compat.old/qt4/bin:$PATH
make install
sed -i 's/Development/CB-Other/g' /usr/share/applications/sqlitebrowser.desktop
sed -i 's%Icon=sqlitebrowser%Icon=/usr/share/icons/Faenza/mimetypes/scalable/application-x-sqlite3.svg%g' /usr/share/applications/sqlitebrowser.desktop
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>