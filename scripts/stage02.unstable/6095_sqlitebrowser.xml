        <sources>
            <file>
                <pkg sha1='27ce9c7ad6613e673445cfe84549d60dd8a5ea8e'>
                    v3.9.0.tar.gz
                </pkg>
                <mirror>
                    https://github.com/sqlitebrowser/sqlitebrowser/archive/
                </mirror>
            </file>
            <manualcheck date='20160125' interval='60' mirror='http://sqlitebrowser.org/'/>
	        <check>
				<page html="http://sqlitebrowser.org/">
					<atext href="v3.9.5." />
					<atext href="v3.9.1." />
					<atext href="v3.9.2." />
