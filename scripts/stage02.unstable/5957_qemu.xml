		<!-- <patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat  ${SRCDIR}/${PKGNAME}-2.1.2-virtfs-proxy-helper.patch | patch -p1 
			]]>
		</patch> -->
		<build>
			<![CDATA[
			exit 0
			cd ${PKGNAME}-${PKGVERSION}
			# export CC="/usr/local/gcc54/bin/gcc54"
			# export CXX="/usr/local/gcc54/bin/g++54"
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc" #  "distcc /usr/local/gcc54/bin/gcc54"
				export CXX="distcc g++" # /usr/local/gcc54/bin/g++54" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/qemu \
				--docdir=/usr/share/doc/${PKGNAME}-${PKGVERSION} \
				--target-list=x86_64-softmmu,i386-softmmu,x86_64-linux-user,i386-linux-user  --disable-docs
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				make -j $jobcount
			else
				make -j $( grep -c processor /proc/cpuinfo )
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd qemu-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			# mkdir -p ${TGTDIR}/etc/lesslinux/
			# touch ${TGTDIR}/etc/lesslinux/${PKGNAME}-${PKGVERSION}-dummy
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
