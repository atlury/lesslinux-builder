		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}gtk-${PKGVERSION}.tar.xz | tar xf -
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}gtk-${PKGVERSION}
			# FIXME: Try to build with distcc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc /usr/local/gcc49/bin/gcc49"
				export CXX="distcc /usr/local/gcc49/bin/g++49"
			else
				export CC=/usr/local/gcc49/bin/gcc49 
				export CXX=/usr/local/gcc49/bin/g++49
			fi
			# ./configure --prefix=/usr --sysconfdir=/etc  --enable-geolocation=no --enable-gtk-doc=no --disable-webgl 
			./configure  --prefix=/usr --sysconfdir=/etc \
				--enable-geolocation=no --enable-gtk-doc=no --enable-introspection  
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				pump make -j $jobcount
				make
			else
				make -j ` grep -c processor /proc/cpuinfo ` 
			fi
			make -j ` grep -c processor /proc/cpuinfo ` LIBS='-ldl -lGL -lglapi'
			make 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}gtk-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}gtk-${PKGVERSION}
			]]>
