<llpackages>
	<package 
		name="Cython"
		version="0.22"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>                                                                        
				<pkg sha1="a80bd1462ca5e99934908f030549d204951f8da6">Cython-0.22.tar.gz</pkg>
				<mirror>http://www.cython.org/release/</mirror>
			</file>
			<manualcheck date="20150601" interval="60" page="http://www.cython.org/release/" />
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>openssl</dep>
                        <dep>pygobject</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			python setup.py build
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			python setup.py install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
