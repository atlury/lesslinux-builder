		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			export SHELL=/bin/bash
			env
			mkdir -pv libssh.build
			cd libssh.build
			cmake -DCMAKE_INSTALL_PREFIX=/usr  ../${PKGNAME}-${PKGVERSION}
			find . -name 'build.make' -exec sed -i 's%/usr/lib/libcrypto.so%%g' {} \;
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd libssh.build
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf libssh.build
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
