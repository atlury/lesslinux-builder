<llpackages>
	<package 
		name="git"
		version="2.6.3"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>           
				<pkg sha1="eb522811e095c8c972ab5724ab8e964cc13ebc0f">git-2.6.3.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/software/scm/git/</mirror>
			</file>
			<manualcheck date="20151128" interval="180" page="https://www.kernel.org/pub/software/scm/git/" />
			<check>
				<page html="rsync://www.kernel.org/pub/software/scm/git/">
					<atext linktext="git-2.6.7." />
					<atext linktext="git-2.6.8." />
					<atext linktext="git-2.6.4." />
					<atext linktext="git-2.6.5." />
					<atext linktext="git-2.6.6." />
					<atext linktext="git-2.7." />
					<atext linktext="git-2.8." />
					<atext linktext="git-2.9." />
					<atext linktext="git-3." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>curl</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>perl</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
			<dep>cacerts</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --sysconfdir=/etc  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=$TGTDIR
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
