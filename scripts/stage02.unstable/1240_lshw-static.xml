<llpackages>
	<package 
		name="lshw"
		version="B.02.18"
		class="user"
		allowfail="yes"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file> 
				<pkg sha1="c0240f5e53cf40769d52e316719e8010ea6bdea3">lshw-B.02.18.tar.gz</pkg>
				<mirror>http://ezix.org/software/files/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://ezix.org/project/wiki/HardwareLiSter" />
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}/src
			make static
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}/src
			mkdir -p ${TGTDIR}/usr/sbin
			install -m 0755 lshw-static ${TGTDIR}/usr/sbin
			]]>
		</install>
		<clean>
			  <![CDATA[
			  
			  rm -rf ${PKGNAME}-${PKGVERSION}
			  
			  ]]>
		</clean>
	</package>
</llpackages>
