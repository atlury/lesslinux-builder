<llpackages>
	<package 
		name="libpng15"
		version="1.5.28"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                  
				<pkg sha1="3216ac9f01ef00fb2afb5ce01eacc2c3ea8b334d">libpng-1.5.28.tar.xz</pkg>
				<mirror>http://downloads.sourceforge.net/project/libpng/libpng15/1.5.28/</mirror>
			</file>
			<manualcheck date="20170614" interval="90" page="http://downloads.sourceforge.net/project/libpng" />
			<check>
				<page html="http://sourceforge.net/projects/libpng/files/libpng15/">
					<atext linktext="1.5.31" />
					<atext linktext="1.5.32" />
					<atext linktext="1.5.29" />
					<atext linktext="1.5.30" />
				</page>
				<page html="http://sourceforge.net/projects/libpng/files/">
					<atext linktext="1.8" />
					<atext linktext="1.7" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>libpng12</dep>
			<dep>libpng14</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/libpng-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd libpng-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd libpng-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			# rm ${TGTDIR}/usr/lib/pkgconfig/libpng.pc 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf libpng-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
