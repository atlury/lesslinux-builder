<llpackages>
	<package 
		name="ptlib"
		version="2.10.11"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                               
				<pkg sha1="870c58fb9e6959793ddf214c951a1a8ba1f6ac12">ptlib-2.10.11.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/ptlib/2.10/</mirror>
			</file>
			<file>                                                                               
				<pkg sha1="b62e6e524c0cf64aacdd1b0d62c21c6fb464f09b">ptlib-2.10.11-bison_fixes-1.patch</pkg>
				<mirror>http://www.linuxfromscratch.org/patches/blfs/svn/</mirror>
			</file>
			<manualcheck date="20160113" interval="365" page="http://ftp2.nluug.nl/windowing/gnome/sources/ptlib/2.10/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/ptlib/2.10/">
					<atext linktext="ptlib-2.10.19." />
					<atext linktext="ptlib-2.10.12." />
					<atext linktext="ptlib-2.10.13." />
					<atext linktext="ptlib-2.10.14." />
					<atext linktext="ptlib-2.10.15." />
					<atext linktext="ptlib-2.10.16." />
					<atext linktext="ptlib-2.10.17." />
					<atext linktext="ptlib-2.10.18." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>Python</dep>
                        <dep>SDL</dep>
                        <dep>alsa-lib</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison2</dep>
                        <dep>coreutils</dep>
			<dep>compositeproto</dep>
                        <dep>diffutils</dep>
                        <dep>expat</dep>
                        <dep>flex</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>subversion</dep>
                        <dep>which</dep>
			<dep>distcc</dep>
			<dep>gcc49</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-bison_fixes-1.patch | patch -p1
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			PATH=/usr/compat.old/bin:/usr/compat/old/sbin:$PATH
			export PATH
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc  /usr/local/gcc49/bin/gcc49'
				export CXX='distcc  /usr/local/gcc49/bin/g++49'
				./configure --sysconfdir=/etc --prefix=/usr 
				pump make -j $jobcount 
			else
				export CC=/usr/local/gcc49/bin/gcc49 
				export CXX=/usr/local/gcc49/bin/g++49
				./configure --sysconfdir=/etc --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
