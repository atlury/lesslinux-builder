<llpackages>
    <package name='bridge-utils' version='1.5' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='19d2a58cd3a70f971aa931b40256174a847e60d6'>
                    bridge-utils-1.5.tar.gz
                </pkg>
                <mirror>
                    http://downloads.sourceforge.net/project/bridge/bridge/
                </mirror>
            </file>
	     <file>
                <pkg sha1='c1d5740435f8500c7ff3117cf4a9f3a2dcbb9a84'>
                    bridge-utils-1.5-linux_3.8_fix-1.patch
                </pkg>
                <mirror>
                    http://www.linuxfromscratch.org/patches/blfs/svn/
                </mirror>
            </file>
            <manualcheck date='20160226' interval='60' mirror='http://downloads.sourceforge.net/project/bridge/bridge/'/>
        </sources>
	<builddeps>
                        <dep>autoconf</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>sed</dep>
			<dep>gcc54</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-linux_3.8_fix-1.patch | patch -p1
]]>
	</patch>
        <build>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
		export CC="/usr/local/gcc54/bin/gcc54"
		export CXX="/usr/local/gcc54/bin/g++54"
		autoconf -o configure configure.in
		./configure --prefix=/usr  
		find . -type f -exec sed -i 's%/usr/src/linux/include%/usr/compat.old/include%g' {} \;
		sed -i 's%#include <linux/if_bridge.h>%%g' libbridge/libbridge.h 
		sed -i 's%#include <linux/if_bridge.h>%%g' libbridge/libbridge_private.h 
		make
]]>
        </build>
        <install>
            <![CDATA[cd ${PKGNAME}-${PKGVERSION}
	    make install DESTDIR=${TGTDIR}
]]>
        </install>
        <clean>
            <![CDATA[rm -rf ${PKGNAME}-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>