<llpackages>
	<package 
		name="coreutils"
		version="8.25"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                           
				<pkg sha1="301f186c24afb882a3ca73d19a102a2ce6f456c3">coreutils-8.25.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/coreutils/</mirror>
			</file>
			<file>                                                           
				<pkg sha1="a2974624af2393a3884fc3b4c92ee5906c3d25e4">coreutils-8.25-i18n-2.patch</pkg>
				<mirror>http://www.linuxfromscratch.org/patches/lfs/development/</mirror>
			</file>
			<manualcheck date="20160630" interval="180" page="http://ftp.gnu.org/gnu/coreutils" />
			<check>
				<page html="http://ftp.gnu.org/gnu/coreutils/">
					<atext linktext="coreutils-8.25.1" />
					<atext linktext="coreutils-8.26." />
					<atext linktext="coreutils-8.27." />
					<atext linktext="coreutils-9." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>bison</dep>
			<dep>bc</dep>
			<dep>libtool</dep>
			<dep>gdbm</dep>
			<dep>gperf</dep>
			<dep>expat</dep>
			<dep>inetutils</dep>
                        <dep>p5-xml</dep>
                        <dep>perl</dep>
			<dep>intltool</dep>
			<dep>autoconf</dep>
                        <dep>automake</dep>
			<dep>xz</dep>
                        <dep>kmod</dep>
			<dep>gettext</dep>
			<dep>procps</dep>
			<dep>e2fsprogs</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			patch -Np1 -i ${SRCDIR}/coreutils-8.25-i18n-2.patch
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			export FORCE_UNSAFE_CONFIGURE=1
			./configure --prefix=/usr --enable-no-install-program=kill,uptime && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			mkdir -p ${TGTDIR}/bin
			mkdir -p ${TGTDIR}/usr/sbin
			make install DESTDIR=${TGTDIR}
			/tools/bin/mv -v ${TGTDIR}/usr/bin/{cat,chgrp,chmod,chown,cp,date,dd,df,echo} ${TGTDIR}/bin
			/tools/bin/mv -v ${TGTDIR}/usr/bin/{false,ln,ls,mkdir,mknod,mv,pwd,rm} ${TGTDIR}/bin
			/tools/bin/mv -v ${TGTDIR}/usr/bin/{rmdir,stty,sync,true,uname} ${TGTDIR}/bin
			/tools/bin/mv -v ${TGTDIR}/usr/bin/chroot ${TGTDIR}/usr/sbin
			/tools/bin/mv -v ${TGTDIR}/usr/bin/{head,sleep,nice} ${TGTDIR}/bin
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
