<llpackages>
	<package 
		name="procps"
		version="3.3.11"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>  
				<pkg sha1="1bdca65547df9ed019bd83649b0f8b8eaa017e25">procps-ng-3.3.11.tar.xz</pkg>
				<mirror>http://downloads.sourceforge.net/project/procps-ng/Production/</mirror>
			</file>
			<manualcheck date="20160630" interval="365" page="http://procps.sourceforge.net/" />
