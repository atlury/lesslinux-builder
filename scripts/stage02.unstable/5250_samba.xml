		<builddeps>
                        <dep>Python</dep>
                        <dep>acl</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gamin</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libcap</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>readline</dep>
                        <dep>sed</dep>
                        <dep>talloc</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}/
			jobcount=4
			export LDFLAGS=-lncurses
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr  --sysconfdir=/etc  --localstatedir=/var  \
				--with-piddir=/var/run --with-pammodulesdir=/lib/security --enable-fhs \
				--without-pam --without-cluster-support --without-acl-support  --without-quotas \
				--without-ad-dc --without-systemd --without-ldap --without-ads
			make -j $jobcount  
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			mkdir -p ${TGTDIR}/etc/samba
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			[ -x ${TGTDIR}/usr/sbin/smbd ] || exit 1 
			install -v -m 644 examples/smb.conf.default ${TGTDIR}/etc/samba
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
