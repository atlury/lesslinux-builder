					<atext linktext="gnutls-3.2.21." />
					<atext linktext="gnutls-3.2.22." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>findutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>gmp</dep>
                        <dep>grep</dep>
                        <dep>guile</dep>
                        <dep>gzip</dep>
                        <dep>inetutils</dep>
                        <dep>libidn</dep>
                        <dep>libtasn1</dep>
                        <dep>libtool</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>nettle</dep>
                        <dep>p11-kit</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>texinfo</dep>
                        <dep>util-linux-ng</dep>
                        <dep>which</dep>
                        <dep>zlib</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/gnutls-${PKGVERSION}.tar.xz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gnutls-${PKGVERSION}
			# ./configure --sysconfdir=/etc/compat.new --prefix=/usr/compat.new && make
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --sysconfdir=/etc --prefix=/usr  CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --sysconfdir=/etc --prefix=/usr
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gnutls-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gnutls-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
