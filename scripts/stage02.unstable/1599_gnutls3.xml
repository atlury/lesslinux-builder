				<pkg sha1="316d9532035a001ed101e296fbe6f74adf4a6adb">gnutls-3.2.16.tar.xz</pkg>
				<mirror>ftp://ftp.gnutls.org/gcrypt/gnutls/v3.2/</mirror>
			</file>
			<manualcheck date="20140729" interval="90" page="ftp://ftp.gnutls.org/gcrypt/gnutls/v3.2/" />
			<check>
				<page html="ftp://ftp.gnutls.org/gcrypt/gnutls/v3.2/">
					<atext linktext="gnutls-3.2.23." />
					<atext linktext="gnutls-3.2.16." />
