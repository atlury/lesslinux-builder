<llpackages>
	<package 
		name="partimage"
		version="0.6.9"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>  
				<pkg sha1="3b9804b2289d7876835042a144d5fd1949aef1a4">partimage-0.6.9.tar.bz2</pkg>
				<mirror>http://downloads.sourceforge.net/project/partimage/stable/0.6.9/</mirror>
			</file>
			<file>  
				<pkg sha1="334bcf8dc2665b01df31f1f843f16daa35922797">partimage-0.6.9-ftbfs-debian.patch</pkg>
				<mirror>http://distfiles.lesslinux.org/</mirror>
			</file>
			<manualcheck date="20140724" interval="180" page="http://sourceforge.net/projects/partimage/files/stable/" />
			<check>
				<page html="http://sourceforge.net/projects/partimage/files/stable/">
					<atext linktext="0.6.10" />
					<atext linktext="0.6.11" />
					<atext linktext="0.6.12" />
					<atext linktext="0.6.13" />
					<atext linktext="0.6.14" />
					<atext linktext="0.6.15" />
					<atext linktext="0.7." />
					<atext linktext="0.8." />
					<atext linktext="0.9." />
					<atext linktext="1.0." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bzip2</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>newt</dep>
                        <dep>sed</dep>
                        <dep>slang</dep>
                        <dep>util-linux-ng</dep>
                        <dep>zlib</dep>
			<dep>openssl</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			cat ${SRCDIR}/${PKGNAME}-${PKGVERSION}-ftbfs-debian.patch | patch -p1 
			]]>
		</patch>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --sysconfdir=/etc --prefix=/usr && make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
