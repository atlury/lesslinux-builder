<llpackages>
	<package 
		name="openvas-manager"
		version="7.0.3"
		class="user" install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>            
				<pkg sha1="bb8b1652e2c6539a80fe861584a844f1ae38c4ff">v7.0.3.tar.gz</pkg>
				<mirror>http://wald.intevation.org/frs/download.php/2359/</mirror>
			</file>
			<manualcheck date="20160923" interval="90" page="http://www.openvas.org/install-source.html" />
			<check>
				<page html="http://www.openvas.org/install-source.html">
					<atext href="openvas-manager-6.0.14." />
					<atext href="openvas-manager-6.0.10." />
					<atext href="openvas-manager-6.0.11." />
					<atext href="openvas-manager-6.0.12." />
					<atext href="openvas-manager-6.0.13." />
					<atext href="openvas-manager-8." />
					<atext href="openvas-manager-7." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gnutls3</dep>
                        <dep>gpgme</dep>
                        <dep>libgcrypt15</dep>
                        <dep>libgpg-error</dep>
                        <dep>libpcap</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>openvas-libraries</dep>
                        <dep>pkg-config</dep>
                        <dep>sqlite</dep>
                        <dep>subversion</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/v${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd gvmd-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			cmake -DCMAKE_INSTALL_PREFIX=/usr  .
			# find . -type f -exec sed -i 's/-Werror/ /g' {} \;
			make -j $jobcount 
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd gvmd-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf gvmd-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
