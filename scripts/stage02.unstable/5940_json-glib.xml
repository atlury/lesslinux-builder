<llpackages>
	<package 
		name="json-glib"
		version="1.2.0"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="f8e04860da33611973027ec16106fb2564abc556">json-glib-1.2.0.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/json-glib/1.2/</mirror>
			</file>
			<manualcheck date="20160701" interval="180" page="http://ftp2.nluug.nl/windowing/gnome/sources/json-glib/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/json-glib/1.2/">
					<atext linktext="json-glib-1.2.3." />
					<atext linktext="json-glib-1.2.4." />
					<atext linktext="json-glib-1.2.5." />
					<atext linktext="json-glib-1.2.6." />
					<atext linktext="json-glib-1.2.1." />
					<atext linktext="json-glib-1.2.2." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/json-glib/">
					<atext linktext="1.4" />
					<atext linktext="1.6" />
					<atext linktext="2.0" />
				</page>
			</check> 
		</sources>
		<builddeps>
                        <dep>GConf</dep>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib-networking</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gobject-introspection</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libffi</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
