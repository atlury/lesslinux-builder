<llpackages>
	<package 
		name="cryptsetup"
		version="1.7.2"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                                      
				<pkg sha1="1b7005c0f8ad286a7f3d65e99cb555597666605c">cryptsetup-1.7.2.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/linux/utils/cryptsetup/v1.7/</mirror>
			</file>
			<manualcheck date="20160630" interval="180" page="http://code.google.com/p/cryptsetup/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/cryptsetup/v1.7/">
					<atext linktext="cryptsetup-1.7.3." />
					<atext linktext="cryptsetup-1.7.4." />
					<atext linktext="cryptsetup-1.7.5." />
					<atext linktext="cryptsetup-1.7.6." />
					<atext linktext="cryptsetup-1.7.7." />
					<atext linktext="cryptsetup-1.8." />
					<atext linktext="cryptsetup-1.9." />
					<atext linktext="cryptsetup-2." />
				</page>
				<page html="rsync://www.kernel.org/pub/linux/utils/cryptsetup/">
					<atext linktext="v2.1" />
					<atext linktext="v1.8" />
					<atext linktext="v1.9" />
					<atext linktext="v2.0" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>device-mapper</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libgcrypt</dep>
                        <dep>libgpg-error</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>popt</dep>
                        <dep>sed</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
			<dep>nettle</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd cryptsetup-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr   CC="distcc gcc" CXX="distcc g++" 
				make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr 
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd cryptsetup-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf cryptsetup-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
