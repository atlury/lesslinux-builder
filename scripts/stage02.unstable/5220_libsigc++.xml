<llpackages>
	<package 
		name="libsigc++"
		version="2.8.0"
		class="user">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                   
				<pkg sha1="4828b0719de4b05bb5a442fb7675e52e794a60cb">libsigc++-2.8.0.tar.xz</pkg>
				<mirror>http://ftp2.nluug.nl/windowing/gnome/sources/libsigc++/2.8/</mirror>
			</file>
			<manualcheck date="20160701" interval="120" page="http://ftp2.nluug.nl/windowing/gnome/sources/libsigc++/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/libsigc++/2.8/">
					<atext linktext="libsigc++-2.8.1." />
					<atext linktext="libsigc++-2.8.2." />
					<atext linktext="libsigc++-2.8.3." />
					<atext linktext="libsigc++-2.8.4." />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/libsigc++/">
					<atext linktext="2.10" />
					<atext linktext="2.12" />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			elif [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz ] ; then
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			else
				tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ]  ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++"
				./configure --prefix=/usr --sysconfdir=/etc
				pump make -j $jobcount
			else
				./configure --prefix=/usr --sysconfdir=/etc
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
