<llpackages>
	<package 
		name="nbd-client-static"
		version="3.14"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                                            
				<pkg sha1="58bf2c82a7cb1f1143a5f1989f6a0756de74e997">nbd-3.14.tar.xz</pkg>
				<mirror>http://downloads.sourceforge.net/project/nbd/nbd/3.14/</mirror>
			</file>
			<manualcheck date="20160701" interval="90" page="http://downloads.sourceforge.net/project/nbd" />
		</sources>
		<builddeps>
			<dep>cross-gcc-musl2</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xf ${SRCDIR}/nbd-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd nbd-${PKGVERSION}
			export CC=/usr/local/musl/bin/musl-gcc
			./configure --prefix=/usr --sysconfdir=/etc --disable-glibtest
			make -j4 LDFLAGS=-all-static
			make -j4 LDFLAGS=-all-static nbd-client
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			mkdir -p ${TGTDIR}/static/bin
			install -m 0755 nbd-${PKGVERSION}/nbd-client ${TGTDIR}/static/bin 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf nbd-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
