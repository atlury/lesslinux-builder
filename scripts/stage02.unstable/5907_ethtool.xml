<llpackages>
	<package 
		name="ethtool"
		version="3.16"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                       
				<pkg sha1="c29875b50f792cde8a4942d6d93d92b293d3856a">ethtool-3.16.tar.xz</pkg>
				<mirror>https://www.kernel.org/pub/software/network/ethtool/</mirror>
			</file><!-- -cCGbf -->
			<manualcheck date="20140802" interval="120" page="https://www.kernel.org/pub/software/network/ethtool/" />
			<check>
				<page html="rsync://www.kernel.org/pub/software/network/ethtool/">
					<atext linktext="ethtool-3.16.1." />
					<atext linktext="ethtool-3.16.2." />
					<atext linktext="ethtool-3.17" />
					<atext linktext="ethtool-3.18" />
					<atext linktext="ethtool-3.19" />
					<atext linktext="ethtool-3.20" />
					<atext linktext="ethtool-3.21" />
					<atext linktext="ethtool-3.22" />
					<atext linktext="ethtool-3.23" />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>autoconf</dep>
                        <dep>automake</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>bison</dep>
                        <dep>cmake</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>font-util</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>guile</dep>
                        <dep>inetutils</dep>
                        <dep>libtool</dep>
                        <dep>libxml2</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>m4</dep>
                        <dep>make</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                        <dep>util-macros</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC='distcc gcc'
				export CXX='distcc g++'
			fi
			bash autogen.sh
			./configure --prefix=/usr --sysconfdir=/etc
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				pump make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
