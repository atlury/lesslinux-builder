<llpackages>
	<package 
		name="pkg-config"
		version="0.29.1"
		class="devel"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                                                                  
				<pkg sha1="271ce928f6d673cc16cbced2bfd14a5f2e5d3d37">pkg-config-0.29.1.tar.gz</pkg>
				<mirror>http://pkgconfig.freedesktop.org/releases/</mirror>
			</file>
			<manualcheck date="20160113" interval="365" page="http://people.freedesktop.org/~dbn/" />
			<check>
				<page html="http://pkgconfig.freedesktop.org/releases/">
					<atext linktext="pkg-config-0.29.1.t" />
					<atext linktext="pkg-config-0.29.2.t" />
					<atext linktext="pkg-config-0.30.t" />
					<atext linktext="pkg-config-0.31.t" />
					<atext linktext="pkg-config-1." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
			<dep>file</dep>
			<dep>zlib</dep>
			<dep>bzip2</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/usr --with-internal-glib --disable-host-tool --disable-compile-warnings
			make
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
