<llpackages>
	<package 
		name="kmod"
		version="19"
		class="lib"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>              
				<pkg sha1="f59f7dabe32cbf007bcc30731821d5f3ac9a5706">kmod-19.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/utils/kernel/kmod/</mirror>
			</file>
			<manualcheck date="20141120" interval="60" page="http://www.kernel.org/pub/linux/utils/kernel/kmod/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/utils/kernel/kmod/">
					<atext linktext="kmod-33." />
					<atext linktext="kmod-34." />
					<atext linktext="kmod-35." />
					<atext linktext="kmod-20." />
					<atext linktext="kmod-21." />
					<atext linktext="kmod-22." />
					<atext linktext="kmod-23." />
					<atext linktext="kmod-24." />
					<atext linktext="kmod-25." />
					<atext linktext="kmod-26." />
					<atext linktext="kmod-27." />
					<atext linktext="kmod-28." />
					<atext linktext="kmod-29." />
					<atext linktext="kmod-30." />
					<atext linktext="kmod-31." />
					<atext linktext="kmod-32." />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>acl</dep>
                        <dep>attr</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>gperf</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>libusb</dep><dep>libusb-compat</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pkg-config</dep>
                        <dep>sed</dep>
                       <!-- <dep>usbutils</dep> -->
                        <dep>util-linux-ng</dep>
			<dep>distcc</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz | tar -xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
				./configure --prefix=/usr --bindir=/bin --libdir=/lib --sysconfdir=/etc --with-xz --with-zlib --disable-manpages CC="distcc gcc" CXX="distcc g++" 
				pump make -j $jobcount CC="distcc gcc" CXX="distcc g++" 
			else
				./configure --prefix=/usr --bindir=/bin --libdir=/lib --sysconfdir=/etc --with-xz --with-zlib --disable-manpages
				make  
			fi
  			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			mkdir -p ${TGTDIR}/sbin
			mkdir -p ${TGTDIR}/usr/lib
			make install DESTDIR=${TGTDIR}
			for target in depmod insmod modinfo modprobe rmmod; do
				ln -sv ../bin/kmod ${TGTDIR}/sbin/$target
			done
			mv ${TGTDIR}/lib/pkgconfig ${TGTDIR}/usr/lib/
			ln -sv kmod ${TGTDIR}/bin/lsmod
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
