<llpackages>
	<package 
		name="linux_headers"
		version="3.15.1"
		class="devel"
		install="destdir"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="f21a27b36ad7169596b0b809707f1442e6d2bb89">linux-3.15.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="5d5331c260846e3ef20ed6cfd7fd2c78a61dc54b">patch-3.15.1.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20140617" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.15.2." />
					<atext linktext="patch-3.15.3." />
					<atext linktext="patch-3.15.4." />
					<atext linktext="patch-3.16." />
					<atext linktext="patch-3.17." />
					<atext linktext="patch-3.18." />
				</page>
			</check>
		</sources>
		<builddeps>
		</builddeps>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.15.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd linux-3.15
			[ -f ${SRCDIR}/patch-${PKGVERSION}.xz ] && unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			cd ..
			mv -v linux-3.15 linux-${PKGVERSION}
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			
			cd linux-${PKGVERSION}
			make mrproper && make headers_check
			
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			
			cd linux-${PKGVERSION}
			make INSTALL_HDR_PATH=dest headers_install
			find dest/include \( -name .install -o -name ..install.cmd \) -delete
			mkdir -p ${TGTDIR}/usr/include
			cp -rv dest/include/* ${TGTDIR}/usr/include
			
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf linux-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
