<llpackages>
    <package name='libxkbcommon' version='0.8.2' install='destdir'>
        <license>
            unknown
        </license>
        <sources>
            <file>
                <pkg sha1='3e7abe7ea1cd3eabaee6235f74bbe75130008f6b'>xkbcommon-0.8.2.tar.gz</pkg>
                <mirror>
                    https://github.com/xkbcommon/libxkbcommon/archive/
                </mirror>
            </file>
            <manualcheck date='20170615' interval='60' mirror='https://github.com/xkbcommon/libxkbcommon/releases'/>
        </sources>
	<builddeps>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>cairo</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>libX11</dep>
                        <dep>libev</dep>
                        <dep>libxcb</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>pango</dep>
                        <dep>pcre</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>startup-notification</dep>
                        <dep>util-keysyms</dep>
                        <dep>which</dep>
                        <dep>xcb-util-cursor</dep>
                        <dep>xcb-util-wm</dep>
                        <dep>xcb-util</dep>
                        <dep>xproto-base</dep>
                        <dep>yajl</dep>
			<dep>distcc</dep>
                </builddeps>
        <unpack>
            <![CDATA[tar xf ${SRCDIR}/xkbcommon-${PKGVERSION}.tar.gz
]]>
        </unpack>
        <patch/>
        <build>
            <![CDATA[cd libxkbcommon-xkbcommon-${PKGVERSION}
	    jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
	    bash autogen.sh
	    ./configure --prefix=/usr --sysconfdir=/etc 
	    make -j $jobcount 
]]>
        </build>
        <install>
            <![CDATA[cd  libxkbcommon-xkbcommon-${PKGVERSION}
	    make install DESTDIR=${TGTDIR}
]]>
        </install>
        <clean>
            <![CDATA[rm -rf libxkbcommon-xkbcommon-${PKGVERSION}
]]>
        </clean>
    </package>
</llpackages>