<llpackages>
	<package 
		name="gtk-doc"
		version="1.28"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                           
				<pkg sha1="f48311fd3def5b393ebb32d5480a61ec6dfd2809">gtk-doc-1.28.tar.xz</pkg>
				<mirror>https://download.gnome.org/sources/gtk-doc/1.28/</mirror>
			</file>
			<manualcheck date="20150601" interval="120" page="https://download.gnome.org/sources/gtk-doc/" />
			<check>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gtk-doc/1.24/">
					<atext linktext="gtk-doc-1.24.1" />
					<atext linktext="gtk-doc-1.24.2" />
					<atext linktext="gtk-doc-1.24.3" />
					<atext linktext="gtk-doc-1.24.4" />
				</page>
				<page html="http://ftp2.nluug.nl/windowing/gnome/sources/gtk-doc/">
					<atext linktext="1.26" />
					<atext linktext="1.28" />
					<atext linktext="1.30" />
					<atext linktext="1.32" />
					<atext linktext="2.0" />
				</page>
			</check>
		</sources>
		<builddeps>
                        <dep>Python</dep>
                        <dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>diffutils</dep>
                        <dep>gawk</dep>
                        <dep>gcc</dep>
                        <dep>gettext</dep>
                        <dep>glib</dep>
                        <dep>glibc</dep>
                        <dep>grep</dep>
                        <dep>inetutils</dep>
                        <dep>itstool</dep>
                        <dep>libsigc++</dep>
                        <dep>libxml2</dep>
                        <dep>libxslt</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>openssl</dep>
                        <dep>perl</dep>
                        <dep>pkg-config</dep>
                        <dep>pygobject</dep>
                        <dep>sed</dep>
                        <dep>tar</dep>
                        <!-- <dep>vim</dep> -->
			<dep>docbook-xsl</dep>
			<dep>docbook-xml</dep>
			<dep>docbook-xml43</dep>
			<dep>docbook-xml44</dep>
                </builddeps>
		<unpack>
			<![CDATA[ 
			if [ -f ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2 ] ; then
				tar xjf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.bz2
			else
				tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			fi
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 2 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --prefix=/usr --sysconfdir=/etc 
			if [ -n "$DISTCC_POTENTIAL_HOSTS" ] ; then
				make -j $jobcount
			else
				make
			fi
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR}
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
