<llpackages>
	<package 
		name="ddrescue"
		version="1.23"
		class="user"
		install="destdir">
		<license>GPLv2</license>
		<sources>
			<file>                          
				<pkg sha1="c1a888ef250a994e78aae154f8c90efbc0b64f8b">ddrescue-1.23.tar.lz</pkg>
				<mirror>http://ftp.gnu.org/gnu/ddrescue/</mirror>
			</file>
			<manualcheck date="20170615" interval="180" page="http://ftp.gnu.org/gnu/ddrescue/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/ddrescue/">
					<atext linktext="ddrescue-1.24." />
					<atext linktext="ddrescue-1.23." />
					<atext linktext="ddrescue-1.24." />
					<atext linktext="ddrescue-1.22.1." />
					<atext linktext="ddrescue-1.22.2." />
					<atext linktext="ddrescue-2." />
				</page>
			</check>
		</sources>
		<builddeps>
			<dep>bash</dep>
                        <dep>binutils</dep>
                        <dep>coreutils</dep>
                        <dep>gcc</dep>
                        <dep>glibc</dep>
                        <dep>linux_headers</dep>
                        <dep>make</dep>
                        <dep>sed</dep>
		</builddeps>
		<unpack>
			<![CDATA[ 
			lunzip -c ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.lz | tar xf - 
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			jobcount=2
			if [ -n "$DISTCC_POTENTIAL_HOSTS"  ] ;  then 
				DISTCC_HOSTS="$DISTCC_POTENTIAL_HOSTS" 
				export DISTCC_HOSTS
				jobcount=` expr $DISTCC_HOSTCOUNT '*' 3 `
				export CC="distcc gcc"
				export CXX="distcc g++" 
			fi
			./configure --sysconfdir=/etc --prefix=/usr && make -j $jobcount
			]]>
		</build>
		<test />
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install DESTDIR=${TGTDIR} 
			]]>
		</install>
		<clean>
			<![CDATA[
			rm -rf  ${PKGNAME}-${PKGVERSION}
			]]>
		</clean>
	</package>
</llpackages>
