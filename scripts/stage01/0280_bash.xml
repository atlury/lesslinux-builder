<llpackages>
	<package 
		name="bash"
		version="4.3.30">
		<license>GPLv2</license>
		<sources>
			<file>                                                          
				<pkg sha1="33b1bcc5dca1b72f28b2baeca6efa0d422097964">bash-4.3.30.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/bash/</mirror>
			</file>
			<manualcheck date="20150529" interval="180" page="http://ftp.gnu.org/gnu/bash/" />
		</sources>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/tools --without-bash-malloc && make
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			ln -vsf bash /tools/bin/sh
			ln -vsf /tools/bin/bash ${CHROOTDIR}/bin/sh
			ln -vsf /tools/bin/bash ${CHROOTDIR}/bin/bash
			]]>
		</install>
	</package>
</llpackages>
