<llpackages>
	<package 
		name="tcl"
		version="8.6.5">
		<license>GPLv2</license>
		<sources>
			<file>                                                                          
				<pkg sha1="c3a50ea58dac00a3c7e83cb4a4651c40d0f55160">tcl8.6.5-src.tar.gz</pkg>
				<mirror>http://downloads.sourceforge.net/project/tcl/Tcl/8.6.5/</mirror>
			</file>
			<manualcheck date="20160629" interval="180" page="http://sourceforge.net/projects/tcl/" />
			<check>
				<page html="http://sourceforge.net/projects/tcl/files/">
					<atext linktext="tcl8.6.6" />
					<atext linktext="tcl8.6.7" />
					<atext linktext="tcl8.7" />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			tar xzf ${SRCDIR}/tcl${PKGVERSION}-src.tar.gz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[ 
			cd tcl${PKGVERSION}/unix
			./configure --prefix=/tools 
			JOBCOUNT=` grep -c  processor /proc/cpuinfo ` 
			make -j${JOBCOUNT}
			]]>
		</build>
		<install>
			<![CDATA[
			cd tcl${PKGVERSION}/unix
			make install && \
				chmod -v u+w /tools/lib/libtcl8.6.so &&\
				make install-private-headers && \
				ln -sfv tclsh8.6 /tools/bin/tclsh
			]]>
		</install>
	</package>
</llpackages>
