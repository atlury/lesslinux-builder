<llpackages>
	<package 
		name="binutils_pass2"
		version="2.26.1">
		<license>GPLv2</license>
		<sources>
			<file>                                                                 
				<pkg sha1="624cd377e3a8eef3db83a56ce289a60f556b3ec2">binutils-2.26.1.tar.bz2</pkg>
				<mirror>http://ftp.gnu.org/gnu/binutils/</mirror>
			</file>
			<manualcheck date="20160629" interval="180" page="http://ftp.gnu.org/gnu/binutils/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/binutils/">
					<atext linktext="binutils-2.26.4." />
					<atext linktext="binutils-2.26.2." />
					<atext linktext="binutils-2.26.3" />
					<atext linktext="binutils-2.27." />
					<atext linktext="binutils-2.28." />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			tar xjf ${SRCDIR}/binutils-${PKGVERSION}.tar.bz2
			mkdir binutils-build
			]]>
		</unpack>
		<!-- <patch>
			<![CDATA[ 
			cd binutils-${PKGVERSION}
			sed -i -e 's/@colophon/@@colophon/' -e 's/doc@cygnus.com/doc@@cygnus.com/' bfd/doc/bfd.texinfo
			]]>
		</patch> -->
		<build>
			<![CDATA[ 
			
			cd binutils-build
			CC=$LFS_TGT-gcc            \
			AR=$LFS_TGT-ar             \
			RANLIB=$LFS_TGT-ranlib     \
			../binutils-${PKGVERSION}/configure \
				--prefix=/tools        \
				--disable-nls \
				--with-lib-path=/tools/lib \
				--with-sysroot \
				--disable-werror
			make -j 4
			
			]]>
		</build>
		<install>
			<![CDATA[
			cd binutils-build
			make install
			make -C ld clean
			make -C ld LIB_PATH=/usr/lib:/lib
			cp -vf ld/ld-new /tools/bin
			]]>
		</install>
	</package>
</llpackages>
