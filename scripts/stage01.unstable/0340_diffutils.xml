<llpackages>
	<package 
		name="diffutils"
		version="3.5">
		<license>GPLv2</license>
		<sources>
			<file>                                                  
				<pkg sha1="1169cce8eaaf7290dc087d65db7ed75de0dceb93">diffutils-3.5.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/diffutils/</mirror>
			</file>
			<manualcheck date="20160823" interval="365" page="http://ftp.gnu.org/gnu/diffutils/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/diffutils/">
					<atext linktext="diffutils-3.6." />
					<atext linktext="diffutils-3.7." />
					<atext linktext="diffutils-3.8." />
					<atext linktext="diffutils-3.9." />
					<atext linktext="diffutils-4." />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			sed -i -e '/gets is a/d' ${PKGNAME}-${PKGVERSION}/lib/stdio.in.h
			]]>
		</patch>
		<build>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/tools
			make
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
