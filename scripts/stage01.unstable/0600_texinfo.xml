<llpackages>
	<package 
		name="texinfo"
		version="6.1">
		<license>GPLv2</license>
		<sources>
			<file>
				<pkg sha1="d39c2e35ddb0aff6ebdd323ce53729bd215534fa">texinfo-6.1.tar.xz</pkg>
				<mirror>http://ftp.gnu.org/gnu/texinfo/</mirror>
			</file>
			<manualcheck date="20160630" interval="120" page="http://ftp.gnu.org/gnu/texinfo/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/texinfo/">
					<atext linktext="texinfo-6.5" />
					<atext linktext="texinfo-6.2" />
					<atext linktext="texinfo-6.3" />
					<atext linktext="texinfo-6.4" />
					<atext linktext="texinfo-7" />
					<atext linktext="texinfo-8" />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			tar xJf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.xz
			]]>
		</unpack>
		<patch />
		<build>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/tools 
			JOBCOUNT=` grep -c  processor /proc/cpuinfo ` 
			make -j${JOBCOUNT}
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			make install
			]]>
		</install>
	</package>
</llpackages>
