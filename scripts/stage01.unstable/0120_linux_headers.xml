<llpackages>
	<package 
		name="linux_headers"
		version="3.15.4"
		>
		<license>GPLv2</license>
		<sources>
			<file>                                                                                                 
				<pkg sha1="f21a27b36ad7169596b0b809707f1442e6d2bb89">linux-3.15.tar.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<file>
				<pkg sha1="0d7c129934c0b1309f5fc6e7941b5fdc47c9f7b6">patch-3.15.4.xz</pkg>
				<mirror>http://www.kernel.org/pub/linux/kernel/v3.x/</mirror>
			</file>
			<manualcheck date="20140707" interval="60" page="http://www.kernel.org/" />
			<check>
				<page html="rsync://www.kernel.org/pub/linux/kernel/v3.x/">
					<atext linktext="patch-3.15.5." />
					<atext linktext="patch-3.15.6." />
					<atext linktext="patch-3.15.7." />
					<atext linktext="patch-3.16." />
					<atext linktext="patch-3.17." />
					<atext linktext="patch-3.18." />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			unxz -c ${SRCDIR}/linux-3.15.tar.xz | tar xf -
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			cd linux-3.15
			if [ -f ${SRCDIR}/patch-${PKGVERSION}.xz  ] ; then 
				unxz -c ${SRCDIR}/patch-${PKGVERSION}.xz | patch -p1
			fi
			cd ..
			mv -v linux-3.15 linux-${PKGVERSION}
			
			]]>
		</patch>
		<build>
			<![CDATA[ 
			cd linux-${PKGVERSION}
			make headers_check
			]]>
		</build>
		<install>
			<![CDATA[
			
			mkdir -p /tools/include
			cd linux-${PKGVERSION}
			make INSTALL_HDR_PATH=dest headers_install
			cp -rv dest/include/* /tools/include
			
			]]>
		</install>
	</package>
</llpackages>