<llpackages>
	<package 
		name="gettext"
		version="0.19.5.1">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="bec084bc9e2ecfb9a30ce17a68b71865449f6c12">gettext-0.19.5.1.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/gettext/</mirror>
			</file>
			<manualcheck date="20150823" interval="90" page="http://ftp.gnu.org/gnu/gettext/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/gettext/">
					<atext linktext="gettext-0.19.6." />
					<atext linktext="gettext-0.19.7." />
					<atext linktext="gettext-0.19.8." />
					<atext linktext="gettext-0.20." />
					<atext linktext="gettext-0.21." />
					<atext linktext="gettext-1." />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}/gettext-tools
			EMACS="no" ./configure --prefix=/tools --disable-shared
			make -C gnulib-lib
			make -C intl pluralx.c
			make -C src msgfmt
			make -C src msgmerge
			make -C src xgettext
			
			]]>
		</build>
		<install>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}/gettext-tools
			cp -v src/{msgfmt,msgmerge,xgettext} /tools/bin
			
			]]>
		</install>
	</package>
</llpackages>
