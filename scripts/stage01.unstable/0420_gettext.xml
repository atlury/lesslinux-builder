<llpackages>
	<package 
		name="gettext"
		version="0.19.3">
		<license>GPLv2</license>
		<sources>
			<file>    
				<pkg sha1="8a4614d5d797af98822b88858c17ad8b3ed4224f">gettext-0.19.3.tar.gz</pkg>
				<mirror>http://ftp.gnu.org/gnu/gettext/</mirror>
			</file>
			<manualcheck date="20141101" interval="90" page="http://ftp.gnu.org/gnu/gettext/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/gettext/">
					<atext linktext="gettext-0.19.4." />
					<atext linktext="gettext-0.19.5." />
					<atext linktext="gettext-0.19.6." />
					<atext linktext="gettext-0.20." />
					<atext linktext="gettext-0.21." />
					<atext linktext="gettext-1." />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
			
			tar xzf ${SRCDIR}/${PKGNAME}-${PKGVERSION}.tar.gz
			
			]]>
		</unpack>
		<build>
			<![CDATA[ 
			
			cd ${PKGNAME}-${PKGVERSION}/gettext-tools
			EMACS="no" ./configure --prefix=/tools --disable-shared
			make -C gnulib-lib
			make -C src msgfmt
			make -C src msgmerge
			make -C src xgettext
			
			]]>
		</build>
		<install>
			<![CDATA[
			
			cd ${PKGNAME}-${PKGVERSION}/gettext-tools
			cp -v src/{msgfmt,msgmerge,xgettext} /tools/bin
			
			]]>
		</install>
	</package>
</llpackages>
