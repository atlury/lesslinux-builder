		<build>
			<![CDATA[ 
			cd ${PKGNAME}-${PKGVERSION}
			./configure --prefix=/tools --enable-static 
			JOBCOUNT=` grep -c  processor /proc/cpuinfo ` 
			make -j${JOBCOUNT} # LDFLAGS="-static"
			]]>
		</build>
		<install>
			<![CDATA[
			cd ${PKGNAME}-${PKGVERSION}
			install -m 0755 strace /tools/bin
			]]>
		</install>
