<llpackages>
	<package 
		name="libstdcplusplus"
		version="7.1.0"
		buildas="unpriv">
		<license>GPLv2</license>
		<sources>
				<file>                                                                                  
				<pkg sha1="9f1e907f27eadefe7d5f7567c09e17805d9c8837">gcc-7.1.0.tar.bz2</pkg>
				<mirror>ftp://ftp.mpi-sb.mpg.de/pub/gnu/mirror/gcc.gnu.org/pub/gcc/releases/gcc-7.1.0/</mirror>
			</file>
			<manualcheck date="20170607" interval="120" page="http://ftp.gnu.org/gnu/gcc/" />
			<check>
				<page html="http://ftp.gnu.org/gnu/gcc/">
					<atext linktext="gcc-7.1.1" />
					<atext linktext="gcc-7.1.2" />
					<atext linktext="gcc-7.1.3" />
					<atext linktext="gcc-7.2."/>
					<atext linktext="gcc-7.3." />
					<atext linktext="gcc-8." />
				</page>
			</check>
		</sources>
		<unpack>
			<![CDATA[ 
		
			tar xjf ${SRCDIR}/gcc-${PKGVERSION}.tar.bz2
			mkdir gcc-build 
		
			]]>
		</unpack>
		<patch>
			<![CDATA[ 
			
			echo "Nothing to patch."
			
			]]>
		</patch>
		<chown>
			<![CDATA[ 
			
			chown -R ${UNPRIV} gcc-build
			chown -R ${UNPRIV} gcc-${PKGVERSION}
			
			]]>
		</chown>
		<build>
			<![CDATA[ 
		
cd gcc-build
../gcc-${PKGVERSION}/libstdc++-v3/configure \
    --host=$LFS_TGT                      \
    --prefix=/tools                      \
    --disable-multilib                   \
    --disable-nls                        \
    --disable-libstdcxx-threads          \
    --disable-libstdcxx-pch              \
    --with-gxx-include-dir=/tools/$LFS_TGT/include/c++/${PKGVERSION}
make -j 4

			]]>
		</build>
		<install>
			<![CDATA[
			
			cd gcc-build
			make install
			
			]]>
		</install>
	</package>
</llpackages>
