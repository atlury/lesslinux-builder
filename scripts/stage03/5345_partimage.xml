<llpackages>
	<package 
		name="partimage"
		version="0.6.9"
		class="user"
		>
	</package>
	<dirs>
		<dir mode="0750">/etc/sudoers.lax.d</dir>
		<dir mode="0750">/etc/sudoers.strict.d</dir>
	</dirs>
	<scripts>
		<scriptdata location="/etc/sudoers.lax.d/partimage" mode="0440" group="0" owner="0">
		<![CDATA[
surfer  ALL = NOPASSWD: /usr/sbin/partimage
		]]>
		</scriptdata>
		<scriptdata location="/etc/sudoers.strict.d/partimage" mode="0440" group="0" owner="0">
		<![CDATA[
surfer  ALL = /usr/sbin/partimage
		]]>
		</scriptdata>
	</scripts>
</llpackages>
