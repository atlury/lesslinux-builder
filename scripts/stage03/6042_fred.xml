<llpackages>
	<package name='fred'></package>
	<dirs>
		<dir mode="0750">/etc/sudoers.lax.d</dir>
		<dir mode="0750">/etc/sudoers.strict.d</dir>
	</dirs>
	<scripts>
		<scriptdata location="/etc/sudoers.lax.d/fred" mode="0440" group="0" owner="0">
		<![CDATA[
surfer  ALL = NOPASSWD: /usr/sbin/fred
		]]>
		</scriptdata>
		<scriptdata location="/etc/sudoers.strict.d/fred" mode="0440" group="0" owner="0">
		<![CDATA[
surfer  ALL = /usr/sbin/fred
		]]>
		</scriptdata>
	</scripts>
</llpackages>
