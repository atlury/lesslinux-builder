<llpackages>
	<package 
		name="FileZilla"
		class="user"
		>
	</package>
	<dirs>
		<dir mode="0750">/etc/sudoers.lax.d</dir>
		<dir mode="0750">/etc/sudoers.strict.d</dir>
	</dirs>
	<scripts>
		<scriptdata location="/etc/sudoers.lax.d/filezilla" mode="0440" group="0" owner="0">
		<![CDATA[
surfer   ALL = NOPASSWD: /opt/bin/filezilla_smack
		]]>
		</scriptdata>
		<scriptdata location="/etc/sudoers.strict.d/filezilla" mode="0440" group="0" owner="0">
		<![CDATA[
surfer   ALL = NOPASSWD: /opt/bin/filezilla_smack
		]]>
		</scriptdata>
	</scripts>
</llpackages>
