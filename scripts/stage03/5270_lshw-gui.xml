<llpackages>
	<package name="lshw-gui" />
	<dirs>
		<dir mode="0750">/etc/sudoers.lax.d</dir>
		<dir mode="0750">/etc/sudoers.strict.d</dir>
	</dirs>
	<scripts>
		<scriptdata location="/etc/sudoers.lax.d/lshw-gtk" mode="0440" group="0" owner="0">
		<![CDATA[
surfer  ALL = NOPASSWD: /usr/sbin/lshw
surfer  ALL = NOPASSWD: /usr/sbin/gtk-lshw
		]]>
		</scriptdata>
		<scriptdata location="/etc/sudoers.strict.d/lshw-gtk" mode="0440" group="0" owner="0">
		<![CDATA[
surfer  ALL = /usr/sbin/lshw
surfer  ALL = /usr/sbin/gtk-lshw
		]]>
		</scriptdata>
	</scripts>
</llpackages>
